<Page
    x:Class="Dotahold.Views.MatchInfoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dotahold.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ToolkitUICtrl="using:Microsoft.Toolkit.Uwp.UI.Controls" 
    xmlns:ToolkitMedia="using:Microsoft.Toolkit.Uwp.UI.Media" 
    xmlns:cvt="using:Dotahold.Converters"
    xmlns:ui="using:Dotahold.UI" 
    xmlns:models="using:Dotahold.Models" 
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Uno" 
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d" NavigationCacheMode="Required" Background="Transparent" d:RequestedTheme="Dark">

    <Grid>
        <!--比赛数据-->
        <Grid Grid.Row="3" Visibility="{x:Bind ViewModel.bLoadingOneMatchInfo,Mode=OneWay,Converter={StaticResource Bool2Vis},ConverterParameter=-}">
            <ScrollViewer x:Name="MatchInfoScrollViewer" Grid.Row="1" VerticalScrollBarVisibility="Auto" Visibility="{x:Bind ViewModel.CurrentMatchInfo,Mode=OneWay,Converter={StaticResource Null2Vis}}">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch">
                    <ListView Margin="12,8"
                              ScrollViewer.VerticalScrollMode="Disabled"
                              ScrollViewer.VerticalScrollBarVisibility="Hidden"
                              ScrollViewer.HorizontalScrollMode="Disabled"
                              ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                              HorizontalContentAlignment="Stretch" HorizontalAlignment="Stretch"
                              SelectionMode="None" IsItemClickEnabled="True" ItemClick="OnClickPlayer"
                              ItemsSource="{x:Bind ViewModel.CurrentMatchInfo.players,Mode=OneWay}">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:Player">
                                <Grid Height="78" MinHeight="64" Margin="-12,2,-8,2" CornerRadius="4" HorizontalAlignment="Stretch" Background="{ThemeResource MATCHPLAYER_LISTITEM_BK}">
                                    <!--物品-->
                                    <Grid Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" Background="Transparent">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,4,0,0" HorizontalAlignment="Right" VerticalAlignment="Center">
                                            <!--熊灵-->
                                            <Grid Height="26" Width="46" CornerRadius="4" Margin="0,0,8,0" ToolTipService.ToolTip="Spirit Bear" Visibility="{x:Bind hero_id,Mode=OneWay,Converter={StaticResource Eql2Vis},ConverterParameter=80}">
                                                <Grid.Background>
                                                    <ImageBrush>
                                                        <ImageBrush.ImageSource>
                                                            <BitmapImage UriSource="/Assets/Icons/Hero/lone_druid_bear.png" DecodePixelHeight="26" DecodePixelType="Logical"/>
                                                        </ImageBrush.ImageSource>
                                                    </ImageBrush>
                                                </Grid.Background>
                                                <Button HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderThickness="0" Background="Transparent">
                                                    <Button.Flyout>
                                                        <Flyout Placement="Right">
                                                            <Flyout.FlyoutPresenterStyle>
                                                                <Style TargetType="FlyoutPresenter">
                                                                    <Setter Property="CornerRadius" Value="6" />
                                                                    <Setter Property="IsDefaultShadowEnabled" Value="False"/>
                                                                    <Setter Property="Background" Value="{ThemeResource APPLICATION_BK}"/>
                                                                </Style>
                                                            </Flyout.FlyoutPresenterStyle>
                                                            <Grid HorizontalAlignment="Center">
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="Auto"/>
                                                                    <RowDefinition Height="Auto"/>
                                                                    <RowDefinition Height="Auto"/>
                                                                    <RowDefinition Height="Auto"/>
                                                                </Grid.RowDefinitions>
                                                                <Border Grid.Row="0" Height="48" Width="48" CornerRadius="4" HorizontalAlignment="Right" VerticalAlignment="Center">
                                                                    <Border.Background>
                                                                        <ImageBrush>
                                                                            <ImageBrush.ImageSource>
                                                                                <BitmapImage UriSource="/Assets/Icons/Hero/lone_druid_spirit_bear_ability.png" DecodePixelHeight="48" DecodePixelType="Logical"/>
                                                                            </ImageBrush.ImageSource>
                                                                        </ImageBrush>
                                                                    </Border.Background>
                                                                </Border>
                                                                <TextBlock Grid.Row="0" Text="Spirit Bear" FontFamily="/Fonts/Reaver-Bold.ttf#Reaver" FontSize="14" FontWeight="Medium" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="2,0,0,0" CharacterSpacing="20"/>
                                                                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                                    <Border Height="32" Width="44" Margin="0,0,0,0" CornerRadius="4" Background="{ThemeResource MATCHPLAYER_ITEM_BK}" ToolTipService.ToolTip="{x:Bind SpiritBear.sNameItem0,Mode=OneWay}">
                                                                        <Image Source="{x:Bind SpiritBear.Item0ImageSource,Mode=OneWay}" Height="32" Width="44" Stretch="UniformToFill"/>
                                                                    </Border>
                                                                    <Border Height="32" Width="44" Margin="8,0,8,0" CornerRadius="4" Background="{ThemeResource MATCHPLAYER_ITEM_BK}" ToolTipService.ToolTip="{x:Bind SpiritBear.sNameItem1,Mode=OneWay}">
                                                                        <Image Source="{x:Bind SpiritBear.Item1ImageSource,Mode=OneWay}" Height="32" Width="44" Stretch="UniformToFill"/>
                                                                    </Border>
                                                                    <Border Height="32" Width="44" Margin="0,0,0,0" CornerRadius="4" Background="{ThemeResource MATCHPLAYER_ITEM_BK}" ToolTipService.ToolTip="{x:Bind SpiritBear.sNameItem2,Mode=OneWay}">
                                                                        <Image Source="{x:Bind SpiritBear.Item2ImageSource,Mode=OneWay}" Height="32" Width="44" Stretch="UniformToFill"/>
                                                                    </Border>
                                                                </StackPanel>
                                                                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,6,0,4">
                                                                    <Border Height="32" Width="44" Margin="0,0,0,0" CornerRadius="4" Background="{ThemeResource MATCHPLAYER_ITEM_BK}" ToolTipService.ToolTip="{x:Bind SpiritBear.sNameItem3,Mode=OneWay}">
                                                                        <Image Source="{x:Bind SpiritBear.Item3ImageSource,Mode=OneWay}" Height="32" Width="44" Stretch="UniformToFill"/>
                                                                    </Border>
                                                                    <Border Height="32" Width="44" Margin="8,0,8,0" CornerRadius="4" Background="{ThemeResource MATCHPLAYER_ITEM_BK}" ToolTipService.ToolTip="{x:Bind SpiritBear.sNameItem4,Mode=OneWay}">
                                                                        <Image Source="{x:Bind SpiritBear.Item4ImageSource,Mode=OneWay}" Height="32" Width="44" Stretch="UniformToFill"/>
                                                                    </Border>
                                                                    <Border Height="32" Width="44" Margin="0,0,0,0" CornerRadius="4" Background="{ThemeResource MATCHPLAYER_ITEM_BK}" ToolTipService.ToolTip="{x:Bind SpiritBear.sNameItem5,Mode=OneWay}">
                                                                        <Image Source="{x:Bind SpiritBear.Item5ImageSource,Mode=OneWay}" Height="32" Width="44" Stretch="UniformToFill"/>
                                                                    </Border>
                                                                </StackPanel>
                                                                <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,4,0,0" HorizontalAlignment="Right" VerticalAlignment="Center">
                                                                    <Border Margin="0,0,2,0" Width="26" Height="26" CornerRadius="13" Background="{ThemeResource MATCHPLAYER_ITEM_BK}" ToolTipService.ToolTip="{x:Bind SpiritBear.sNameItemN,Mode=OneWay}">
                                                                        <Image Width="35" Height="26" Source="{x:Bind SpiritBear.ItemNImageSource,Mode=OneWay}" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="UniformToFill"/>
                                                                    </Border>
                                                                    <Border Height="26" Width="35" Margin="4,0,0,0" CornerRadius="4" Background="{ThemeResource MATCHPLAYER_ITEM_BK}" ToolTipService.ToolTip="{x:Bind SpiritBear.sNameItemB0,Mode=OneWay}">
                                                                        <Image Source="{x:Bind SpiritBear.ItemB0ImageSource,Mode=OneWay}" Height="26" Width="35" Stretch="UniformToFill" Opacity="0.8"/>
                                                                    </Border>
                                                                    <Border Height="26" Width="35" Margin="4,0,0,0" CornerRadius="4" Background="{ThemeResource MATCHPLAYER_ITEM_BK}" ToolTipService.ToolTip="{x:Bind SpiritBear.sNameItemB1,Mode=OneWay}">
                                                                        <Image Source="{x:Bind SpiritBear.ItemB1ImageSource,Mode=OneWay}" Height="26" Width="35" Stretch="UniformToFill" Opacity="0.8"/>
                                                                    </Border>
                                                                    <Border Height="26" Width="35" Margin="4,0,0,0" CornerRadius="4" Background="{ThemeResource MATCHPLAYER_ITEM_BK}" ToolTipService.ToolTip="{x:Bind SpiritBear.sNameItemB2,Mode=OneWay}">
                                                                        <Image Source="{x:Bind SpiritBear.ItemB2ImageSource,Mode=OneWay}" Height="26" Width="35" Stretch="UniformToFill" Opacity="0.8"/>
                                                                    </Border>
                                                                </StackPanel>
                                                            </Grid>
                                                        </Flyout>
                                                    </Button.Flyout>
                                                </Button>
                                            </Grid>
                                            <Grid Width="1" Height="20" Background="{ThemeResource APPLICATION_FR}" Opacity="0.1" Visibility="{x:Bind hero_id,Mode=OneWay,Converter={StaticResource Eql2Vis},ConverterParameter=80}"/>
                                        </StackPanel>
                                    </Grid>

                                    <!--开黑标识-->
                                    <Grid Visibility="{x:Bind iPartyId,Mode=OneWay,Converter={StaticResource Int2Vis}}">
                                        <Border Grid.Column="0" Height="18" Padding="2,0" CornerRadius="0,4,4,0" Background="#66bb6a" HorizontalAlignment="Left" VerticalAlignment="Center" Visibility="{x:Bind isRadiant,Mode=OneWay,Converter={StaticResource Bool2Vis}}" ToolTipService.ToolTip="Party">
                                            <TextBlock FontFamily="Consolas" FontWeight="Bold" FontSize="12" Text="{x:Bind iPartyId,Mode=OneWay}" Foreground="{ThemeResource APPLICATION_BK}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <Border Grid.Column="0" Height="18" Padding="2,0" CornerRadius="0,4,4,0" Background="#ff4c4c" HorizontalAlignment="Left" VerticalAlignment="Center" Visibility="{x:Bind isRadiant,Mode=OneWay,Converter={StaticResource Bool2Vis},ConverterParameter=-}" ToolTipService.ToolTip="Party">
                                            <TextBlock FontFamily="Consolas" FontWeight="Bold" FontSize="12" Text="{x:Bind iPartyId,Mode=OneWay}" Foreground="{ThemeResource APPLICATION_BK}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </Grid>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <!--数据对比-->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                        <FontIcon Glyph="&#xE8A4;" Margin="24,0,8,0" FontSize="20"/>
                        <TextBlock Text="Performances" FontWeight="Bold" Margin="0,6" FontSize="16" FontFamily="/Fonts/Reaver-Bold.ttf#Reaver" CharacterSpacing="20"/>
                    </StackPanel>
                    <Grid HorizontalAlignment="Stretch" Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid x:Name="DamagePerfCompareGrid" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="1" Grid.RowSpan="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Border HorizontalAlignment="Stretch" VerticalAlignment="Stretch" CornerRadius="4" Height="32" Margin="16,0" Background="{ThemeResource MATCHPLAYER_LISTITEM_BK}">
                                <TextBlock Text="Damage Ratio" FontWeight="Medium" Opacity="0.7" CharacterSpacing="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <muxc:ItemsRepeater Grid.Row="1" Margin="16,8" ItemsSource="{x:Bind ViewModel.CurrentMatchDamagePerformCompare,Mode=OneWay}">
                                <muxc:ItemsRepeater.Layout>
                                    <muxc:StackLayout Orientation="Vertical" Spacing="8"/>
                                </muxc:ItemsRepeater.Layout>
                                <DataTemplate x:DataType="models:DotaMatchPerformCompareModel">
                                    <Grid Margin="8,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="42"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="42"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" FontWeight="Medium" FontSize="12" Opacity="0.7" CharacterSpacing="60" VerticalAlignment="Center">
                                            <Run Text="{x:Bind LeftValue,Mode=OneWay}"/>
                                            <Run Text="%"/>
                                        </TextBlock>
                                        <muxc:ProgressBar Grid.Column="1" Foreground="{x:Bind LeftPlayerSlot,Mode=OneWay,Converter={StaticResource Slot2Color}}" Background="{ThemeResource MATCHPLAYER_LISTITEM_BD}" Maximum="100" Value="{x:Bind LeftValue,Mode=OneWay}" FlowDirection="RightToLeft" VerticalAlignment="Center"/>
                                        <Border Grid.Column="2" Height="32" Width="32" CornerRadius="16" Margin="8,0,2,0" VerticalAlignment="Center">
                                            <Border.Background>
                                                <ImageBrush ImageSource="{x:Bind LeftImageSource,Mode=OneWay}" Stretch="UniformToFill"/>
                                            </Border.Background>
                                        </Border>
                                        <Border Grid.Column="3" Height="32" Width="32" CornerRadius="16" Margin="2,0,8,0" VerticalAlignment="Center">
                                            <Border.Background>
                                                <ImageBrush ImageSource="{x:Bind RightImageSource,Mode=OneWay}" Stretch="UniformToFill"/>
                                            </Border.Background>
                                        </Border>
                                        <muxc:ProgressBar Grid.Column="4" Foreground="{x:Bind RightPlayerSlot,Mode=OneWay,Converter={StaticResource Slot2Color}}" Background="{ThemeResource MATCHPLAYER_LISTITEM_BD}" Maximum="100" Value="{x:Bind RightValue,Mode=OneWay}" FlowDirection="LeftToRight" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="5" FontWeight="Medium" FontSize="12" Opacity="0.7" CharacterSpacing="60" VerticalAlignment="Center">
                                            <Run Text="{x:Bind RightValue,Mode=OneWay}"/>
                                            <Run Text="%"/>
                                        </TextBlock>
                                    </Grid>
                                </DataTemplate>
                            </muxc:ItemsRepeater>
                        </Grid>
                        <Grid x:Name="TeamfightPerfCompareGrid" Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="1" Grid.RowSpan="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Border HorizontalAlignment="Stretch" VerticalAlignment="Stretch" CornerRadius="4" Height="32" Margin="16,0" Background="{ThemeResource MATCHPLAYER_LISTITEM_BK}">
                                <TextBlock Text="Teamfight Ratio" FontWeight="Medium" Opacity="0.7" CharacterSpacing="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <muxc:ItemsRepeater Grid.Row="1" Margin="16,8" ItemsSource="{x:Bind ViewModel.CurrentMatchTeamfightPerformCompare,Mode=OneWay}">
                                <muxc:ItemsRepeater.Layout>
                                    <muxc:StackLayout Orientation="Vertical" Spacing="8"/>
                                </muxc:ItemsRepeater.Layout>
                                <DataTemplate x:DataType="models:DotaMatchPerformCompareModel">
                                    <Grid Margin="8,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="42"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="42"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" FontWeight="Medium" FontSize="12" Opacity="0.7" CharacterSpacing="60" VerticalAlignment="Center">
                                            <Run Text="{x:Bind LeftValue,Mode=OneWay}"/>
                                            <Run Text="%"/>
                                        </TextBlock>
                                        <muxc:ProgressBar Grid.Column="1" Foreground="{x:Bind LeftPlayerSlot,Mode=OneWay,Converter={StaticResource Slot2Color}}" Background="{ThemeResource MATCHPLAYER_LISTITEM_BD}" Maximum="100" Value="{x:Bind LeftValue,Mode=OneWay}" FlowDirection="RightToLeft" VerticalAlignment="Center"/>
                                        <Border Grid.Column="2" Height="32" Width="32" CornerRadius="16" Margin="8,0,2,0" VerticalAlignment="Center">
                                            <Border.Background>
                                                <ImageBrush ImageSource="{x:Bind LeftImageSource,Mode=OneWay}" Stretch="UniformToFill"/>
                                            </Border.Background>
                                        </Border>
                                        <Border Grid.Column="3" Height="32" Width="32" CornerRadius="16" Margin="2,0,8,0" VerticalAlignment="Center">
                                            <Border.Background>
                                                <ImageBrush ImageSource="{x:Bind RightImageSource,Mode=OneWay}" Stretch="UniformToFill"/>
                                            </Border.Background>
                                        </Border>
                                        <muxc:ProgressBar Grid.Column="4" Foreground="{x:Bind RightPlayerSlot,Mode=OneWay,Converter={StaticResource Slot2Color}}" Background="{ThemeResource MATCHPLAYER_LISTITEM_BD}" Maximum="100" Value="{x:Bind RightValue,Mode=OneWay}" FlowDirection="LeftToRight" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="5" FontWeight="Medium" FontSize="12" Opacity="0.7" CharacterSpacing="60" VerticalAlignment="Center">
                                            <Run Text="{x:Bind RightValue,Mode=OneWay}"/>
                                            <Run Text="%"/>
                                        </TextBlock>
                                    </Grid>
                                </DataTemplate>
                            </muxc:ItemsRepeater>
                        </Grid>
                    </Grid>

                    <!--天辉优势图-->
                    <Grid Margin="0,12,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <ToggleButton x:Name="RadiantAdvToggleButton" IsChecked="False" Margin="16,0,16,0" HorizontalContentAlignment="Stretch" HorizontalAlignment="Stretch" VerticalAlignment="Center" Checked="OnRadiantAdvToggleChecked">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <FontIcon Grid.Column="0" Glyph="&#xE9D2;" Margin="12,0,8,0" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="Radiant Advantage" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Bold" Margin="0,6" FontSize="16" FontFamily="/Fonts/Reaver-Bold.ttf#Reaver" TextTrimming="CharacterEllipsis" CharacterSpacing="20"/>
                                <FontIcon Grid.Column="2" Margin="2,0,12,0" Glyph="&#xE010;" FontSize="18" FontWeight="Bold" HorizontalAlignment="Right" VerticalAlignment="Center" Visibility="{x:Bind RadiantAdvToggleButton.IsChecked,Mode=OneWay,Converter={StaticResource Bool2Vis},ConverterParameter=-}"/>
                                <FontIcon Grid.Column="2" Margin="2,0,12,0" Glyph="&#xE011;" FontSize="18" FontWeight="Bold" HorizontalAlignment="Right" VerticalAlignment="Center" Visibility="{x:Bind RadiantAdvToggleButton.IsChecked,Mode=OneWay,Converter={StaticResource Bool2Vis}}"/>
                            </Grid>
                        </ToggleButton>
                        <Grid Grid.Row="1" Visibility="{x:Bind RadiantAdvToggleButton.IsChecked,Mode=OneWay,Converter={StaticResource Bool2Vis}}">
                            <lvc:CartesianChart DataContext="{x:Bind ViewModel}" Series="{Binding RadiantAdvantageSeries,Mode=OneWay}" 
                                                XAxes="{Binding XAxes}" YAxes="{Binding YAxes}" Sections="{Binding RadiantAdvSections}"
                                                DrawMarginFrame="{Binding Frame}" Margin="16,16,24,8" Height="320" CornerRadius="8" 
                                                Visibility="{x:Bind ViewModel.bHaveRadiantAdv,Mode=OneWay,Converter={StaticResource Bool2Vis}}"/>
                            <StackPanel Margin="0,16,0,12" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal" Visibility="{x:Bind ViewModel.bHaveRadiantAdv,Mode=OneWay,Converter={StaticResource Bool2Vis},ConverterParameter=-}">
                                <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE928;" Opacity="0.7" FontSize="24" VerticalAlignment="Center"/>
                                <StackPanel Margin="12,0,0,0" Orientation="Vertical">
                                    <TextBlock Text="The replay for this match has not yet been parsed." Opacity="0.8" FontSize="15" FontWeight="Medium"/>
                                    <HyperlinkButton Padding="0" Click="OnClickVisitWebsite">
                                        <HyperlinkButton.Content>
                                            <TextBlock Text="Parse this match on OpenDota"/>
                                        </HyperlinkButton.Content>
                                    </HyperlinkButton>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Grid>

                    <!--玩家经济数据走势图-->
                    <Grid Margin="0,12,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <ToggleButton x:Name="PlayersGoldToggleButton" IsChecked="False" Margin="16,0,16,0" HorizontalContentAlignment="Stretch" HorizontalAlignment="Stretch" VerticalAlignment="Center" Checked="OnPlayersGoldToggleChecked">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <FontIcon Grid.Column="0" Glyph="&#xEAFC;" Margin="12,0,8,0" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="Gold Graph" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Bold" Margin="0,6" FontSize="16" FontFamily="/Fonts/Reaver-Bold.ttf#Reaver" TextTrimming="CharacterEllipsis" CharacterSpacing="20"/>
                                <FontIcon Grid.Column="2" Margin="2,0,12,0" Glyph="&#xE010;" FontSize="18" FontWeight="Bold" HorizontalAlignment="Right" VerticalAlignment="Center" Visibility="{x:Bind PlayersGoldToggleButton.IsChecked,Mode=OneWay,Converter={StaticResource Bool2Vis},ConverterParameter=-}"/>
                                <FontIcon Grid.Column="2" Margin="2,0,12,0" Glyph="&#xE011;" FontSize="18" FontWeight="Bold" HorizontalAlignment="Right" VerticalAlignment="Center" Visibility="{x:Bind PlayersGoldToggleButton.IsChecked,Mode=OneWay,Converter={StaticResource Bool2Vis}}"/>
                            </Grid>
                        </ToggleButton>
                        <Grid Grid.Row="1" Visibility="{x:Bind PlayersGoldToggleButton.IsChecked,Mode=OneWay,Converter={StaticResource Bool2Vis}}">
                            <lvc:CartesianChart DataContext="{x:Bind ViewModel}" Series="{Binding PlayersGoldSeries,Mode=OneWay}"
                                                YAxes="{Binding YAxes}" Sections="{Binding PlayersGoldXPSections}" DrawMarginFrame="{Binding Frame}"
                                                Margin="16,16,24,8" Height="320" CornerRadius="8"
                                                Visibility="{x:Bind ViewModel.bHavePlayersGoldSeries,Mode=OneWay,Converter={StaticResource Bool2Vis}}"/>
                            <StackPanel Margin="0,16,0,12" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal" Visibility="{x:Bind ViewModel.bHaveRadiantAdv,Mode=OneWay,Converter={StaticResource Bool2Vis},ConverterParameter=-}">
                                <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE928;" Opacity="0.7" FontSize="24" VerticalAlignment="Center"/>
                                <StackPanel Margin="12,0,0,0" Orientation="Vertical">
                                    <TextBlock Text="The replay for this match has not yet been parsed." Opacity="0.8" FontSize="15" FontWeight="Medium"/>
                                    <HyperlinkButton Padding="0" Click="OnClickVisitWebsite">
                                        <HyperlinkButton.Content>
                                            <TextBlock Text="Parse this match on OpenDota"/>
                                        </HyperlinkButton.Content>
                                    </HyperlinkButton>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Grid>

                    <!--玩家经验数据走势图-->
                    <Grid Margin="0,12,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <ToggleButton x:Name="PlayersExpToggleButton" IsChecked="False" Margin="16,0,16,0" HorizontalContentAlignment="Stretch" HorizontalAlignment="Stretch" VerticalAlignment="Center" Checked="OnPlayersExpToggleChecked">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <FontIcon Grid.Column="0" Glyph="&#xEAFC;" Margin="12,0,8,0" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="Experience Graph" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Bold" Margin="0,6" FontSize="16" FontFamily="/Fonts/Reaver-Bold.ttf#Reaver" TextTrimming="CharacterEllipsis" CharacterSpacing="20"/>
                                <FontIcon Grid.Column="2" Margin="2,0,12,0" Glyph="&#xE010;" FontSize="18" FontWeight="Bold" HorizontalAlignment="Right" VerticalAlignment="Center" Visibility="{x:Bind PlayersExpToggleButton.IsChecked,Mode=OneWay,Converter={StaticResource Bool2Vis},ConverterParameter=-}"/>
                                <FontIcon Grid.Column="2" Margin="2,0,12,0" Glyph="&#xE011;" FontSize="18" FontWeight="Bold" HorizontalAlignment="Right" VerticalAlignment="Center" Visibility="{x:Bind PlayersExpToggleButton.IsChecked,Mode=OneWay,Converter={StaticResource Bool2Vis}}"/>
                            </Grid>
                        </ToggleButton>
                        <Grid Grid.Row="1" Visibility="{x:Bind PlayersExpToggleButton.IsChecked,Mode=OneWay,Converter={StaticResource Bool2Vis}}">
                            <lvc:CartesianChart DataContext="{x:Bind ViewModel}" Series="{Binding PlayersXpSeries,Mode=OneWay}"
                                                YAxes="{Binding YAxes}" Sections="{Binding PlayersGoldXPSections}" DrawMarginFrame="{Binding Frame}"
                                                Margin="16,16,24,8" Height="320" CornerRadius="8" 
                                                Visibility="{x:Bind ViewModel.bHavePlayersXpSeries,Mode=OneWay,Converter={StaticResource Bool2Vis}}"/>
                            <StackPanel Margin="0,16,0,12" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal" Visibility="{x:Bind ViewModel.bHaveRadiantAdv,Mode=OneWay,Converter={StaticResource Bool2Vis},ConverterParameter=-}">
                                <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE928;" Opacity="0.7" FontSize="24" VerticalAlignment="Center"/>
                                <StackPanel Margin="12,0,0,0" Orientation="Vertical">
                                    <TextBlock Text="The replay for this match has not yet been parsed." Opacity="0.8" FontSize="15" FontWeight="Medium"/>
                                    <HyperlinkButton Padding="0" Click="OnClickVisitWebsite">
                                        <HyperlinkButton.Content>
                                            <TextBlock Text="Parse this match on OpenDota"/>
                                        </HyperlinkButton.Content>
                                    </HyperlinkButton>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Grid>

                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!--加载中-->
        <Grid Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center" Height="56" Width="96" CornerRadius="6"
              Visibility="{x:Bind ViewModel.bLoadingOneMatchInfo,Mode=OneWay}">
            <Grid.Background>
                <AcrylicBrush BackgroundSource="Backdrop" FallbackColor="{ThemeResource APPLICATION_BK}" TintColor="Transparent" />
            </Grid.Background>
            <muxc:ProgressRing Height="28" Width="28" Foreground="{ThemeResource APPLICATION_FR}"
                               IsActive="{x:Bind ViewModel.bLoadingOneMatchInfo,Mode=OneWay}"/>
        </Grid>

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <!--大尺寸界面，左右分布-->
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1200"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="DamagePerfCompareGrid.(Grid.Column)" Value="0"/>
                        <Setter Target="DamagePerfCompareGrid.(Grid.Row)" Value="0"/>
                        <Setter Target="DamagePerfCompareGrid.(Grid.ColumnSpan)" Value="1"/>
                        <Setter Target="DamagePerfCompareGrid.(Grid.RowSpan)" Value="2"/>
                        <Setter Target="TeamfightPerfCompareGrid.(Grid.Column)" Value="1"/>
                        <Setter Target="TeamfightPerfCompareGrid.(Grid.Row)" Value="0"/>
                        <Setter Target="TeamfightPerfCompareGrid.(Grid.ColumnSpan)" Value="1"/>
                        <Setter Target="TeamfightPerfCompareGrid.(Grid.RowSpan)" Value="2"/>
                    </VisualState.Setters>
                </VisualState>
                <!--小尺寸界面，上下分布-->
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="DamagePerfCompareGrid.(Grid.Column)" Value="0"/>
                        <Setter Target="DamagePerfCompareGrid.(Grid.Row)" Value="0"/>
                        <Setter Target="DamagePerfCompareGrid.(Grid.ColumnSpan)" Value="2"/>
                        <Setter Target="DamagePerfCompareGrid.(Grid.RowSpan)" Value="1"/>
                        <Setter Target="TeamfightPerfCompareGrid.(Grid.Column)" Value="0"/>
                        <Setter Target="TeamfightPerfCompareGrid.(Grid.Row)" Value="1"/>
                        <Setter Target="TeamfightPerfCompareGrid.(Grid.ColumnSpan)" Value="2"/>
                        <Setter Target="TeamfightPerfCompareGrid.(Grid.RowSpan)" Value="1"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</Page>
