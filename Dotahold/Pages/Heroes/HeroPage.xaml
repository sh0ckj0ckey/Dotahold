<Page
    x:Class="Dotahold.Pages.Heroes.HeroPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dotahold.Pages.Heroes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:community="using:CommunityToolkit.WinUI"
    xmlns:communityMedia="using:CommunityToolkit.WinUI.Media"
    xmlns:communityAnimations="using:CommunityToolkit.WinUI.Animations"
    xmlns:models="using:Dotahold.Models"
    xmlns:converters="using:Dotahold.Converters"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:StringArrayToStringConverter x:Key="StringArrayToStringConverter"/>
        <converters:EqualToVisibilityConverter x:Key="EqualToVisibilityConverter"/>
    </Page.Resources>

    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="256"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Opacity="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Border.Background>
                <ImageBrush Stretch="UniformToFill" ImageSource="{x:Bind _heroModel.HeroImage.Image,Mode=OneWay}"/>
            </Border.Background>
            <communityAnimations:Implicit.ShowAnimations>
                <communityAnimations:OpacityAnimation To="1" Duration="0:0:0.3"/>
            </communityAnimations:Implicit.ShowAnimations>
        </Border>
        <Grid Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.Background>
                <AcrylicBrush AlwaysUseFallback="False" BackgroundSource="Backdrop" TintColor="Black" FallbackColor="{ThemeResource DotaholdAcrylicFallbackColor}" TintLuminosityOpacity="0.3" TintOpacity="0.3"/>
            </Grid.Background>
        </Grid>
        <Grid Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Border x:Name="HeroImageBorder" Grid.Column="0" Margin="64,0,16,0" Width="128" Height="72" CornerRadius="4" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Border.Background>
                    <ImageBrush Stretch="UniformToFill" ImageSource="{x:Bind _heroModel.HeroImage.Image,Mode=OneWay}"/>
                </Border.Background>
            </Border>
            <Grid x:Name="HeroNameGrid" Grid.Column="1" Margin="16,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!--Name-->
                <TextBlock Grid.Row="0" Grid.ColumnSpan="2" FontFamily="{ThemeResource ReaverBold}" Foreground="#FFFFFF" FontSize="26" TextTrimming="CharacterEllipsis"
                           Text="{x:Bind _heroModel.DotaHeroAttributes.localized_name,Mode=OneWay}" HorizontalAlignment="Left" VerticalAlignment="Center"/>

                <!--Icon Melee-->
                <Image Grid.Row="1" Grid.Column="0" Opacity="0.7" Source="../Assets/Heroes/hero_melee.png" Height="18" Stretch="Uniform"
                       Visibility="{x:Bind _heroModel.DotaHeroAttributes.attack_type,Mode=OneWay,Converter={StaticResource EqualToVisibilityConverter},ConverterParameter=Melee}"/>

                <!--Icon Ranged-->
                <Image Grid.Row="1" Grid.Column="0" Opacity="0.7" Source="../Assets/Heroes/hero_ranged.png" Height="18" Stretch="Uniform"
                       Visibility="{x:Bind _heroModel.DotaHeroAttributes.attack_type,Mode=OneWay,Converter={StaticResource EqualToVisibilityConverter},ConverterParameter=Ranged}"/>

                <!--Role-->
                <TextBlock Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Medium"
                           Text="{x:Bind _heroModel.DotaHeroAttributes.roles,Mode=OneWay,Converter={StaticResource StringArrayToStringConverter},ConverterParameter=·}"
                           FontSize="16" Foreground="#B2FFFFFF" TextTrimming="CharacterEllipsis" Margin="8,0,0,0"/>
            </Grid>
        </Grid>

        <Rectangle Grid.Row="1" Height="1" Fill="{ThemeResource DotaholdSeparatorColor}" HorizontalAlignment="Stretch"/>

    </Grid>
</Page>
