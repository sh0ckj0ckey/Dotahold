<Page
    x:Class="Dotahold.Pages.Heroes.HeroPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dotahold.Pages.Heroes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:animatedVisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
    xmlns:community="using:CommunityToolkit.WinUI"
    xmlns:communityMedia="using:CommunityToolkit.WinUI.Media"
    xmlns:communityAnimations="using:CommunityToolkit.WinUI.Animations"
    xmlns:models="using:Dotahold.Models"
    xmlns:converters="using:Dotahold.Converters" 
    mc:Ignorable="d">

    <Page.Resources>
        <converters:StringArrayToStringConverter x:Key="StringArrayToStringConverter"/>
        <converters:EqualToVisibilityConverter x:Key="EqualToVisibilityConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:DoubleToStringConverter x:Key="DoubleToStringConverter"/>
        <converters:IntToVisibilityConverter x:Key="IntToVisibilityConverter"/>
    </Page.Resources>

    <Grid x:Name="RootGrid" SizeChanged="RootGrid_SizeChanged" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="96"/>
            <RowDefinition Height="164"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Grid.RowSpan="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Border.Background>
                <ImageBrush Stretch="UniformToFill" ImageSource="{x:Bind _heroModel.HeroImage.Image,Mode=OneWay}"/>
            </Border.Background>
            <communityAnimations:Implicit.ShowAnimations>
                <communityAnimations:OpacityAnimation From="0" To="1" Duration="0:0:1.2"/>
            </communityAnimations:Implicit.ShowAnimations>
        </Border>
        <Grid Grid.Row="0" Grid.RowSpan="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.Background>
                <AcrylicBrush AlwaysUseFallback="False" BackgroundSource="Backdrop" TintColor="Black" FallbackColor="{ThemeResource DotaholdAcrylicFallbackColor}" TintLuminosityOpacity="0.3" TintOpacity="0.3"/>
            </Grid.Background>
        </Grid>
        <Grid Grid.Row="0" Padding="64,0,64,0" ColumnSpacing="16" HorizontalAlignment="Stretch" VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!--Back Button-->
            <Button Grid.Column="0" Width="42" Height="42" Padding="0" Content="&#xE652;" FontSize="16" FontFamily="{ThemeResource SymbolThemeFontFamily}"
                    RequestedTheme="Dark" ToolTipService.ToolTip="Go Back" Click="BackButton_Click"/>

            <!--History Button-->
            <Button Grid.Column="2" Width="42" Height="42" Padding="0" Content="&#xE736;" FontSize="17" FontFamily="{ThemeResource SymbolThemeFontFamily}"
                    RequestedTheme="Dark" ToolTipService.ToolTip="Read History" Click="HistoryButton_Click"
                    Visibility="{x:Bind _viewModel.HeroesViewModel.LoadingHeroData,Mode=OneWay,Converter={StaticResource BoolToVisibilityConverter},ConverterParameter=!}">
                <communityAnimations:Implicit.ShowAnimations>
                    <communityAnimations:CenterPointAnimation From="21,21,0" To="21,21,0"/>
                    <communityAnimations:OpacityAnimation From="0" To="1" Duration="0:0:0.6"/>
                    <communityAnimations:ScaleAnimation From="0.8" To="1" EasingMode="EaseOut" EasingType="Default" Duration="0:0:0.6"/>
                </communityAnimations:Implicit.ShowAnimations>
            </Button>

            <!--Rank List Button-->
            <Button Grid.Column="3" Width="42" Height="42" Padding="0" Content="&#xE179;" FontSize="17" FontFamily="{ThemeResource SymbolThemeFontFamily}"
                    RequestedTheme="Dark" ToolTipService.ToolTip="Rankings" Click="RankingButton_Click"
                    Visibility="{x:Bind _viewModel.HeroesViewModel.LoadingHeroData,Mode=OneWay,Converter={StaticResource BoolToVisibilityConverter},ConverterParameter=!}">
                <communityAnimations:Implicit.ShowAnimations>
                    <communityAnimations:CenterPointAnimation From="21,21,0" To="21,21,0"/>
                    <communityAnimations:OpacityAnimation From="0" To="1" Duration="0:0:0.6" Delay="0:0:0.05"/>
                    <communityAnimations:ScaleAnimation From="0.8" To="1" EasingMode="EaseOut" EasingType="Default" Duration="0:0:0.6" Delay="0:0:0.05"/>
                </communityAnimations:Implicit.ShowAnimations>
            </Button>

            <!--Language Button-->
            <Button Grid.Column="4" Width="68" Height="42" Padding="0" RequestedTheme="Dark" ToolTipService.ToolTip="Language"
                    Visibility="{x:Bind _viewModel.HeroesViewModel.LoadingHeroData,Mode=OneWay,Converter={StaticResource BoolToVisibilityConverter},ConverterParameter=!}">
                <communityAnimations:Implicit.ShowAnimations>
                    <communityAnimations:CenterPointAnimation From="34,21,0" To="34,21,0"/>
                    <communityAnimations:OpacityAnimation From="0" To="1" Duration="0:0:0.6" Delay="0:0:0.1"/>
                    <communityAnimations:ScaleAnimation From="0.8" To="1" EasingMode="EaseOut" EasingType="Default" Duration="0:0:0.6" Delay="0:0:0.1"/>
                </communityAnimations:Implicit.ShowAnimations>
                <StackPanel Orientation="Horizontal" Spacing="6" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}" Glyph="&#xF2B7;" FontSize="18"/>
                    <muxc:AnimatedIcon Height="14" Width="14" Margin="4,0,0,0" Opacity="0.7">
                        <muxc:AnimatedIcon.Source>
                            <animatedVisuals:AnimatedChevronDownSmallVisualSource/>
                        </muxc:AnimatedIcon.Source>
                        <muxc:AnimatedIcon.FallbackIconSource>
                            <muxc:FontIconSource Glyph="&#xE011;" FontFamily="{ThemeResource SymbolThemeFontFamily}"/>
                        </muxc:AnimatedIcon.FallbackIconSource>
                    </muxc:AnimatedIcon>
                </StackPanel>
                <Button.Flyout>
                    <Flyout x:Name="LanguageFlyout" Placement="BottomEdgeAlignedRight">
                        <muxc:RadioButtons SelectedIndex="{x:Bind _viewModel.AppSettings.LanguageIndex,Mode=TwoWay}" MaxColumns="1" SelectionChanged="LanguageRadioButtons_SelectionChanged">
                            <x:String>English</x:String>
                            <x:String>Chinese</x:String>
                            <x:String>Russian</x:String>
                        </muxc:RadioButtons>
                    </Flyout>
                </Button.Flyout>
            </Button>
        </Grid>
        <Grid Grid.Row="1" Margin="0,-16,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Border x:Name="HeroImageBorder" Grid.Column="0" Margin="64,0,6,0" Width="128" Height="72" CornerRadius="4" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Border.Background>
                    <ImageBrush Stretch="UniformToFill" ImageSource="{x:Bind _heroModel.HeroImage.Image,Mode=OneWay}"/>
                </Border.Background>
            </Border>
            <Grid Grid.Column="1" RowSpacing="2" Margin="12,0" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!--Name-->
                <TextBlock Grid.Row="0" FontFamily="{ThemeResource ReaverBold}" Foreground="#FFFFFF" FontSize="26" TextTrimming="CharacterEllipsis"
                           Text="{x:Bind _heroModel.DotaHeroAttributes.localized_name}" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <communityAnimations:Implicit.ShowAnimations>
                        <communityAnimations:TranslationAnimation From="0,16,0" To="0,0,0" EasingMode="EaseOut" Delay="0:0:0.2" Duration="0:0:0.8"/>
                        <communityAnimations:OpacityAnimation From="0" To="1" Delay="0:0:0.2" Duration="0:0:0.4"/>
                    </communityAnimations:Implicit.ShowAnimations>
                </TextBlock>

                <Grid Grid.Row="1" ColumnSpacing="8" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <communityAnimations:Implicit.ShowAnimations>
                        <communityAnimations:TranslationAnimation From="0,16,0" To="0,0,0" EasingMode="EaseOut" Delay="0:0:0.3" Duration="0:0:0.8"/>
                        <communityAnimations:OpacityAnimation From="0" To="1" Delay="0:0:0.3" Duration="0:0:0.4"/>
                    </communityAnimations:Implicit.ShowAnimations>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!--Icon Melee-->
                    <Image Grid.Column="0" Opacity="0.7" Source="/Assets/Heroes/hero_melee.png" Height="18" Stretch="Uniform"
                           Visibility="{x:Bind _heroModel.DotaHeroAttributes.attack_type,Converter={StaticResource EqualToVisibilityConverter},ConverterParameter=Melee}"/>

                    <!--Icon Ranged-->
                    <Image Grid.Column="0" Opacity="0.7" Source="/Assets/Heroes/hero_ranged.png" Height="18" Stretch="Uniform"
                           Visibility="{x:Bind _heroModel.DotaHeroAttributes.attack_type,Converter={StaticResource EqualToVisibilityConverter},ConverterParameter=Ranged}"/>

                    <!--Role-->
                    <TextBlock Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Medium"
                               Text="{x:Bind _heroModel.DotaHeroAttributes.roles,Converter={StaticResource StringArrayToStringConverter},ConverterParameter=·}"
                               FontSize="16" Foreground="#B2FFFFFF" TextTrimming="CharacterEllipsis"/>
                </Grid>
            </Grid>

            <!--Talents Button-->
            <Button Grid.Column="2" Background="Transparent" BorderBrush="Transparent" HorizontalAlignment="Center" VerticalAlignment="Center"
                    RequestedTheme="Dark" Padding="0" Margin="0,0,24,0" Height="56" Width="56" CornerRadius="28"
                    Visibility="{x:Bind _viewModel.HeroesViewModel.LoadingHeroData,Mode=OneWay,Converter={StaticResource BoolToVisibilityConverter},ConverterParameter=!}">
                <communityAnimations:Implicit.ShowAnimations>
                    <communityAnimations:CenterPointAnimation From="28,28,0" To="28,28,0"/>
                    <communityAnimations:OpacityAnimation From="0" To="1" Duration="0:0:0.6"/>
                    <communityAnimations:ScaleAnimation From="0.8" To="1" EasingMode="EaseOut" EasingType="Default" Duration="0:0:0.6"/>
                </communityAnimations:Implicit.ShowAnimations>
                <Image Height="48" Opacity="0.8" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image.Source>
                        <BitmapImage UriSource="/Assets/Heroes/icon_talents_white.png" DecodePixelType="Logical" DecodePixelHeight="96"/>
                    </Image.Source>
                </Image>
            </Button>

            <!--Innate Button-->
            <Button Grid.Column="3" Background="Transparent" BorderBrush="Transparent" HorizontalAlignment="Center" VerticalAlignment="Center"
                    RequestedTheme="Dark" Padding="0" Margin="0,0,64,0" Height="56" Width="56" CornerRadius="28"
                    Visibility="{x:Bind _viewModel.HeroesViewModel.LoadingHeroData,Mode=OneWay,Converter={StaticResource BoolToVisibilityConverter},ConverterParameter=!}">
                <communityAnimations:Implicit.ShowAnimations>
                    <communityAnimations:CenterPointAnimation From="28,28,0" To="28,28,0"/>
                    <communityAnimations:OpacityAnimation From="0" To="1" Duration="0:0:0.6" Delay="0:0:0.1"/>
                    <communityAnimations:ScaleAnimation From="0.8" To="1" EasingMode="EaseOut" EasingType="Default" Duration="0:0:0.6" Delay="0:0:0.1"/>
                </communityAnimations:Implicit.ShowAnimations>
                <Image Height="48" Opacity="0.8" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image.Source>
                        <BitmapImage UriSource="/Assets/Heroes/icon_innate_white.png" DecodePixelType="Logical" DecodePixelHeight="96"/>
                    </Image.Source>
                </Image>
            </Button>
        </Grid>

        <Rectangle Grid.Row="2" Height="1" Fill="{ThemeResource DotaholdSeparatorColor}" HorizontalAlignment="Stretch"/>

        <muxc:ProgressRing Grid.Row="3" Height="42" Width="42" Foreground="{ThemeResource DotaholdApplicationForeground}" HorizontalAlignment="Center" VerticalAlignment="Center"
                           IsActive="{x:Bind _viewModel.HeroesViewModel.LoadingHeroData,Mode=OneWay}"
                           Visibility="{x:Bind _viewModel.HeroesViewModel.LoadingHeroData,Mode=OneWay,Converter={StaticResource BoolToVisibilityConverter}}"/>

        <Grid Grid.Row="3" Opacity="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
              Visibility="{x:Bind _viewModel.HeroesViewModel.LoadingHeroData,Mode=OneWay,Converter={StaticResource BoolToVisibilityConverter},ConverterParameter=!}">
            <communityAnimations:Implicit.ShowAnimations>
                <communityAnimations:OpacityAnimation From="0" To="1" Duration="0:0:1"/>
                <communityAnimations:TranslationAnimation From="0,64,0" To="0,0,0" EasingMode="EaseOut" EasingType="Default" Duration="0:0:1"/>
            </communityAnimations:Implicit.ShowAnimations>
            <ScrollViewer HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                          HorizontalScrollMode="Disabled" VerticalScrollMode="Auto"
                          HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Top">
                    <ScrollViewer x:Name="DataAttributesScrollViewer"
                                  HorizontalAlignment="Stretch" VerticalAlignment="Top"
                                  HorizontalScrollMode="Auto" VerticalScrollMode="Disabled"
                                  HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Disabled">
                        <StackPanel Orientation="Horizontal" Spacing="8" Margin="64,16" HorizontalAlignment="Left" VerticalAlignment="Top">

                            <Grid Width="112" Height="64" Padding="12,4" CornerRadius="6" Background="{ThemeResource DotaholdItemBackgroundColor}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Image Grid.Row="0" Grid.Column="0" Source="/Assets/Heroes/icon_strength.png" Height="16" Width="16" Opacity="1" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                <Image Grid.Row="1" Grid.Column="0" Source="/Assets/Heroes/icon_agility.png" Height="16" Width="16" Opacity="1" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                <Image Grid.Row="2" Grid.Column="0" Source="/Assets/Heroes/icon_intelligence.png" Height="16" Width="16" Opacity="1" HorizontalAlignment="Left" VerticalAlignment="Center"/>

                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{x:Bind _viewModel.HeroesViewModel.PickedHeroData.DotaHeroData.str_base,Mode=OneWay,Converter={StaticResource DoubleToStringConverter}}" FontSize="12" FontFamily="{ThemeResource ReaverBold}" Margin="8,2,2,-2" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{x:Bind _viewModel.HeroesViewModel.PickedHeroData.DotaHeroData.agi_base,Mode=OneWay,Converter={StaticResource DoubleToStringConverter}}" FontSize="12" FontFamily="{ThemeResource ReaverBold}" Margin="8,2,2,-2" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{x:Bind _viewModel.HeroesViewModel.PickedHeroData.DotaHeroData.int_base,Mode=OneWay,Converter={StaticResource DoubleToStringConverter}}" FontSize="12" FontFamily="{ThemeResource ReaverBold}" Margin="8,2,2,-2" HorizontalAlignment="Left" VerticalAlignment="Center"/>

                                <TextBlock Grid.Row="0" Grid.Column="2" Opacity="0.7" FontSize="12" VerticalAlignment="Center">
                                    <Run Text="+"/>
                                    <Run Text="{x:Bind _viewModel.HeroesViewModel.PickedHeroData.DotaHeroData.str_gain,Mode=OneWay,Converter={StaticResource DoubleToStringConverter}}"/>
                                </TextBlock>
                                <TextBlock Grid.Row="1" Grid.Column="2" Opacity="0.7" FontSize="12" VerticalAlignment="Center">
                                    <Run Text="+"/>
                                    <Run Text="{x:Bind _viewModel.HeroesViewModel.PickedHeroData.DotaHeroData.agi_gain,Mode=OneWay,Converter={StaticResource DoubleToStringConverter}}"/>
                                </TextBlock>
                                <TextBlock Grid.Row="2" Grid.Column="2" Opacity="0.7" FontSize="12" VerticalAlignment="Center">
                                    <Run Text="+"/>
                                    <Run Text="{x:Bind _viewModel.HeroesViewModel.PickedHeroData.DotaHeroData.int_gain,Mode=OneWay,Converter={StaticResource DoubleToStringConverter}}"/>
                                </TextBlock>
                            </Grid>

                            <Grid Height="64" Padding="8,0" CornerRadius="6" Background="{ThemeResource DotaholdItemBackgroundColor}">
                                <StackPanel Orientation="Vertical" Spacing="8" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Grid Width="146" Height="20" CornerRadius="4">
                                        <Grid.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                <LinearGradientBrush.GradientStops>
                                                    <GradientStop Color="#286323" Offset="0"/>
                                                    <GradientStop Color="#7AF03C" Offset="0.5"/>
                                                </LinearGradientBrush.GradientStops>
                                            </LinearGradientBrush>
                                        </Grid.Background>
                                        <TextBlock Text="{x:Bind _viewModel.HeroesViewModel.PickedHeroData.DotaHeroData.max_health,Mode=OneWay,Converter={StaticResource DoubleToStringConverter}}"
                                                   Foreground="#202020" FontFamily="{ThemeResource ReaverBold}"
                                                   FontSize="12" Margin="0,2,0,-2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        <TextBlock FontWeight="Medium" FontSize="10" Foreground="#202020" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,8,0">
                                            <Run Text="+"/>
                                            <Run Text="{x:Bind _viewModel.HeroesViewModel.PickedHeroData.DotaHeroData.health_regen,Mode=OneWay,Converter={StaticResource DoubleToStringConverter}}"/>
                                        </TextBlock>
                                    </Grid>
                                    <Grid Width="146" Height="20" CornerRadius="4">
                                        <Grid.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                <LinearGradientBrush.GradientStops>
                                                    <GradientStop Color="#1057DB" Offset="0"/>
                                                    <GradientStop Color="#72F4FE" Offset="0.5"/>
                                                </LinearGradientBrush.GradientStops>
                                            </LinearGradientBrush>
                                        </Grid.Background>
                                        <TextBlock Text="{x:Bind _viewModel.HeroesViewModel.PickedHeroData.DotaHeroData.max_mana,Mode=OneWay,Converter={StaticResource DoubleToStringConverter}}"
                                                   Foreground="#202020" FontFamily="{ThemeResource ReaverBold}"
                                                   FontSize="12" Margin="0,2,0,-2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        <TextBlock FontWeight="Medium" FontSize="10" Foreground="#202020" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,8,0">
                                            <Run Text="+"/>
                                            <Run Text="{x:Bind _viewModel.HeroesViewModel.PickedHeroData.DotaHeroData.mana_regen,Mode=OneWay,Converter={StaticResource DoubleToStringConverter}}"/>
                                        </TextBlock>
                                    </Grid>
                                </StackPanel>
                            </Grid>

                            <Grid Margin="-16,0" Opacity="0.7" Width="Auto" Height="Auto" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="ATTACK" FontSize="14" RenderTransformOrigin="0.5,0.5" FontFamily="{ThemeResource RadianceSemiBold}" Opacity="0.7">
                                    <TextBlock.RenderTransform>
                                        <RotateTransform Angle="270"/>
                                    </TextBlock.RenderTransform>
                                </TextBlock>
                            </Grid>

                            <Grid Width="112" Height="64" CornerRadius="6" Background="{ThemeResource DotaholdItemBackgroundColor}">
                                <Image Source="/Assets/Heroes/icon_damage.png" Height="32" Width="32" Opacity="0.2" Margin="4,0,0,2" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
                                <StackPanel Spacing="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock Text="Damage" FontWeight="Medium"/>
                                    <TextBlock HorizontalAlignment="Center" Opacity="0.7" FontSize="13" FontWeight="Medium">
                                        <Run Text="{x:Bind _viewModel.HeroesViewModel.PickedHeroData.DotaHeroData.damage_min,Mode=OneWay,Converter={StaticResource DoubleToStringConverter}}"/>
                                        <Run Text="~"/>
                                        <Run Text="{x:Bind _viewModel.HeroesViewModel.PickedHeroData.DotaHeroData.damage_max,Mode=OneWay,Converter={StaticResource DoubleToStringConverter}}"/>
                                    </TextBlock>
                                </StackPanel>
                            </Grid>

                            <Grid Width="108" Height="64" CornerRadius="6" Background="{ThemeResource DotaholdItemBackgroundColor}">
                                <Image Source="/Assets/Heroes/icon_attack_time.png" Height="32" Width="32" Opacity="0.2" Margin="4,0,0,2" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
                                <StackPanel Spacing="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock Text="Attack Rate" FontWeight="Medium"/>
                                    <TextBlock Text="{x:Bind _viewModel.HeroesViewModel.PickedHeroData.DotaHeroData.attack_rate,Mode=OneWay,Converter={StaticResource DoubleToStringConverter}}" HorizontalAlignment="Center" Opacity="0.7" FontSize="13" FontWeight="Medium"/>
                                </StackPanel>
                            </Grid>

                            <Grid Width="112" Height="64" CornerRadius="6" Background="{ThemeResource DotaholdItemBackgroundColor}">
                                <Image Source="/Assets/Heroes/icon_attack_range.png" Height="32" Width="32" Opacity="0.2" Margin="4,0,0,2" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
                                <StackPanel Spacing="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock Text="Attack Range" FontWeight="Medium"/>
                                    <TextBlock Text="{x:Bind _viewModel.HeroesViewModel.PickedHeroData.DotaHeroData.attack_range,Mode=OneWay,Converter={StaticResource DoubleToStringConverter}}" HorizontalAlignment="Center" Opacity="0.7" FontSize="13" FontWeight="Medium"/>
                                </StackPanel>
                            </Grid>

                            <Grid Width="132" Height="64" CornerRadius="6" Background="{ThemeResource DotaholdItemBackgroundColor}" 
                                  Visibility="{x:Bind _viewModel.HeroesViewModel.PickedHeroData.DotaHeroData.projectile_speed,Mode=OneWay,Converter={StaticResource IntToVisibilityConverter}}">
                                <Image Source="/Assets/Heroes/icon_projectile_speed.png" Height="32" Width="32" Opacity="0.2" Margin="4,0,0,2" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
                                <StackPanel Spacing="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock Text="Projectile Speed" FontWeight="Medium"/>
                                    <TextBlock Text="{x:Bind _viewModel.HeroesViewModel.PickedHeroData.DotaHeroData.projectile_speed,Mode=OneWay,Converter={StaticResource DoubleToStringConverter}}" HorizontalAlignment="Center" Opacity="0.7" FontSize="13" FontWeight="Medium"/>
                                </StackPanel>
                            </Grid>

                            <Grid Margin="-16,0" Opacity="0.7" Width="Auto" Height="Auto" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="DEFENSE" FontSize="14" RenderTransformOrigin="0.5,0.5" FontFamily="{ThemeResource RadianceSemiBold}" Opacity="0.7">
                                    <TextBlock.RenderTransform>
                                        <RotateTransform Angle="270"/>
                                    </TextBlock.RenderTransform>
                                </TextBlock>
                            </Grid>

                            <Grid Width="112" Height="64" CornerRadius="6" Background="{ThemeResource DotaholdItemBackgroundColor}">
                                <Image Source="/Assets/Heroes/icon_armor.png" Height="32" Width="32" Opacity="0.2" Margin="4,0,0,2" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
                                <StackPanel Spacing="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock Text="Armor" FontWeight="Medium"/>
                                    <TextBlock Text="{x:Bind _viewModel.HeroesViewModel.PickedHeroData.DotaHeroData.armor,Mode=OneWay,Converter={StaticResource DoubleToStringConverter}}" HorizontalAlignment="Center" Opacity="0.7" FontSize="13" FontWeight="Medium"/>
                                </StackPanel>
                            </Grid>

                            <Grid Width="128" Height="64" CornerRadius="6" Background="{ThemeResource DotaholdItemBackgroundColor}">
                                <Image Source="/Assets/Heroes/icon_magic_resist.png" Height="32" Width="32" Opacity="0.2" Margin="4,0,0,2" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
                                <StackPanel Spacing="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock Text="Magic Resist" FontWeight="Medium"/>
                                    <TextBlock HorizontalAlignment="Center" Opacity="0.7" FontSize="13" FontWeight="Medium">
                                        <Run Text="{x:Bind _viewModel.HeroesViewModel.PickedHeroData.DotaHeroData.magic_resistance,Mode=OneWay,Converter={StaticResource DoubleToStringConverter}}"/>
                                        <Run Text="%"/>
                                    </TextBlock>
                                </StackPanel>
                            </Grid>

                            <Grid Margin="-16,0" Opacity="0.7" Width="Auto" Height="Auto" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="MOBILITY" FontSize="14" RenderTransformOrigin="0.5,0.5" FontFamily="{ThemeResource RadianceSemiBold}" Opacity="0.7">
                                    <TextBlock.RenderTransform>
                                        <RotateTransform Angle="270"/>
                                    </TextBlock.RenderTransform>
                                </TextBlock>
                            </Grid>

                            <Grid Width="128" Height="64" CornerRadius="6" Background="{ThemeResource DotaholdItemBackgroundColor}">
                                <Image Source="/Assets/Heroes/icon_movement_speed.png" Height="32" Width="32" Opacity="0.2" Margin="4,0,0,2" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
                                <StackPanel Spacing="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock Text="Movement Speed" FontWeight="Medium"/>
                                    <TextBlock Text="{x:Bind _viewModel.HeroesViewModel.PickedHeroData.DotaHeroData.movement_speed,Mode=OneWay,Converter={StaticResource DoubleToStringConverter}}" HorizontalAlignment="Center" Opacity="0.7" FontSize="13" FontWeight="Medium"/>
                                </StackPanel>
                            </Grid>

                            <Grid Width="128" Height="64" CornerRadius="6" Background="{ThemeResource DotaholdItemBackgroundColor}">
                                <Image Source="/Assets/Heroes/icon_turn_rate.png" Height="32" Width="32" Opacity="0.2" Margin="4,0,0,2" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
