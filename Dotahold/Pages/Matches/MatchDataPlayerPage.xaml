<Page
    x:Class="Dotahold.Pages.Matches.MatchDataPlayerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dotahold.Pages.Matches"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:communityControls="using:CommunityToolkit.WinUI.Controls"
    xmlns:controls="using:Dotahold.Controls"
    xmlns:models="using:Dotahold.Models"
    xmlns:converters="using:Dotahold.Converters"
    mc:Ignorable="d"
    NavigationCacheMode="Enabled">

    <Page.Resources>
        <converters:IntToVisibilityConverter x:Key="IntToVisibilityConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:EmptyToVisibilityConverter x:Key="EmptyToVisibilityConverter"/>
        <converters:EmptyStringToBoolConverter x:Key="EmptyStringToBoolConverter"/>
        <converters:NullToBoolConverter x:Key="NullToBoolConverter"/>
        <converters:PlayerRankToMedalImageConverter x:Key="PlayerRankToMedalImageConverter"/>
    </Page.Resources>

    <Grid x:Name="RootGrid" SizeChanged="RootGrid_SizeChanged" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--Rank Tier-->
        <Image Grid.Row="0" Source="{x:Bind MatchPlayerModel.DotaMatchPlayer.rank_tier,Mode=OneWay,Converter={StaticResource PlayerRankToMedalImageConverter},ConverterParameter=128}" Height="64" Width="64" Margin="8" Stretch="UniformToFill" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>

        <Grid Grid.Row="0" ColumnSpacing="8" Margin="16,8,20,-8" HorizontalAlignment="Stretch" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="58"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!--Back Button-->
            <Button Grid.Column="0" Width="58" Height="42" Padding="0" Background="Transparent" Content="&#xE652;" FontSize="16" FontFamily="{ThemeResource SymbolThemeFontFamily}"
                    ToolTipService.ToolTip="Go Back" Click="BackButton_Click" HorizontalAlignment="Left" VerticalAlignment="Center"/>

            <!--Hero Image-->
            <Grid Grid.Column="1" Width="77" Height="42" CornerRadius="4"
                  HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid.Background>
                    <ImageBrush Stretch="UniformToFill" ImageSource="{x:Bind MatchPlayerModel.Hero.HeroImage.Image,Mode=OneWay}"/>
                </Grid.Background>
            </Grid>

            <!--Player Name and ID-->
            <Grid Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!--Player Name-->
                <TextBlock Grid.Row="0" Text="{x:Bind MatchPlayerModel.DotaMatchPlayer.personaname,Mode=OneWay}" FontSize="16" FontWeight="Bold" FontFamily="{ThemeResource ReaverBold}"
                           Visibility="{x:Bind MatchPlayerModel.DotaMatchPlayer.account_id,Mode=OneWay,Converter={StaticResource EmptyToVisibilityConverter}}" TextTrimming="CharacterEllipsis" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <ToolTipService.ToolTip>
                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Text="{x:Bind MatchPlayerModel.DotaMatchPlayer.personaname,Mode=OneWay}" FontSize="16" FontWeight="Bold" FontFamily="{ThemeResource RadianceSemiBold}" TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            <StackPanel x:Name="PlayerNameStackPanel" x:Load="{x:Bind MatchPlayerModel.DotaMatchPlayer.name,Mode=OneWay,Converter={StaticResource EmptyStringToBoolConverter}}" Grid.Row="1" Spacing="4" Margin="0,4,0,0" Opacity="0.7" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                                <FontIcon Glyph="&#xE930;" FontFamily="{ThemeResource SymbolThemeFontFamily}" FontSize="12" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                <TextBlock Text="{x:Bind MatchPlayerModel.DotaMatchPlayer.name,Mode=OneWay}" FontSize="14" FontFamily="{ThemeResource RadianceSemiBold}" TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </ToolTipService.ToolTip>
                </TextBlock>
                <TextBlock Grid.Row="0" Text="Anonymous" Opacity="0.5" FontSize="20" FontWeight="Bold" FontFamily="{ThemeResource ReaverBold}"
                           Visibility="{x:Bind MatchPlayerModel.DotaMatchPlayer.account_id,Mode=OneWay,Converter={StaticResource EmptyToVisibilityConverter},ConverterParameter=!}" TextTrimming="CharacterEllipsis" HorizontalAlignment="Left" VerticalAlignment="Center"/>

                <!--Player Steam ID-->
                <TextBlock Grid.Row="1" Visibility="{x:Bind MatchPlayerModel.DotaMatchPlayer.account_id,Mode=OneWay,Converter={StaticResource EmptyToVisibilityConverter}}"
                           Opacity="0.7" FontSize="14" FontFamily="Consolas" IsTextSelectionEnabled="True" TextTrimming="CharacterEllipsis" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Run Text="ID"/>
                    <Run Text="{x:Bind MatchPlayerModel.DotaMatchPlayer.account_id,Mode=OneWay}"/>
                </TextBlock>

            </Grid>
        </Grid>

        <Rectangle Grid.Row="1" Height="1" Fill="{ThemeResource DotaholdSeparatorColor}" HorizontalAlignment="Stretch"/>

        <ScrollViewer x:Name="PlayerDataScrollViewer" Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalScrollMode="Disabled" VerticalScrollMode="Auto" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="PlayerDataStackPanel" Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0,4,0,24">

                <!--Overview-->
                <ScrollViewer x:Name="OverviewScrollViewer" HorizontalAlignment="Stretch" VerticalAlignment="Top" HorizontalScrollMode="Auto" VerticalScrollMode="Disabled"
                              HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Disabled">
                    <StackPanel Orientation="Horizontal" Margin="20,24,12,0" HorizontalAlignment="Left" VerticalAlignment="Top">

                        <!--Facet-->
                        <Grid Height="48" MinWidth="96" CornerRadius="4" Margin="0,0,8,0" Background="{x:Bind MatchPlayerModel.AbilitiesFacet.BackgroundBrush,Mode=OneWay}"
                              Visibility="{x:Bind MatchPlayerModel.AbilitiesFacet,Mode=OneWay,Converter={StaticResource EmptyToVisibilityConverter}}">
                            <Image Height="24" Width="24" Source="{x:Bind MatchPlayerModel.AbilitiesFacet.IconImage.Image,Mode=OneWay}" Margin="4" Opacity="0.2" Stretch="UniformToFill" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
                            <StackPanel Padding="24,0" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="Facet" HorizontalAlignment="Center" Opacity="0.7" Foreground="#FFFFFF" FontSize="14" FontWeight="Medium"/>
                                <TextBlock Text="{x:Bind MatchPlayerModel.AbilitiesFacet.Title,Mode=OneWay}" HorizontalAlignment="Center" Foreground="#FFFFFF" FontSize="15" FontWeight="Medium" FontFamily="{ThemeResource RadianceSemiBold}"/>
                            </StackPanel>
                            <ToolTipService.ToolTip>
                                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                    <TextBlock Grid.Row="1" Margin="4" Text="{x:Bind MatchPlayerModel.AbilitiesFacet.Description,Mode=OneWay}" FontFamily="{ThemeResource Radiance}" FontSize="15" Opacity="0.7" TextWrapping="Wrap" HorizontalAlignment="Left"/>
                                </Grid>
                            </ToolTipService.ToolTip>
                        </Grid>

                        <!--KDA-->
                        <Grid Height="48" MinWidth="96" CornerRadius="4" Margin="0,0,8,0" BorderThickness="1" BorderBrush="{ThemeResource DotaholdSeparatorColor}" Background="Transparent">
                            <FontIcon Glyph="&#xF272;" FontFamily="{ThemeResource SymbolThemeFontFamily}" FontSize="26" Margin="4,2" Opacity="0.1" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
                            <StackPanel Padding="24,0" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock HorizontalAlignment="Center" FontSize="14" FontWeight="Medium">
                                    <Run Text="KDA" Foreground="{ThemeResource DotaholdApplicationDimmedForeground}"/>
                                    <Run Text="{x:Bind MatchPlayerModel.KDA,Mode=OneWay}"/>
                                </TextBlock>
                                <TextBlock HorizontalAlignment="Center" Foreground="{ThemeResource DotaholdApplicationForeground}" FontSize="13" FontWeight="Medium" FontFamily="{ThemeResource RadianceSemiBold}">
                                    <Run Text="{x:Bind MatchPlayerModel.DotaMatchPlayer.kills}" Foreground="#63916C"/>
                                    <Run Text="/" Foreground="{ThemeResource DotaholdApplicationDimmedForeground}"/>
                                    <Run Text="{x:Bind MatchPlayerModel.DotaMatchPlayer.deaths}" Foreground="#C55357"/>
                                    <Run Text="/" Foreground="{ThemeResource DotaholdApplicationDimmedForeground}"/>
                                    <Run Text="{x:Bind MatchPlayerModel.DotaMatchPlayer.assists}" Foreground="#647E8E"/>
                                </TextBlock>
                            </StackPanel>
                        </Grid>

                        <!--Level-->
                        <Grid Height="48" MinWidth="96" CornerRadius="4" Margin="0,0,8,0" BorderThickness="1" BorderBrush="{ThemeResource DotaholdSeparatorColor}" Background="Transparent">
                            <FontIcon Glyph="&#xE752;" FontFamily="{ThemeResource SymbolThemeFontFamily}" FontSize="26" Margin="4,2" Opacity="0.1" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
                            <StackPanel Padding="24,0" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="Level" HorizontalAlignment="Center" Foreground="{ThemeResource DotaholdApplicationDimmedForeground}" FontSize="14" FontWeight="Medium"/>
                                <TextBlock Text="{x:Bind MatchPlayerModel.DotaMatchPlayer.level,Mode=OneWay}" HorizontalAlignment="Center" Foreground="{ThemeResource DotaholdApplicationForeground}" FontSize="13" FontWeight="Medium" FontFamily="{ThemeResource RadianceSemiBold}"/>
                            </StackPanel>
                        </Grid>

                        <!--GPM-->
                        <Grid Height="48" MinWidth="96" CornerRadius="4" Margin="0,0,8,0" BorderThickness="1" BorderBrush="{ThemeResource DotaholdSeparatorColor}" Background="Transparent">
                            <FontIcon Glyph="&#xEAFC;" FontFamily="{ThemeResource SymbolThemeFontFamily}" FontSize="26" Margin="4,2" Opacity="0.1" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
                            <StackPanel Padding="24,0" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="GPM" HorizontalAlignment="Center" Foreground="{ThemeResource DotaholdApplicationDimmedForeground}" FontSize="14" FontWeight="Medium"/>
                                <TextBlock Text="{x:Bind MatchPlayerModel.DotaMatchPlayer.gold_per_min,Mode=OneWay}" HorizontalAlignment="Center" Foreground="{ThemeResource DotaholdApplicationForeground}" FontSize="13" FontWeight="Medium" FontFamily="{ThemeResource RadianceSemiBold}"/>
                            </StackPanel>
                        </Grid>

                        <!--XPM-->
                        <Grid Height="48" MinWidth="96" CornerRadius="4" Margin="0,0,8,0" BorderThickness="1" BorderBrush="{ThemeResource DotaholdSeparatorColor}" Background="Transparent">
                            <FontIcon Glyph="&#xEAFC;" FontFamily="{ThemeResource SymbolThemeFontFamily}" FontSize="26" Margin="4,2" Opacity="0.1" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
                            <StackPanel Padding="24,0" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="XPM" HorizontalAlignment="Center" Foreground="{ThemeResource DotaholdApplicationDimmedForeground}" FontSize="14" FontWeight="Medium"/>
                                <TextBlock Text="{x:Bind MatchPlayerModel.DotaMatchPlayer.xp_per_min,Mode=OneWay}" HorizontalAlignment="Center" Foreground="{ThemeResource DotaholdApplicationForeground}" FontSize="13" FontWeight="Medium" FontFamily="{ThemeResource RadianceSemiBold}"/>
                            </StackPanel>
                        </Grid>

                        <!--NET Worth-->
                        <Grid Height="48" MinWidth="96" CornerRadius="4" Margin="0,0,8,0" BorderThickness="1" BorderBrush="{ThemeResource DotaholdSeparatorColor}" Background="Transparent">
                            <FontIcon Glyph="&#xEE94;" FontFamily="{ThemeResource SymbolThemeFontFamily}" FontSize="26" Margin="4,2" Opacity="0.1" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
                            <StackPanel Padding="24,0" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="NET Worth" HorizontalAlignment="Center" Foreground="{ThemeResource DotaholdApplicationDimmedForeground}" FontSize="14" FontWeight="Medium"/>
                                <TextBlock Text="{x:Bind MatchPlayerModel.DotaMatchPlayer.net_worth,Mode=OneWay}" HorizontalAlignment="Center" Foreground="{ThemeResource DotaholdApplicationForeground}" FontSize="13" FontWeight="Medium" FontFamily="{ThemeResource RadianceSemiBold}"/>
                            </StackPanel>
                        </Grid>

                        <!--Last Hits-->
                        <Grid Height="48" MinWidth="96" CornerRadius="4" Margin="0,0,8,0" BorderThickness="1" BorderBrush="{ThemeResource DotaholdSeparatorColor}" Background="Transparent">
                            <FontIcon Glyph="&#xF138;" FontFamily="{ThemeResource SymbolThemeFontFamily}" FontSize="26" Margin="4,2" Opacity="0.1" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
                            <StackPanel Padding="24,0" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="Last Hits" HorizontalAlignment="Center" Foreground="{ThemeResource DotaholdApplicationDimmedForeground}" FontSize="14" FontWeight="Medium"/>
                                <TextBlock Text="{x:Bind MatchPlayerModel.DotaMatchPlayer.last_hits,Mode=OneWay}" HorizontalAlignment="Center" Foreground="{ThemeResource DotaholdApplicationForeground}" FontSize="13" FontWeight="Medium" FontFamily="{ThemeResource RadianceSemiBold}"/>
                            </StackPanel>
                        </Grid>

                        <!--Denies-->
                        <Grid Height="48" MinWidth="96" CornerRadius="4" Margin="0,0,8,0" BorderThickness="1" BorderBrush="{ThemeResource DotaholdSeparatorColor}" Background="Transparent">
                            <FontIcon Glyph="&#xE8C9;" FontFamily="{ThemeResource SymbolThemeFontFamily}" FontSize="26" Margin="4,2" Opacity="0.1" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
                            <StackPanel Padding="24,0" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="Denies" HorizontalAlignment="Center" Foreground="{ThemeResource DotaholdApplicationDimmedForeground}" FontSize="14" FontWeight="Medium"/>
                                <TextBlock Text="{x:Bind MatchPlayerModel.DotaMatchPlayer.denies,Mode=OneWay}" HorizontalAlignment="Center" Foreground="{ThemeResource DotaholdApplicationForeground}" FontSize="13" FontWeight="Medium" FontFamily="{ThemeResource RadianceSemiBold}"/>
                            </StackPanel>
                        </Grid>

                        <!--Hero Damage-->
                        <Grid Height="48" MinWidth="96" CornerRadius="4" Margin="0,0,8,0" BorderThickness="1" BorderBrush="{ThemeResource DotaholdSeparatorColor}" Background="Transparent">
                            <FontIcon Glyph="&#xEA92;" FontFamily="{ThemeResource SymbolThemeFontFamily}" FontSize="26" Margin="4,2" Opacity="0.1" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
                            <StackPanel Padding="24,0" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="Hero Damage" HorizontalAlignment="Center" Foreground="{ThemeResource DotaholdApplicationDimmedForeground}" FontSize="14" FontWeight="Medium"/>
                                <TextBlock Text="{x:Bind MatchPlayerModel.DotaMatchPlayer.hero_damage,Mode=OneWay}" HorizontalAlignment="Center" Foreground="{ThemeResource DotaholdApplicationForeground}" FontSize="13" FontWeight="Medium" FontFamily="{ThemeResource RadianceSemiBold}"/>
                            </StackPanel>
                        </Grid>

                        <!--Tower Damage-->
                        <Grid Height="48" MinWidth="96" CornerRadius="4" Margin="0,0,8,0" BorderThickness="1" BorderBrush="{ThemeResource DotaholdSeparatorColor}" Background="Transparent">
                            <FontIcon Glyph="&#xECAD;" FontFamily="{ThemeResource SymbolThemeFontFamily}" FontSize="26" Margin="4,2" Opacity="0.1" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
                            <StackPanel Padding="24,0" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="Tower Damage" HorizontalAlignment="Center" Foreground="{ThemeResource DotaholdApplicationDimmedForeground}" FontSize="14" FontWeight="Medium"/>
                                <TextBlock Text="{x:Bind MatchPlayerModel.DotaMatchPlayer.tower_damage,Mode=OneWay}" HorizontalAlignment="Center" Foreground="{ThemeResource DotaholdApplicationForeground}" FontSize="13" FontWeight="Medium" FontFamily="{ThemeResource RadianceSemiBold}"/>
                            </StackPanel>
                        </Grid>

                        <!--Hero Healing-->
                        <Grid Height="48" MinWidth="96" CornerRadius="4" Margin="0,0,8,0" BorderThickness="1" BorderBrush="{ThemeResource DotaholdSeparatorColor}" Background="Transparent">
                            <FontIcon Glyph="&#xE95E;" FontFamily="{ThemeResource SymbolThemeFontFamily}" FontSize="26" Margin="4,2" Opacity="0.1" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
                            <StackPanel Padding="24,0" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="Hero Healing" HorizontalAlignment="Center" Foreground="{ThemeResource DotaholdApplicationDimmedForeground}" FontSize="14" FontWeight="Medium"/>
                                <TextBlock Text="{x:Bind MatchPlayerModel.DotaMatchPlayer.hero_healing,Mode=OneWay}" HorizontalAlignment="Center" Foreground="{ThemeResource DotaholdApplicationForeground}" FontSize="13" FontWeight="Medium" FontFamily="{ThemeResource RadianceSemiBold}"/>
                            </StackPanel>
                        </Grid>

                    </StackPanel>
                </ScrollViewer>

                <!--Statistics-->
                <ScrollViewer x:Name="StatisticsScrollViewer" HorizontalAlignment="Stretch" VerticalAlignment="Top" HorizontalScrollMode="Auto" VerticalScrollMode="Disabled"
                              Visibility="{x:Bind MatchPlayerModel.HasParsed,Mode=OneWay,Converter={StaticResource BoolToVisibilityConverter}}" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Disabled">
                    <StackPanel Orientation="Horizontal" Margin="20,12,12,0" HorizontalAlignment="Left" VerticalAlignment="Top">

                        <!--First Blood-->
                        <StackPanel Orientation="Horizontal" Spacing="4" Height="32" CornerRadius="16" Margin="0,0,8,0" Padding="10,0,16,0" BorderThickness="1" BorderBrush="{ThemeResource DotaholdSeparatorColor}" Background="Transparent"
                                    Visibility="{x:Bind MatchPlayerModel.DotaMatchPlayer.firstblood_claimed,Mode=OneWay,Converter={StaticResource IntToVisibilityConverter}}">
                            <Image Height="18" VerticalAlignment="Center">
                                <Image.Source>
                                    <BitmapImage UriSource="/Assets/Matches/Data/icon_blood.png" DecodePixelType="Logical" DecodePixelHeight="18"/>
                                </Image.Source>
                            </Image>
                            <TextBlock Text="First Blood" FontSize="14" FontWeight="Medium" FontFamily="{ThemeResource RadianceSemiBold}" Foreground="{ThemeResource DotaholdApplicationForeground}" VerticalAlignment="Center"/>
                        </StackPanel>

                        <!--Rune Pickups-->
                        <StackPanel Orientation="Horizontal" Spacing="2" Height="32" CornerRadius="16" Margin="0,0,8,0" Padding="8,0,16,0" BorderThickness="1" BorderBrush="{ThemeResource DotaholdSeparatorColor}" Background="Transparent"
                                    Visibility="{x:Bind MatchPlayerModel.DotaMatchPlayer.rune_pickups,Mode=OneWay,Converter={StaticResource IntToVisibilityConverter}}">
                            <Image Height="18" VerticalAlignment="Center">
                                <Image.Source>
                                    <BitmapImage UriSource="/Assets/Matches/Data/icon_rune.png" DecodePixelType="Logical" DecodePixelHeight="18"/>
                                </Image.Source>
                            </Image>
                            <TextBlock FontSize="14" FontWeight="Medium" FontFamily="{ThemeResource RadianceSemiBold}" VerticalAlignment="Center">
                                <Run Text="Rune Pickups" Foreground="{ThemeResource DotaholdApplicationDimmedForeground}"/>
                                <Run Text="{x:Bind MatchPlayerModel.DotaMatchPlayer.rune_pickups,Mode=OneWay}" Foreground="{ThemeResource DotaholdApplicationForeground}"/>
                            </TextBlock>
                        </StackPanel>

                        <!--Buyback Count-->
                        <StackPanel Orientation="Horizontal" Spacing="4" Height="32" CornerRadius="16" Margin="0,0,8,0" Padding="12,0,16,0" BorderThickness="1" BorderBrush="{ThemeResource DotaholdSeparatorColor}" Background="Transparent"
                                    Visibility="{x:Bind MatchPlayerModel.DotaMatchPlayer.buyback_count,Mode=OneWay,Converter={StaticResource IntToVisibilityConverter}}">
                            <Image Height="18" VerticalAlignment="Center">
                                <Image.Source>
                                    <BitmapImage UriSource="/Assets/Matches/Data/icon_gold_stack.png" DecodePixelType="Logical" DecodePixelHeight="18"/>
                                </Image.Source>
                            </Image>
                            <TextBlock FontSize="14" FontWeight="Medium" FontFamily="{ThemeResource RadianceSemiBold}" VerticalAlignment="Center">
                                <Run Text="Buyback Count" Foreground="{ThemeResource DotaholdApplicationDimmedForeground}"/>
                                <Run Text="{x:Bind MatchPlayerModel.DotaMatchPlayer.buyback_count,Mode=OneWay}" Foreground="{ThemeResource DotaholdApplicationForeground}"/>
                            </TextBlock>
                        </StackPanel>

                        <!--Courier Kills-->
                        <StackPanel Orientation="Horizontal" Spacing="6" Height="32" CornerRadius="16" Margin="0,0,8,0" Padding="10,0,16,0" BorderThickness="1" BorderBrush="{ThemeResource DotaholdSeparatorColor}" Background="Transparent"
                                    Visibility="{x:Bind MatchPlayerModel.DotaMatchPlayer.courier_kills,Mode=OneWay,Converter={StaticResource IntToVisibilityConverter}}">
                            <Image Height="18" VerticalAlignment="Center">
                                <Image.Source>
                                    <BitmapImage UriSource="/Assets/Matches/Data/icon_courier.png" DecodePixelType="Logical" DecodePixelHeight="18"/>
                                </Image.Source>
                            </Image>
                            <TextBlock FontSize="14" FontWeight="Medium" FontFamily="{ThemeResource RadianceSemiBold}" VerticalAlignment="Center">
                                <Run Text="Courier Kills" Foreground="{ThemeResource DotaholdApplicationDimmedForeground}"/>
                                <Run Text="{x:Bind MatchPlayerModel.DotaMatchPlayer.courier_kills,Mode=OneWay}" Foreground="{ThemeResource DotaholdApplicationForeground}"/>
                            </TextBlock>
                        </StackPanel>

                        <!--Observer Ward-->
                        <StackPanel Orientation="Horizontal" Spacing="8" Height="32" CornerRadius="16" Margin="0,0,8,0" Padding="12,0,16,0" BorderThickness="1" BorderBrush="{ThemeResource DotaholdSeparatorColor}" Background="Transparent">
                            <Image Height="16" VerticalAlignment="Center">
                                <Image.Source>
                                    <BitmapImage UriSource="/Assets/Matches/Data/icon_observer_ward.png" DecodePixelType="Logical" DecodePixelHeight="16"/>
                                </Image.Source>
                            </Image>
                            <TextBlock FontSize="14" FontWeight="Medium" FontFamily="{ThemeResource RadianceSemiBold}" VerticalAlignment="Center">
                                <Run Text="Observer Ward" Foreground="{ThemeResource DotaholdApplicationDimmedForeground}"/>
                                <Run Text="{x:Bind MatchPlayerModel.DotaMatchPlayer.obs_placed,Mode=OneWay}" Foreground="#63916C"/>
                                <Run Text="/" Foreground="{ThemeResource DotaholdApplicationDimmedForeground}"/>
                                <Run Text="{x:Bind MatchPlayerModel.DotaMatchPlayer.observer_kills,Mode=OneWay}" Foreground="#C55357"/>
                            </TextBlock>
                        </StackPanel>

                        <!--Sentry Ward-->
                        <StackPanel Orientation="Horizontal" Spacing="8" Height="32" CornerRadius="16" Margin="0,0,8,0" Padding="12,0,16,0" BorderThickness="1" BorderBrush="{ThemeResource DotaholdSeparatorColor}" Background="Transparent">
                            <Image Height="16" VerticalAlignment="Center">
                                <Image.Source>
                                    <BitmapImage UriSource="/Assets/Matches/Data/icon_sentry_ward.png" DecodePixelType="Logical" DecodePixelHeight="16"/>
                                </Image.Source>
                            </Image>
                            <TextBlock FontSize="14" FontWeight="Medium" FontFamily="{ThemeResource RadianceSemiBold}" VerticalAlignment="Center">
                                <Run Text="Sentry Ward" Foreground="{ThemeResource DotaholdApplicationDimmedForeground}"/>
                                <Run Text="{x:Bind MatchPlayerModel.DotaMatchPlayer.sen_placed,Mode=OneWay}" Foreground="#63916C"/>
                                <Run Text="/" Foreground="{ThemeResource DotaholdApplicationDimmedForeground}"/>
                                <Run Text="{x:Bind MatchPlayerModel.DotaMatchPlayer.sentry_kills,Mode=OneWay}" Foreground="#C55357"/>
                            </TextBlock>
                        </StackPanel>

                        <!--Creeps Stacked-->
                        <StackPanel Orientation="Horizontal" Spacing="4" Height="32" CornerRadius="16" Margin="0,0,8,0" Padding="8,0,16,0" BorderThickness="1" BorderBrush="{ThemeResource DotaholdSeparatorColor}" Background="Transparent">
                            <Image Height="18" VerticalAlignment="Center">
                                <Image.Source>
                                    <BitmapImage UriSource="/Assets/Matches/Data/icon_creep.png" DecodePixelType="Logical" DecodePixelHeight="18"/>
                                </Image.Source>
                            </Image>
                            <TextBlock FontSize="14" FontWeight="Medium" FontFamily="{ThemeResource RadianceSemiBold}" VerticalAlignment="Center">
                                <Run Text="Creeps Stacked" Foreground="{ThemeResource DotaholdApplicationDimmedForeground}"/>
                                <Run Text="{x:Bind MatchPlayerModel.DotaMatchPlayer.creeps_stacked,Mode=OneWay}" Foreground="{ThemeResource DotaholdApplicationForeground}"/>
                            </TextBlock>
                        </StackPanel>

                        <!--Camps Stacked-->
                        <StackPanel Orientation="Horizontal" Spacing="4" Height="32" CornerRadius="16" Margin="0,0,8,0" Padding="8,0,16,0" BorderThickness="1" BorderBrush="{ThemeResource DotaholdSeparatorColor}" Background="Transparent">
                            <Image Height="18" VerticalAlignment="Center">
                                <Image.Source>
                                    <BitmapImage UriSource="/Assets/Matches/Data/icon_small_camps.png" DecodePixelType="Logical" DecodePixelHeight="18"/>
                                </Image.Source>
                            </Image>
                            <TextBlock FontSize="14" FontWeight="Medium" FontFamily="{ThemeResource RadianceSemiBold}" VerticalAlignment="Center">
                                <Run Text="Camps Stacked" Foreground="{ThemeResource DotaholdApplicationDimmedForeground}"/>
                                <Run Text="{x:Bind MatchPlayerModel.DotaMatchPlayer.camps_stacked,Mode=OneWay}" Foreground="{ThemeResource DotaholdApplicationForeground}"/>
                            </TextBlock>
                        </StackPanel>

                        <!--Neutral Kills-->
                        <StackPanel Orientation="Horizontal" Spacing="6" Height="32" CornerRadius="16" Margin="0,0,8,0" Padding="10,0,16,0" BorderThickness="1" BorderBrush="{ThemeResource DotaholdSeparatorColor}" Background="Transparent">
                            <Image Height="16" VerticalAlignment="Center">
                                <Image.Source>
                                    <BitmapImage UriSource="/Assets/Matches/Data/icon_ancient_camps.png" DecodePixelType="Logical" DecodePixelHeight="16"/>
                                </Image.Source>
                            </Image>
                            <TextBlock FontSize="14" FontWeight="Medium" FontFamily="{ThemeResource RadianceSemiBold}" VerticalAlignment="Center">
                                <Run Text="Neutral Kills" Foreground="{ThemeResource DotaholdApplicationDimmedForeground}"/>
                                <Run Text="{x:Bind MatchPlayerModel.DotaMatchPlayer.neutral_kills,Mode=OneWay}" Foreground="{ThemeResource DotaholdApplicationForeground}"/>
                            </TextBlock>
                        </StackPanel>

                        <!--Roshan Kills-->
                        <StackPanel Orientation="Horizontal" Spacing="8" Height="32" CornerRadius="16" Margin="0,0,8,0" Padding="12,0,16,0" BorderThickness="1" BorderBrush="{ThemeResource DotaholdSeparatorColor}" Background="Transparent">
                            <Image Height="18" VerticalAlignment="Center">
                                <Image.Source>
                                    <BitmapImage UriSource="/Assets/Matches/Data/icon_roshan.png" DecodePixelType="Logical" DecodePixelHeight="18"/>
                                </Image.Source>
                            </Image>
                            <TextBlock FontSize="14" FontWeight="Medium" FontFamily="{ThemeResource RadianceSemiBold}" VerticalAlignment="Center">
