                                    <muxc:ProgressBar Maximum="100" Value="{x:Bind Percentage}" Foreground="{x:Bind ForegroundColorBrush}" Background="{ThemeResource DotaholdSeparatorColor}" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" FontSize="14" FontFamily="{ThemeResource RadianceSemiBold}" Foreground="{x:Bind ForegroundColorBrush}" HorizontalAlignment="Left" VerticalAlignment="Center">
                                        <Run Text="{x:Bind Percentage}"/>
                                        <Run Text="%"/>
                                    </TextBlock>
                                </Grid>
                            </Grid>
                        </DataTemplate>
                    </muxc:ItemsRepeater>
                </ScrollViewer>

            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>
