                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" Height="27" Width="27" BorderThickness="1.5" BorderBrush="#141727" CornerRadius="12" HorizontalAlignment="Left" VerticalAlignment="Center">
