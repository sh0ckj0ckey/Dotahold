<Page
    x:Class="Dotahold.Pages.Matches.MatchDataPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dotahold.Pages.Matches"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:muxm="using:Microsoft.UI.Xaml.Media"
    xmlns:animatedVisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
    xmlns:community="using:CommunityToolkit.WinUI"
    xmlns:communityControls="using:CommunityToolkit.WinUI.Controls"
    xmlns:communityMedia="using:CommunityToolkit.WinUI.Media"
    xmlns:communityConverters="using:CommunityToolkit.WinUI.Converters"
    xmlns:communityAnimations="using:CommunityToolkit.WinUI.Animations"
    xmlns:models="using:Dotahold.Models"
    xmlns:converters="using:Dotahold.Converters" 
    xmlns:controls="using:Dotahold.Controls"
    mc:Ignorable="d"
    NavigationCacheMode="Enabled">

    <Page.Resources>
        <communityConverters:BoolNegationConverter x:Key="BoolNegationConverter"/>
        <converters:StringArrayToStringConverter x:Key="StringArrayToStringConverter"/>
        <converters:EqualToVisibilityConverter x:Key="EqualToVisibilityConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:DoubleToStringConverter x:Key="DoubleToStringConverter"/>
        <converters:IntToVisibilityConverter x:Key="IntToVisibilityConverter"/>
        <converters:EmptyToVisibilityConverter x:Key="EmptyToVisibilityConverter"/>
        <converters:PlayerRankToMedalImageConverter x:Key="PlayerRankToMedalImageConverter"/>
        <converters:EmptyStringToBoolConverter x:Key="EmptyStringToBoolConverter"/>
        <converters:NullToBoolConverter x:Key="NullToBoolConverter"/>
        <converters:ItemTierToColorConverter x:Key="ItemTierToColorConverter"/>

        <DataTemplate x:DataType="models:MatchPlayerModel" x:Key="MatchPlayerItemTemplate">
            <Button MinHeight="72" Padding="8" Tag="{x:Bind DotaMatchPlayer}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!--Hero Image-->
                    <Grid Grid.Column="0" Width="77" Height="42" CornerRadius="4" BorderBrush="{x:Bind SlotColorBrush}" BorderThickness="2,0,0,0"
                          HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Grid.Background>
                            <ImageBrush Stretch="UniformToFill" ImageSource="{x:Bind Hero.HeroImage.Image,Mode=OneWay}"/>
                        </Grid.Background>

                        <!--Level-->
                        <Grid Height="36" Width="36" HorizontalAlignment="Left" VerticalAlignment="Top">
                            <Polygon Points="0,0,36,0,0,36">
                                <Polygon.Fill>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStopCollection>
                                            <GradientStop Color="#222222" Offset="0"/>
                                            <GradientStop Color="#00222222" Offset="0.6"/>
                                            <GradientStop Color="#00222222" Offset="1.0"/>
                                        </GradientStopCollection>
                                    </LinearGradientBrush>
                                </Polygon.Fill>
                            </Polygon>
                            <TextBlock Text="{x:Bind DotaMatchPlayer.level}" FontFamily="{ThemeResource ReaverBold}" Foreground="#FADA9E" Margin="2" FontSize="13" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                        </Grid>

                        <!--Facet-->
                        <Border Height="42" Width="64" Visibility="{x:Bind AbilitiesFacet,Converter={StaticResource EmptyToVisibilityConverter}}" ToolTipService.Placement="Right" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="1,1" EndPoint="0,0">
                                    <GradientStopCollection>
                                        <GradientStop Color="#222222" Offset="0.0"/>
                                        <GradientStop Color="#00222222" Offset="0.6"/>
                                        <GradientStop Color="#00222222" Offset="1.0"/>
                                    </GradientStopCollection>
                                </LinearGradientBrush>
                            </Border.Background>
                            <ToolTipService.ToolTip>
                                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="36"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="0" ColumnSpacing="12" CornerRadius="2" Background="{x:Bind AbilitiesFacet.BackgroundBrush}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="36"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Border Grid.Column="0" Background="#16000000" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                            <Image Height="18" Width="18" Source="{x:Bind AbilitiesFacet.IconImage.Image,Mode=OneWay}" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <TextBlock Grid.Column="1" Text="{x:Bind AbilitiesFacet.Title}" FontFamily="{ThemeResource ReaverBold}" Foreground="#FFFFFF" FontSize="16" Margin="0,2,8,-2" FontWeight="Bold" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                    </Grid>
                                    <TextBlock Grid.Row="1" Margin="12" Text="{x:Bind AbilitiesFacet.Description}" FontFamily="{ThemeResource Radiance}" FontSize="15" Opacity="0.7" TextWrapping="Wrap" HorizontalAlignment="Left"/>
                                </Grid>
                            </ToolTipService.ToolTip>
                            <Image Height="18" Width="18" Margin="4" Opacity="0.8" Stretch="UniformToFill" Source="{x:Bind AbilitiesFacet.IconImage.Image,Mode=OneWay}" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
                        </Border>
                    </Grid>

                    <!--Player Info-->
                    <Grid Grid.Column="1" RowSpacing="2" ColumnSpacing="4" Margin="12,2,16,-2" HorizontalAlignment="Stretch" VerticalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" ColumnSpacing="8" Margin="0,0,280,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <!--Rank Tier-->
                            <Image Grid.Column="0" Source="{x:Bind DotaMatchPlayer.rank_tier,Converter={StaticResource PlayerRankToMedalImageConverter},ConverterParameter=52}" Height="26" Width="26" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                            <!--Player Name-->
                            <TextBlock Grid.Column="1" Text="{x:Bind DotaMatchPlayer.personaname}" FontSize="16" FontWeight="Bold" FontFamily="{ThemeResource ReaverBold}"
                                       Visibility="{x:Bind DotaMatchPlayer.personaname,Converter={StaticResource EmptyToVisibilityConverter}}" TextTrimming="CharacterEllipsis" HorizontalAlignment="Left" VerticalAlignment="Center">
                                <ToolTipService.ToolTip>
                                    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0" Text="{x:Bind DotaMatchPlayer.personaname}" FontSize="14" FontWeight="Bold" FontFamily="{ThemeResource ReaverBold}" TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                        <StackPanel x:Name="PlayerNameStackPanel" x:Load="{x:Bind DotaMatchPlayer.name,Converter={StaticResource EmptyStringToBoolConverter}}" Grid.Row="1" Spacing="4" Margin="0,4,0,0" Opacity="0.7" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                                            <FontIcon Glyph="&#xE930;" FontFamily="{ThemeResource SymbolThemeFontFamily}" FontSize="12" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                            <TextBlock Text="{x:Bind DotaMatchPlayer.name}" FontSize="14" FontFamily="{ThemeResource RadianceSemiBold}" TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Grid>
                                </ToolTipService.ToolTip>
                            </TextBlock>
                            <TextBlock Grid.Column="1" Text="Anonymous" Opacity="0.5" FontSize="16" FontWeight="Bold" FontFamily="{ThemeResource ReaverBold}"
                                       Visibility="{x:Bind DotaMatchPlayer.personaname,Converter={StaticResource EmptyToVisibilityConverter},ConverterParameter=!}" TextTrimming="CharacterEllipsis" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Grid>

                        <Grid Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!--K/D/A-->
                            <TextBlock Grid.Column="0" Margin="0,0,8,0" FontSize="14" FontFamily="{ThemeResource RadianceSemiBold}" HorizontalAlignment="Right" VerticalAlignment="Center">
                                <Run Text="{x:Bind DotaMatchPlayer.kills}" Foreground="#63916C"/>
                                <Run Text="/"/>
                                <Run Text="{x:Bind DotaMatchPlayer.deaths}" Foreground="#C55357"/>
                                <Run Text="/"/>
                                <Run Text="{x:Bind DotaMatchPlayer.assists}" Foreground="#647E8E"/>
                            </TextBlock>

                            <!--Party-->
                            <StackPanel x:Name="PlayerPartyIdStackPanel" x:Load="{x:Bind PartyId,Converter={StaticResource EmptyStringToBoolConverter}}"
                                        Grid.Column="1" Spacing="4" Orientation="Horizontal" Height="20" Margin="0,0,4,0" Padding="4,0,4,-2" BorderThickness="1" BorderBrush="{ThemeResource DotaholdSeparatorColor}" CornerRadius="4" ToolTipService.ToolTip="Party" HorizontalAlignment="Left" VerticalAlignment="Center">
                                <FontIcon Glyph="&#xE716;" FontSize="12" FontFamily="{ThemeResource SymbolThemeFontFamily}" Foreground="{ThemeResource DotaholdApplicationForeground}" Opacity="0.7" VerticalAlignment="Center"/>
                                <TextBlock Text="{x:Bind PartyId}" FontSize="12" FontFamily="{ThemeResource RadianceSemiBold}" Opacity="0.7" VerticalAlignment="Center"/>
                            </StackPanel>

                            <!--GPM-->
                            <StackPanel Grid.Column="2" Spacing="4" Orientation="Horizontal" Height="20" Margin="0,0,4,0" Padding="4,0,4,-2" BorderThickness="1" BorderBrush="{ThemeResource DotaholdSeparatorColor}" CornerRadius="4" HorizontalAlignment="Left" VerticalAlignment="Center">
                                <TextBlock Text="GPM" FontSize="12" FontFamily="{ThemeResource RadianceSemiBold}" Foreground="{ThemeResource DotaholdGoldForeground}" Opacity="0.7" VerticalAlignment="Center"/>
                                <TextBlock Text="{x:Bind DotaMatchPlayer.gold_per_min}" FontSize="12" FontFamily="{ThemeResource RadianceSemiBold}" VerticalAlignment="Center"/>
                            </StackPanel>

                            <!--XPM-->
                            <StackPanel Grid.Column="3" Spacing="4" Orientation="Horizontal" Height="20" Margin="0,0,4,0" Padding="4,0,4,-2" BorderThickness="1" BorderBrush="{ThemeResource DotaholdSeparatorColor}" CornerRadius="4" HorizontalAlignment="Left" VerticalAlignment="Center">
                                <TextBlock Text="XPM" FontSize="12" FontFamily="{ThemeResource RadianceSemiBold}" Foreground="MediumOrchid" Opacity="0.7" VerticalAlignment="Center"/>
                                <TextBlock Text="{x:Bind DotaMatchPlayer.xp_per_min}" FontSize="12" FontFamily="{ThemeResource RadianceSemiBold}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Grid>

                    <!--Items, Backpacks and NeutralItems, and SpiritBear-->
                    <Grid Grid.Column="1" RowSpacing="4" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!--Items-->
                        <StackPanel Grid.Row="0" Spacing="4" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                            <Border Height="32" Width="44" CornerRadius="4" Background="{ThemeResource DotaholdPlaceholderBackgroundColor}" ToolTipService.ToolTip="{x:Bind Item0.DotaItemAttributes.dname}">
                                <Image Source="{x:Bind Item0.ItemImage.Image,Mode=OneWay}" Height="32" Width="44" Stretch="UniformToFill"/>
                            </Border>
                            <Border Height="32" Width="44" CornerRadius="4" Background="{ThemeResource DotaholdPlaceholderBackgroundColor}" ToolTipService.ToolTip="{x:Bind Item1.DotaItemAttributes.dname}">
                                <Image Source="{x:Bind Item1.ItemImage.Image,Mode=OneWay}" Height="32" Width="44" Stretch="UniformToFill"/>
                            </Border>
                            <Border Height="32" Width="44" CornerRadius="4" Background="{ThemeResource DotaholdPlaceholderBackgroundColor}" ToolTipService.ToolTip="{x:Bind Item2.DotaItemAttributes.dname}">
                                <Image Source="{x:Bind Item2.ItemImage.Image,Mode=OneWay}" Height="32" Width="44" Stretch="UniformToFill"/>
                            </Border>
                            <Border Height="32" Width="44" CornerRadius="4" Background="{ThemeResource DotaholdPlaceholderBackgroundColor}" ToolTipService.ToolTip="{x:Bind Item3.DotaItemAttributes.dname}">
                                <Image Source="{x:Bind Item3.ItemImage.Image,Mode=OneWay}" Height="32" Width="44" Stretch="UniformToFill"/>
                            </Border>
                            <Border Height="32" Width="44" CornerRadius="4" Background="{ThemeResource DotaholdPlaceholderBackgroundColor}" ToolTipService.ToolTip="{x:Bind Item4.DotaItemAttributes.dname}">
                                <Image Source="{x:Bind Item4.ItemImage.Image,Mode=OneWay}" Height="32" Width="44" Stretch="UniformToFill"/>
                            </Border>
                            <Border Height="32" Width="44" CornerRadius="4" Background="{ThemeResource DotaholdPlaceholderBackgroundColor}" ToolTipService.ToolTip="{x:Bind Item5.DotaItemAttributes.dname}">
                                <Image Source="{x:Bind Item5.ItemImage.Image,Mode=OneWay}" Height="32" Width="44" Stretch="UniformToFill"/>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Spacing="4" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">

                            <!--Additional Unit-->
                            <Button x:Name="AdditionalUnitButton" x:Load="{x:Bind AdditionalUnit,Converter={StaticResource NullToBoolConverter}}"
                                    Height="26" Width="26" Padding="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                                <Image Source="{x:Bind AdditionalUnit.AdditionalUnitIcon.Image,Mode=OneWay}" Height="20" Width="20" Stretch="UniformToFill"/>
                                <Button.Flyout>
                                    <Flyout Placement="Left">
                                        <Flyout.FlyoutPresenterStyle>
                                            <Style TargetType="FlyoutPresenter">
                                                <Setter Property="CornerRadius" Value="6"/>
                                                <Setter Property="IsDefaultShadowEnabled" Value="False"/>
                                                <Setter Property="Background" Value="{ThemeResource DotaholdApplicationPageBackground}"/>
                                            </Style>
                                        </Flyout.FlyoutPresenterStyle>
                                        <Grid HorizontalAlignment="Center" RowSpacing="4">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Border Grid.Row="0" Height="48" Width="48" CornerRadius="4" HorizontalAlignment="Right" VerticalAlignment="Center">
                                                <Border.Background>
                                                    <ImageBrush ImageSource="{x:Bind AdditionalUnit.AdditionalUnitImage.Image,Mode=OneWay}" Stretch="UniformToFill"/>
                                                </Border.Background>
                                            </Border>
                                            <TextBlock Grid.Row="0" Text="{x:Bind AdditionalUnit.AdditionalUnitName}" FontFamily="{ThemeResource ReaverBold}" FontSize="14" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="2,0,0,0"/>
                                            <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="4" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <Border Height="32" Width="44" CornerRadius="4" Background="{ThemeResource DotaholdPlaceholderBackgroundColor}" ToolTipService.ToolTip="{x:Bind AdditionalUnit.Item0.DotaItemAttributes.dname}">
                                                    <Image Source="{x:Bind AdditionalUnit.Item0.ItemImage.Image,Mode=OneWay}" Height="32" Width="44" Stretch="UniformToFill"/>
                                                </Border>
                                                <Border Height="32" Width="44" CornerRadius="4" Background="{ThemeResource DotaholdPlaceholderBackgroundColor}" ToolTipService.ToolTip="{x:Bind AdditionalUnit.Item1.DotaItemAttributes.dname}">
                                                    <Image Source="{x:Bind AdditionalUnit.Item1.ItemImage.Image,Mode=OneWay}" Height="32" Width="44" Stretch="UniformToFill"/>
                                                </Border>
                                                <Border Height="32" Width="44" CornerRadius="4" Background="{ThemeResource DotaholdPlaceholderBackgroundColor}" ToolTipService.ToolTip="{x:Bind AdditionalUnit.Item2.DotaItemAttributes.dname}">
                                                    <Image Source="{x:Bind AdditionalUnit.Item2.ItemImage.Image,Mode=OneWay}" Height="32" Width="44" Stretch="UniformToFill"/>
                                                </Border>
                                            </StackPanel>
                                            <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="4" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <Border Height="32" Width="44" CornerRadius="4" Background="{ThemeResource DotaholdPlaceholderBackgroundColor}" ToolTipService.ToolTip="{x:Bind AdditionalUnit.Item3.DotaItemAttributes.dname}">
                                                    <Image Source="{x:Bind AdditionalUnit.Item3.ItemImage.Image,Mode=OneWay}" Height="32" Width="44" Stretch="UniformToFill"/>
                                                </Border>
                                                <Border Height="32" Width="44" CornerRadius="4" Background="{ThemeResource DotaholdPlaceholderBackgroundColor}" ToolTipService.ToolTip="{x:Bind AdditionalUnit.Item4.DotaItemAttributes.dname}">
                                                    <Image Source="{x:Bind AdditionalUnit.Item4.ItemImage.Image,Mode=OneWay}" Height="32" Width="44" Stretch="UniformToFill"/>
                                                </Border>
                                                <Border Height="32" Width="44" CornerRadius="4" Background="{ThemeResource DotaholdPlaceholderBackgroundColor}" ToolTipService.ToolTip="{x:Bind AdditionalUnit.Item5.DotaItemAttributes.dname}">
                                                    <Image Source="{x:Bind AdditionalUnit.Item5.ItemImage.Image,Mode=OneWay}" Height="32" Width="44" Stretch="UniformToFill"/>
                                                </Border>
                                            </StackPanel>
                                            <StackPanel Grid.Row="3" Orientation="Horizontal" Spacing="4" Margin="0,4,0,0" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <Border Width="26" Height="26" CornerRadius="13" Background="{ThemeResource DotaholdPlaceholderBackgroundColor}" ToolTipService.ToolTip="{x:Bind AdditionalUnit.ItemNeutral.DotaItemAttributes.dname}">
                                                    <Image Width="35" Height="26" Source="{x:Bind AdditionalUnit.ItemNeutral.ItemImage.Image,Mode=OneWay}" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="UniformToFill"/>
                                                </Border>
                                                <Border Height="26" Width="35" CornerRadius="4" Background="{ThemeResource DotaholdPlaceholderBackgroundColor}" ToolTipService.ToolTip="{x:Bind AdditionalUnit.Backpack0.DotaItemAttributes.dname}">
                                                    <Image Source="{x:Bind AdditionalUnit.Backpack0.ItemImage.Image,Mode=OneWay}" Height="26" Width="35" Stretch="UniformToFill" Opacity="0.7"/>
                                                </Border>
                                                <Border Height="26" Width="35" CornerRadius="4" Background="{ThemeResource DotaholdPlaceholderBackgroundColor}" ToolTipService.ToolTip="{x:Bind AdditionalUnit.Backpack1.DotaItemAttributes.dname}">
                                                    <Image Source="{x:Bind AdditionalUnit.Backpack1.ItemImage.Image,Mode=OneWay}" Height="26" Width="35" Stretch="UniformToFill" Opacity="0.7"/>
                                                </Border>
                                                <Border Height="26" Width="35" CornerRadius="4" Background="{ThemeResource DotaholdPlaceholderBackgroundColor}" ToolTipService.ToolTip="{x:Bind AdditionalUnit.Backpack2.DotaItemAttributes.dname}">
                                                    <Image Source="{x:Bind AdditionalUnit.Backpack2.ItemImage.Image,Mode=OneWay}" Height="26" Width="35" Stretch="UniformToFill" Opacity="0.7"/>
                                                </Border>
                                            </StackPanel>
                                        </Grid>
                                    </Flyout>
                                </Button.Flyout>
                            </Button>

                            <Rectangle x:Name="AdditionalUnitSeparator" x:Load="{x:Bind AdditionalUnit,Converter={StaticResource NullToBoolConverter}}"
                                       Width="1" Height="16" Fill="{ThemeResource DotaholdSeparatorColor}" VerticalAlignment="Center"/>

                            <!--NeutralItems-->
                            <Border Width="26" Height="26" CornerRadius="13,3,3,13" Background="{ThemeResource DotaholdPlaceholderBackgroundColor}" ToolTipService.ToolTip="{x:Bind ItemNeutral.DotaItemAttributes.dname}">
                                <Image Width="35" Height="26" Source="{x:Bind ItemNeutral.ItemImage.Image,Mode=OneWay}" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="UniformToFill"/>
                            </Border>
                            <Border Width="26" Height="26" CornerRadius="3,13,13,3" Background="{ThemeResource DotaholdPlaceholderBackgroundColor}" ToolTipService.ToolTip="{x:Bind ItemNeutralEnhancement.DotaItemAttributes.dname}">
                                <Image Width="35" Height="26" Source="{x:Bind ItemNeutralEnhancement.ItemImage.Image,Mode=OneWay}" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="UniformToFill"/>
                            </Border>

                            <!--Backpacks-->
                            <Border Height="26" Width="35" CornerRadius="4" Background="{ThemeResource DotaholdPlaceholderBackgroundColor}" ToolTipService.ToolTip="{x:Bind Backpack0.DotaItemAttributes.dname}">
                                <Image Source="{x:Bind Backpack0.ItemImage.Image,Mode=OneWay}" Height="26" Width="35" Stretch="UniformToFill" Opacity="0.7"/>
                            </Border>
                            <Border Height="26" Width="35" CornerRadius="4" Background="{ThemeResource DotaholdPlaceholderBackgroundColor}" ToolTipService.ToolTip="{x:Bind Backpack1.DotaItemAttributes.dname}">
                                <Image Source="{x:Bind Backpack1.ItemImage.Image,Mode=OneWay}" Height="26" Width="35" Stretch="UniformToFill" Opacity="0.7"/>
                            </Border>
                            <Border Height="26" Width="35" CornerRadius="4" Background="{ThemeResource DotaholdPlaceholderBackgroundColor}" ToolTipService.ToolTip="{x:Bind Backpack2.DotaItemAttributes.dname}">
                                <Image Source="{x:Bind Backpack2.ItemImage.Image,Mode=OneWay}" Height="26" Width="35" Stretch="UniformToFill" Opacity="0.7"/>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <!--Aghanim Scepter and Shard-->
                    <Grid x:Name="AghanimStatusGrid" x:Load="{x:Bind HasParsed}" Grid.Column="2" Margin="16,0,8,0" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Image x:Name="LockedAghanimScepterIconImage" x:Load="{x:Bind HasAghanimScepter,Converter={StaticResource BoolNegationConverter}}"
                               Grid.Row="0" Height="29" Stretch="Uniform">
                            <Image.Source>
                                <BitmapImage UriSource="/Assets/Matches/icon_scepter_0.png" DecodePixelHeight="29" DecodePixelType="Logical"/>
                            </Image.Source>
                        </Image>
                        <Image x:Name="UnlockedAghanimScepterIconImage" x:Load="{x:Bind HasAghanimScepter}"
                               Grid.Row="0" Height="29" Stretch="Uniform">
                            <Image.Source>
                                <BitmapImage UriSource="/Assets/Matches/icon_scepter_1.png" DecodePixelHeight="29" DecodePixelType="Logical"/>
                            </Image.Source>
                        </Image>
                        <Image x:Name="LockedAghanimShardIconImage" x:Load="{x:Bind HasAghanimShard,Converter={StaticResource BoolNegationConverter}}"
                               Grid.Row="1" Height="17" Stretch="Uniform">
                            <Image.Source>
                                <BitmapImage UriSource="/Assets/Matches/icon_shard_0.png" DecodePixelHeight="17" DecodePixelType="Logical"/>
                            </Image.Source>
                        </Image>
                        <Image x:Name="UnlockedAghanimShardIconImage" x:Load="{x:Bind HasAghanimShard}" 
                               Grid.Row="1" Height="17" Stretch="Uniform">
                            <Image.Source>
                                <BitmapImage UriSource="/Assets/Matches/icon_shard_1.png" DecodePixelHeight="17" DecodePixelType="Logical"/>
                            </Image.Source>
                        </Image>
                    </Grid>
                </Grid>
            </Button>
        </DataTemplate>

    </Page.Resources>

    <Grid x:Name="RootGrid" SizeChanged="RootGrid_SizeChanged" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" ColumnSpacing="8" Margin="16,8,20,-8" HorizontalAlignment="Stretch" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="58"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!--Back Button-->
            <Button Grid.Column="0" Width="58" Height="42" Padding="0" Background="Transparent" Content="&#xE652;" FontSize="16" FontFamily="{ThemeResource SymbolThemeFontFamily}"
                    ToolTipService.ToolTip="Go Back" Click="BackButton_Click" HorizontalAlignment="Left" VerticalAlignment="Center"/>

            <!--Loading-->
            <TextBlock Grid.Column="1" Text="Loading Match Data" Visibility="{x:Bind _viewModel.MatchesViewModel.LoadingMatchData,Mode=OneWay,Converter={StaticResource BoolToVisibilityConverter}}"
                       Margin="8,2,16,-2" Opacity="0.7" FontFamily="{ThemeResource ReaverBold}" FontSize="20" TextTrimming="CharacterEllipsis" HorizontalAlignment="Left" VerticalAlignment="Center"/>

            <!--Match Result-->
            <Grid Grid.Column="1" Visibility="{x:Bind _viewModel.MatchesViewModel.LoadingMatchData,Mode=OneWay,Converter={StaticResource BoolToVisibilityConverter},ConverterParameter=!}" HorizontalAlignment="Left" VerticalAlignment="Center">
                <communityAnimations:Implicit.ShowAnimations>
                    <communityAnimations:TranslationAnimation From="-16,0,0" To="0,0,0" EasingMode="EaseOut" Duration="0:0:1"/>
                    <communityAnimations:OpacityAnimation From="0" To="1" Duration="0:0:0.8"/>
                </communityAnimations:Implicit.ShowAnimations>

                <!--Radiant Win-->
                <Grid x:Name="RadiantWinGrid" x:Load="{x:Bind _viewModel.MatchesViewModel.SelectedMatchData.DotaMatchData.radiant_win,Mode=OneWay}"
                      Height="42" MaxWidth="268" Padding="8,0,0,0" HorizontalAlignment="Left" CornerRadius="4" Background="#4A7954" BorderBrush="#518A5A" BorderThickness="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image Height="28" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image.Source>
                            <BitmapImage UriSource="/Assets/Matches/icon_radiant_66bb6a.png" DecodePixelHeight="56" DecodePixelType="Logical"/>
                        </Image.Source>
                    </Image>
                    <TextBlock Grid.Column="1" Text="Radiant Victory" Margin="8,2,16,-2" Foreground="#DFECE0" FontFamily="{ThemeResource ReaverBold}" FontSize="20" TextTrimming="CharacterEllipsis" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                </Grid>

                <!--Dire Win-->
                <Grid x:Name="DireWinGrid" x:Load="{x:Bind _viewModel.MatchesViewModel.SelectedMatchData.DotaMatchData.radiant_win,Mode=OneWay,Converter={StaticResource BoolNegationConverter}}"
