                        <Grid x:Name="RadiantHeader" x:Load="{x:Bind _viewModel.MatchesViewModel.SelectedMatchData.RadiantTeam,Mode=OneWay,Converter={StaticResource NullToBoolConverter},ConverterParameter=!}" Margin="24,16,8,8" HorizontalAlignment="Stretch" VerticalAlignment="Center">
