<UserControl
    x:Class="Dotahold.Controls.LineChartControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dotahold.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <Canvas x:Name="ChartCanvas"
                Background="Transparent"
                SizeChanged="ChartCanvas_SizeChanged"
                PointerMoved="ChartCanvas_PointerMoved"
                PointerExited="ChartCanvas_PointerExited"/>
        <Border x:Name="Tooltip"
                Background="#CC222222"
                Padding="4"
                CornerRadius="4"
                Visibility="Collapsed"
                HorizontalAlignment="Left"
                VerticalAlignment="Top">
            <TextBlock x:Name="TooltipText" Foreground="White"/>
        </Border>
    </Grid>
</UserControl>
