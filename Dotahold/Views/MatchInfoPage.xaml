                                <StackPanel Margin="12,0,0,0" Orientation="Vertical">
                                    <TextBlock Text="The replay for this match has not yet been parsed." Opacity="0.8" FontSize="15" FontWeight="Medium"/>
                                    <HyperlinkButton Padding="0" Click="OnClickVisitWebsite">
                                        <HyperlinkButton.Content>
                                            <TextBlock Text="Parse this match on OpenDota"/>
                                        </HyperlinkButton.Content>
                                    </HyperlinkButton>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Grid>

                    <!--玩家经验数据走势图-->
                    <Grid Margin="0,12,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <ToggleButton x:Name="PlayersExpToggleButton" IsChecked="False" Margin="16,0,16,0" HorizontalContentAlignment="Stretch" HorizontalAlignment="Stretch" VerticalAlignment="Center" Checked="OnPlayersExpToggleChecked">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <FontIcon Grid.Column="0" Glyph="&#xEAFC;" Margin="12,0,8,0" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="Experience Graph" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Bold" Margin="0,6" FontSize="16" FontFamily="/Fonts/Reaver-Bold.ttf#Reaver" TextTrimming="CharacterEllipsis" CharacterSpacing="20"/>
                                <FontIcon Grid.Column="2" Margin="2,0,12,0" Glyph="&#xE010;" FontSize="18" FontWeight="Bold" HorizontalAlignment="Right" VerticalAlignment="Center" Visibility="{x:Bind PlayersExpToggleButton.IsChecked,Mode=OneWay,Converter={StaticResource Bool2Vis},ConverterParameter=-}"/>
                                <FontIcon Grid.Column="2" Margin="2,0,12,0" Glyph="&#xE011;" FontSize="18" FontWeight="Bold" HorizontalAlignment="Right" VerticalAlignment="Center" Visibility="{x:Bind PlayersExpToggleButton.IsChecked,Mode=OneWay,Converter={StaticResource Bool2Vis}}"/>
                            </Grid>
                        </ToggleButton>
                        <Grid Grid.Row="1" Visibility="{x:Bind PlayersExpToggleButton.IsChecked,Mode=OneWay,Converter={StaticResource Bool2Vis}}">
                            <lvc:CartesianChart DataContext="{x:Bind ViewModel}" Series="{Binding PlayersXpSeries,Mode=OneWay}"
                                                YAxes="{Binding YAxes}" Sections="{Binding PlayersGoldXPSections}" DrawMarginFrame="{Binding Frame}"
                                                Margin="16,16,24,8" Height="320" CornerRadius="8" 
                                                Visibility="{x:Bind ViewModel.bHavePlayersXpSeries,Mode=OneWay,Converter={StaticResource Bool2Vis}}"/>
                            <StackPanel Margin="0,16,0,12" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal" Visibility="{x:Bind ViewModel.bHaveRadiantAdv,Mode=OneWay,Converter={StaticResource Bool2Vis},ConverterParameter=-}">
                                <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE928;" Opacity="0.7" FontSize="24" VerticalAlignment="Center"/>
                                <StackPanel Margin="12,0,0,0" Orientation="Vertical">
                                    <TextBlock Text="The replay for this match has not yet been parsed." Opacity="0.8" FontSize="15" FontWeight="Medium"/>
                                    <HyperlinkButton Padding="0" Click="OnClickVisitWebsite">
                                        <HyperlinkButton.Content>
                                            <TextBlock Text="Parse this match on OpenDota"/>
                                        </HyperlinkButton.Content>
                                    </HyperlinkButton>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Grid>

                    <!--比赛开始时间-->
                    <Grid Padding="12,18,12,24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Rectangle Grid.Column="0" Margin="16,0" Opacity="0.1" Height="1" HorizontalAlignment="Stretch" VerticalAlignment="Center" Fill="{ThemeResource APPLICATION_FR}"/>
                        <Rectangle Grid.Column="3" Margin="16,0" Opacity="0.1" Height="1" HorizontalAlignment="Stretch" VerticalAlignment="Center" Fill="{ThemeResource APPLICATION_FR}"/>
                        <FontIcon Grid.Column="1" Glyph="&#xE823;" FontSize="14" Opacity="0.5" VerticalAlignment="Center" Margin="0,0,6,-2"/>
                        <TextBlock Grid.Column="2" Opacity="0.5" Text="{x:Bind ViewModel.CurrentMatchInfo.start_time,Mode=OneWay,Converter={StaticResource Long2Date}}" VerticalAlignment="Center" CharacterSpacing="40" FontSize="15" FontWeight="Medium"/>
                    </Grid>

                    <!--前往网页端查看-->
                    <Button Margin="16,0,16,16" Height="42" HorizontalContentAlignment="Stretch" HorizontalAlignment="Stretch" VerticalAlignment="Center" Click="OnClickVisitWebsite">
                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                            <TextBlock FontWeight="Medium" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Run Text="Visit"/>
                                <Run Text="www.opendota.com" Foreground="CornflowerBlue"/>
                                <Run Text="for more data"/>
                            </TextBlock>
                            <FontIcon Glyph="&#xE8A7;" HorizontalAlignment="Right" FontSize="16" Margin="0,0,12,0"/>
                        </Grid>
                    </Button>
                </StackPanel>
            </ScrollViewer>
            <ui:SomethingWrongControl Visibility="{x:Bind ViewModel.CurrentMatchInfo,Mode=OneWay,Converter={StaticResource Null2Vis},ConverterParameter=-}"/>
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="32">
                <Grid.Background>
                    <AcrylicBrush AlwaysUseFallback="False" BackgroundSource="Backdrop" TintColor="{ThemeResource APPLICATION_BK}" 
                                  FallbackColor="{ThemeResource APPLICATION_BK}" TintLuminosityOpacity="0.2" TintOpacity="0.1"/>
                </Grid.Background>
            </Grid>
        </Grid>

        <!--加载中-->
        <Grid Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Height="56" Width="96" CornerRadius="6"
              Visibility="{x:Bind ViewModel.bLoadingOneMatchInfo,Mode=OneWay}">
            <Grid.Background>
                <AcrylicBrush BackgroundSource="Backdrop" FallbackColor="{ThemeResource APPLICATION_BK}" TintColor="Transparent" />
            </Grid.Background>
            <muxc:ProgressRing Height="28" Width="28" Foreground="{ThemeResource APPLICATION_FR}"
                          IsActive="{x:Bind ViewModel.bLoadingOneMatchInfo,Mode=OneWay}"/>
        </Grid>

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <!--大尺寸界面，左右分布-->
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1200"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="DamagePerfCompareGrid.(Grid.Column)" Value="0"/>
                        <Setter Target="DamagePerfCompareGrid.(Grid.Row)" Value="0"/>
                        <Setter Target="DamagePerfCompareGrid.(Grid.ColumnSpan)" Value="1"/>
                        <Setter Target="DamagePerfCompareGrid.(Grid.RowSpan)" Value="2"/>
                        <Setter Target="TeamfightPerfCompareGrid.(Grid.Column)" Value="1"/>
                        <Setter Target="TeamfightPerfCompareGrid.(Grid.Row)" Value="0"/>
                        <Setter Target="TeamfightPerfCompareGrid.(Grid.ColumnSpan)" Value="1"/>
                        <Setter Target="TeamfightPerfCompareGrid.(Grid.RowSpan)" Value="2"/>
                    </VisualState.Setters>
                </VisualState>
                <!--小尺寸界面，上下分布-->
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="DamagePerfCompareGrid.(Grid.Column)" Value="0"/>
                        <Setter Target="DamagePerfCompareGrid.(Grid.Row)" Value="0"/>
                        <Setter Target="DamagePerfCompareGrid.(Grid.ColumnSpan)" Value="2"/>
                        <Setter Target="DamagePerfCompareGrid.(Grid.RowSpan)" Value="1"/>
                        <Setter Target="TeamfightPerfCompareGrid.(Grid.Column)" Value="0"/>
                        <Setter Target="TeamfightPerfCompareGrid.(Grid.Row)" Value="1"/>
                        <Setter Target="TeamfightPerfCompareGrid.(Grid.ColumnSpan)" Value="2"/>
                        <Setter Target="TeamfightPerfCompareGrid.(Grid.RowSpan)" Value="1"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</Page>
