                                    <TextBlock Text="v 3.4.0"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,8"
                                               Opacity="0.7"
                                               FontStyle="Italic"/>
                                    <TextBlock Text="Contact me" FontWeight="Black" HorizontalAlignment="Center" TextDecorations="Underline" Margin="0,16,0,8"/>
