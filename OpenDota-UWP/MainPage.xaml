<Page
    x:Class="OpenDota_UWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OpenDota_UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource RegionBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="64"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Rectangle Grid.Column="0" Grid.RowSpan="2">
            <Rectangle.Fill>
                <AcrylicBrush TintColor="{ThemeResource SlideColor}" TintOpacity="0.7" FallbackColor="{ThemeResource SlideColor}" BackgroundSource="HostBackdrop"/>
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle Grid.Column="1" Grid.RowSpan="2">
            <Rectangle.Fill>
                <AcrylicBrush TintColor="{ThemeResource RegionColor}" TintOpacity="0.6" BackgroundSource="HostBackdrop"/>
            </Rectangle.Fill>
        </Rectangle>
        <Grid Grid.Column="0"
              Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="84"/>
                <RowDefinition Height="84"/>
                <RowDefinition Height="84"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button Grid.Row="1"
                    Width="56" Height="56" CornerRadius="6" Style="{StaticResource ButtonRevealStyle}" BorderThickness="0"
                    Background="Transparent" HorizontalAlignment="Center" VerticalAlignment="Center"
                    FocusVisualPrimaryThickness="0" FocusVisualSecondaryThickness="0"
                    Click="AppBarButton_Click">
                <Grid Height="56" Margin="0,-42,0,-42">
                    <Image Width="25" Height="25" UseLayoutRounding="True" Source="{ThemeResource AppBarButtonImage1}"/>
                </Grid>
            </Button>
            <Button Grid.Row="2"
                    Width="56" Height="56" CornerRadius="6" Style="{StaticResource ButtonRevealStyle}" BorderThickness="0"
                    Background="Transparent" HorizontalAlignment="Center" VerticalAlignment="Center"
                    FocusVisualPrimaryThickness="0" FocusVisualSecondaryThickness="0"
                    Click="AppBarButton_Click_1">
                <Grid Height="56" Margin="0,-42,0,-42">
                    <Image Width="25" Height="25" UseLayoutRounding="True" Source="{ThemeResource AppBarButtonImage2}"/>
                </Grid>
            </Button>
            <Button Grid.Row="3"
                    Width="56" Height="56" CornerRadius="6" Style="{StaticResource ButtonRevealStyle}" BorderThickness="0"
                    Background="Transparent" HorizontalAlignment="Center" VerticalAlignment="Center"
                    FocusVisualPrimaryThickness="0" FocusVisualSecondaryThickness="0"
                    Click="AppBarButton_Click_2">
                <Grid Height="56" Margin="0,-42,0,-42">
                    <Image Width="25" Height="25" UseLayoutRounding="True" Source="{ThemeResource AppBarButtonImage3}"/>
                </Grid>
            </Button>
            <Button Grid.Row="4"
                    Margin="0,0,0,16"
                    Style="{StaticResource TextBlockButtonStyle}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    BorderThickness="0"
                    ToolTipService.ToolTip="Setting"
                    Foreground="White"
                    Click="AppBarButton_Click_3"
                    FontFamily="Segoe UI Symbol"
                    Content="&#xE115;"
                    FontSize="20"/>
        </Grid>
        <Grid Grid.Column="2" Grid.RowSpan="2">
            <Grid.Background>
                <AcrylicBrush BackgroundSource="HostBackdrop"/>
            </Grid.Background>
        </Grid>
        <Frame x:Name="MainFrame"
               Grid.Column="2"
               Grid.Row="0"
               Grid.RowSpan="2"
               Height="Auto"
               HorizontalAlignment="Stretch"
               Margin="0"/>
        <Image Grid.Column="1"
               Grid.ColumnSpan="2"
               Grid.Row="0"
               Grid.RowSpan="2"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Height="42" UseLayoutRounding="False"
               Margin="16,12"
               Source="/Assets/Icons/Dota2.png"/>
        <Grid x:Name="RealTitleGrid" 
              Grid.Column="0"
              Grid.ColumnSpan="2">
            <Rectangle Fill="Transparent"/>
        </Grid>
        <Grid x:Name="AboutGrid"
              Grid.ColumnSpan="3"
              Grid.RowSpan="2"
              Visibility="Collapsed">
            <Grid.Resources>
                <Storyboard x:Name="SettingGridPopIn">
                    <PopInThemeAnimation FromHorizontalOffset="0" FromVerticalOffset="320" Storyboard.TargetName="SettingPop" Duration="00:00:1"/>
                </Storyboard>
                <Storyboard x:Name="SettingGridPopOut" Completed="SettingGridPopOut_Completed">
                    <PopOutThemeAnimation Storyboard.TargetName="SettingPop" Duration="00:00:0.1"/>
                </Storyboard>
            </Grid.Resources>
            <Rectangle Tapped="Rectangle_Tapped" Fill="#272839" Opacity="0.6"/>
            <Border x:Name="SettingPop" Width="480" Height="640" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid BorderBrush="{ThemeResource SystemControlBackgroundAccentBrush}"
                      BorderThickness="0"
                      Background="{ThemeResource RegionBrush}"
                      Width="480" Height="640">
                    <Pivot x:Name="AboutPivot" Grid.Row="0">
                        <PivotItem Header="GENERAL">
                            <StackPanel>
                                <TextBlock Text="Theme" FontWeight="Bold" FontSize="18" Margin="12,12,0,6"/>
                                <RadioButton x:Name="DarkRadioButton" Content="Dark" Margin="12,2" GroupName="ThemeGroup" Checked="RadioButton_Checked"/>
                                <RadioButton x:Name="LightRadioButton" Content="Light" Margin="12,2" GroupName="ThemeGroup" Checked="RadioButton_Checked_1"/>
                                <StackPanel Orientation="Horizontal">
                                    <Button CornerRadius="4" Content="Clear Cache"/>
                                    <Button CornerRadius="4" Content="Export Log" Click="Button_Click_2"/>
                                </StackPanel>
                                <TextBlock Text="Feedback" FontWeight="Bold" FontSize="18" Margin="12,12,0,6"/>
                                <HyperlinkButton Margin="12,0" Content="Rate app in the Store" Click="HyperlinkButton_Click"/>
                                <HyperlinkButton Margin="12,0" Content="Email me" NavigateUri="mailto:yaoyiming123@live.com"/>
                                <TextBlock HorizontalAlignment="Left" FontFamily="Consolas" Text="Have a nice day." Margin="12,16,0,0"/>
                                <TextBlock HorizontalAlignment="Left" FontFamily="Consolas" Text="2016-2020 NoMewing." Margin="12,8"/>
                            </StackPanel>
                        </PivotItem>
