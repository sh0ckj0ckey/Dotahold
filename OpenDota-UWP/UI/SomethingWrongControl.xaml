<UserControl
    x:Class="OpenDota_UWP.UI.SomethingWrongControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OpenDota_UWP.UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ThemeResource/ThemeDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Background="{ThemeResource APPLICATION_BK}">
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <Image Source="{ThemeResource NONETWORKPLACEHOLDER_IMG}"
                   Height="50"
                   Opacity="0.7"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" Margin="16"/>
            <TextBlock Text="Something went wrong." Opacity="0.7" FontWeight="Bold" FontSize="16" Margin="0,0,0,60"
                       HorizontalAlignment="Center" CharacterSpacing="32"/>
        </StackPanel>
    </Grid>
</UserControl>
