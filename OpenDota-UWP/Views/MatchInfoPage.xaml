<Page
    x:Class="OpenDota_UWP.Views.MatchInfoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OpenDota_UWP.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ToolkitUICtrl="using:Microsoft.Toolkit.Uwp.UI.Controls"
    mc:Ignorable="d" NavigationCacheMode="Required" Background="Transparent">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ThemeResource/ThemeDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ScrollViewer x:Name="MatchInfoScrollViewer" Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch">
                <!--英雄BanPick顺序-->
                <Grid HorizontalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Margin="16,0,8,0" Text="BanPick" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <ListView Grid.Column="1" IsItemClickEnabled="False" SelectionMode="None"
                              ScrollViewer.HorizontalScrollBarVisibility="Hidden" ScrollViewer.HorizontalScrollMode="Enabled" 
                              ScrollViewer.VerticalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollMode="Disabled"
                              Margin="0,16">
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <ToolkitUICtrl:WrapPanel/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                    </ListView>
                    <Rectangle Grid.Column="1" IsHitTestVisible="False" HorizontalAlignment="Right" Width="36" VerticalAlignment="Stretch" Fill="{ThemeResource HEROINFO_LISTRIGHTMASK_BK}"/>
                    <Rectangle Grid.Column="1" IsHitTestVisible="False" HorizontalAlignment="Left" Width="12" VerticalAlignment="Stretch" Fill="{ThemeResource HEROINFO_LISTLEFTMASK_BK}"/>
                </Grid>

                <!--First Blood-->
                <StackPanel Orientation="Horizontal">
                    <FontIcon Glyph="&#xEB42;" FontSize="12"/>
                    <TextBlock Text="First Blood" FontSize="14" Opacity="0.7" CharacterSpacing="40" VerticalAlignment="Center" Margin="4,0,6,0"/>
                    <TextBlock Text="{x:Bind ViewModel.CurrentMatchInfo.first_blood_time}" FontWeight="Medium" CharacterSpacing="60"/>
                </StackPanel>

                <!--Duration-->
                <StackPanel Orientation="Horizontal">
                    <FontIcon Glyph="&#xE916;" FontSize="12"/>
                    <TextBlock Text="Duration" FontSize="14" Opacity="0.7" CharacterSpacing="40" VerticalAlignment="Center" Margin="4,0,6,0"/>
                    <TextBlock Text="{x:Bind ViewModel.CurrentMatchInfo.duration}" FontWeight="Medium" CharacterSpacing="60"/>
                </StackPanel>

                <!--Match ID-->
                <StackPanel Orientation="Horizontal">
                    <FontIcon Glyph="&#xECCB;" FontSize="12"/>
                    <TextBlock Text="Match ID" FontSize="14" Opacity="0.7" CharacterSpacing="40" VerticalAlignment="Center" Margin="4,0,6,0"/>
                    <TextBlock Text="{x:Bind ViewModel.CurrentMatchInfo.match_id}" FontWeight="Medium" CharacterSpacing="60" IsTextSelectionEnabled="True"/>
                </StackPanel>

                <!--Skill-->
                <StackPanel Orientation="Horizontal">
                    <FontIcon Glyph="&#xF272;" FontSize="12"/>
                    <TextBlock Text="Skill" FontSize="14" Opacity="0.7" CharacterSpacing="40" VerticalAlignment="Center" Margin="4,0,6,0"/>
                    <TextBlock Text="{x:Bind ViewModel.CurrentMatchInfo.skill}" FontWeight="Medium" CharacterSpacing="60" IsTextSelectionEnabled="True"/>
                </StackPanel>

                <!--Start Time-->
                <StackPanel Orientation="Horizontal">
                    <FontIcon Glyph="&#xE823;" FontSize="12"/>
                    <TextBlock Text="Start Time" FontSize="14" Opacity="0.7" CharacterSpacing="40" VerticalAlignment="Center" Margin="4,0,6,0"/>
                    <TextBlock Text="{x:Bind ViewModel.CurrentMatchInfo.start_time}" FontWeight="Medium" CharacterSpacing="60" IsTextSelectionEnabled="True"/>
                </StackPanel>

                <ListView x:Name="RadiantListView"
                          MinWidth="586"
                          MaxWidth="960"
                          Margin="16,8"
                          SelectionChanged="RadiantListView_SelectionChanged"
                          ScrollViewer.VerticalScrollMode="Disabled"
                          HorizontalContentAlignment="Stretch"
                          HorizontalAlignment="Stretch">
                    <ListView.Template>
                        <ControlTemplate>
                            <ItemsPresenter />
                        </ControlTemplate>
                    </ListView.Template>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="HorizontalAlignment" Value="Stretch"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Height="72"
                                  HorizontalAlignment="Stretch">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="204" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition Height="0" />
                                </Grid.RowDefinitions>
                                <Rectangle Grid.ColumnSpan="3"
                                           Grid.RowSpan="2"
                                           Margin="-12,2,-12,2"
                                           Fill="Gray"
                                           Opacity="0.1" />
                                <Image Grid.Column="0"
                                       Height="52"
                                       Margin="-4,4">
                                    <Image.Source>
                                        <BitmapImage UriSource="{x:Bind HeroPhoto}"
                                                     DecodePixelHeight="52"
                                                     DecodePixelType="Logical" />
                                    </Image.Source>
                                </Image>
                                <Grid Height="28"
                                      Width="28"
                                      HorizontalAlignment="Right"
                                      VerticalAlignment="Bottom"
                                      Margin="-8,2">
                                    <Polygon Fill="Black"
                                             Opacity="0.9"
                                             Points="-8,21,24,-8,24,21" />
                                    <TextBlock Text="{x:Bind Level}"
                                               FontFamily="Arial"
                                               Foreground="White"
                                               FontSize="13"
                                               Opacity="0.7"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center" />
                                </Grid>
                                <Grid Grid.Column="1"
                                      Margin="16,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="2" />
                                        <RowDefinition Height="1.5*" />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition Height="8" />
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="1"
                                               Foreground="{x:Bind Color}"
                                               FontWeight="Bold"
                                               Text="{x:Bind PlayerName,Mode=TwoWay}"
                                               FontSize="18"
                                               Opacity="0.8"
                                               VerticalAlignment="Bottom" />
                                    <TextBlock Grid.Row="2"
                                               Opacity="0.7"
                                               Text="{x:Bind Fight_rate}"
                                               FontSize="12"
                                               VerticalAlignment="Center" />
                                    <TextBlock Grid.Row="3"
                                               Opacity="0.7"
                                               Text="{x:Bind Damage_rate}"
                                               FontSize="12"
                                               VerticalAlignment="Center" />
                                </Grid>
                                <StackPanel Grid.Column="2"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Right"
                                            Orientation="Horizontal">
                                    <Grid Width="78">
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0"
                                                   FontSize="11"
                                                   Opacity="0.5"
                                                   Text="{x:Bind LD}"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Bottom" />
                                        <TextBlock Grid.Row="1"
                                                   FontSize="15"
                                                   FontWeight="Bold"
                                                   Opacity="0.8"
                                                   Text="{x:Bind K_D_A}"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Bottom" />
                                        <TextBlock Grid.Row="2"
                                                   FontSize="13"
                                                   Opacity="0.7"
                                                   Text="{x:Bind KDA}"
                                                   HorizontalAlignment="Left" />
                                    </Grid>
                                    <Grid Width="108"
                                          Margin="8,2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <Rectangle Grid.Column="0"
                                                   Grid.Row="0"
                                                   Margin="1"
                                                   Fill="Gray"
                                                   Opacity="0.3" />
                                        <Rectangle Grid.Column="1"
                                                   Grid.Row="0"
                                                   Margin="1"
                                                   Fill="Gray"
                                                   Opacity="0.3" />
                                        <Rectangle Grid.Column="2"
                                                   Grid.Row="0"
                                                   Margin="1"
                                                   Fill="Gray"
                                                   Opacity="0.3" />
                                        <Rectangle Grid.Column="0"
                                                   Grid.Row="1"
                                                   Margin="1"
                                                   Fill="Gray"
                                                   Opacity="0.3" />
                                        <Rectangle Grid.Column="1"
                                                   Grid.Row="1"
                                                   Margin="1"
                                                   Fill="Gray"
                                                   Opacity="0.3" />
                                        <Rectangle Grid.Column="2"
                                                   Grid.Row="1"
                                                   Margin="1"
                                                   Fill="Gray"
                                                   Opacity="0.3" />
                                        <Image Grid.Column="0"
                                               Grid.Row="0"
                                               Stretch="Uniform"
                                               Margin="1">
                                            <Image.Source>
                                                <BitmapImage UriSource="{x:Bind Item_0}"
                                                             DecodePixelWidth="52"
                                                             DecodePixelType="Logical" />
                                            </Image.Source>
                                        </Image>
                                        <Image Grid.Column="1"
                                               Grid.Row="0"
                                               Stretch="Uniform"
                                               Margin="1">
                                            <Image.Source>
                                                <BitmapImage UriSource="{x:Bind Item_1}"
                                                             DecodePixelWidth="52"
                                                             DecodePixelType="Logical" />
                                            </Image.Source>
                                        </Image>
                                        <Image Grid.Column="2"
                                               Grid.Row="0"
                                               Stretch="Uniform"
                                               Margin="1">
                                            <Image.Source>
                                                <BitmapImage UriSource="{x:Bind Item_2}"
                                                             DecodePixelWidth="52"
                                                             DecodePixelType="Logical" />
                                            </Image.Source>
                                        </Image>
                                        <Image Grid.Column="0"
                                               Grid.Row="1"
                                               Stretch="Uniform"
                                               Margin="1">
                                            <Image.Source>
                                                <BitmapImage UriSource="{x:Bind Item_3}"
                                                             DecodePixelWidth="52"
                                                             DecodePixelType="Logical" />
                                            </Image.Source>
                                        </Image>
                                        <Image Grid.Column="1"
                                               Grid.Row="1"
                                               Stretch="Uniform"
                                               Margin="1">
                                            <Image.Source>
                                                <BitmapImage UriSource="{x:Bind Item_4}"
                                                             DecodePixelWidth="52"
                                                             DecodePixelType="Logical" />
                                            </Image.Source>
                                        </Image>
                                        <Image Grid.Column="2"
                                               Grid.Row="1"
                                               Stretch="Uniform"
                                               Margin="1">
                                            <Image.Source>
                                                <BitmapImage UriSource="{x:Bind Item_5}"
                                                             DecodePixelWidth="52"
                                                             DecodePixelType="Logical" />
                                            </Image.Source>
                                        </Image>
                                    </Grid>
                                    <Grid Margin="6,0">
                                        <TextBlock Text="?"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   FontSize="36" />
                                        <Ellipse x:Name="PlayerPhotoEllipse"
                                                 Height="58"
                                                 Width="58"
                                                 Stroke="{ThemeResource SIMPLETEXT_FR}"
                                                 StrokeThickness="1.5">
                                            <Ellipse.Fill>
                                                <ImageBrush>
                                                    <ImageBrush.ImageSource>
                                                        <BitmapImage UriSource="{x:Bind PlayerPhoto,Mode=TwoWay}"
                                                                     DecodePixelHeight="58"
                                                                     DecodePixelType="Logical" />
                                                    </ImageBrush.ImageSource>
                                                </ImageBrush>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                    </Grid>
                                </StackPanel>
                                <!--<Rectangle Grid.Row="1" Grid.ColumnSpan="3" Fill="Gray" Opacity="0.3"/>-->
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <Grid Margin="0,48,0,8">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Segoe MDL2 Assets"
                                   Text="&#xE9D2;"
                                   FontWeight="Bold"
                                   FontSize="18"
                                   VerticalAlignment="Center"
                                   Margin="16,2,6,0" />
                        <TextBlock Text="Radiant Advantage"
                                   FontWeight="Bold"
                                   FontSize="18"
                                   Margin="0,6" />
                    </StackPanel>
                </Grid>
                <!--<Grid x:Name="ChartGrid" Visibility="Collapsed">
                    <lvc:CartesianChart x:Name="DataChart" Series="{Binding SeriesCollection}" Margin="48,8" Height="512">
                        <lvc:CartesianChart.AxisY>
                            <lvc:Axis LabelFormatter="{Binding YFormatter}"/>
                        </lvc:CartesianChart.AxisY>
                        <lvc:CartesianChart.AxisX>
                            <lvc:Axis Labels="{Binding Labels}"/>
                        </lvc:CartesianChart.AxisX>
                    </lvc:CartesianChart>
                    <TextBlock Text="↑天辉" Foreground="MediumSeaGreen" FontSize="21" VerticalAlignment="Top" FontFamily="STKaiti" FontWeight="Bold" Margin="4,28,0,0"/>
                    <TextBlock Text="↓夜魇" Foreground="OrangeRed" FontSize="21" VerticalAlignment="Bottom" FontFamily="STKaiti" FontWeight="Bold" Margin="4,0,0,52"/>
                </Grid>-->
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
