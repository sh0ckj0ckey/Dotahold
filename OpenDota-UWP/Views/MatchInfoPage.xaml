                               Margin="22,0,0,0" />
                    <TextBlock x:Name="RadiantWinTextBlock"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="{ThemeResource APPLICATION_BK}"
                               Text="..."
                               VerticalAlignment="Bottom"
                               Margin="22,0" />
