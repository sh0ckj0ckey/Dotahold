                            <Image Source="{x:Bind ViewModel.CurrentMatchPlayer.SpiritBear.Item0ImageSource,Mode=OneWay}" Height="32" Width="44" Stretch="UniformToFill"/>
                        </Border>
                        <Border Height="32" Width="44" Margin="6,0,0,0" CornerRadius="4" Background="{ThemeResource MATCHPLAYER_ITEM_BK}" ToolTipService.ToolTip="{x:Bind ViewModel.CurrentMatchPlayer.SpiritBear.sNameItem1,Mode=OneWay}">
                            <Image Source="{x:Bind ViewModel.CurrentMatchPlayer.SpiritBear.Item1ImageSource,Mode=OneWay}" Height="32" Width="44" Stretch="UniformToFill"/>
                        </Border>
                        <Border Height="32" Width="44" Margin="6,0,0,0" CornerRadius="4" Background="{ThemeResource MATCHPLAYER_ITEM_BK}" ToolTipService.ToolTip="{x:Bind ViewModel.CurrentMatchPlayer.SpiritBear.sNameItem2,Mode=OneWay}">
                            <Image Source="{x:Bind ViewModel.CurrentMatchPlayer.SpiritBear.Item2ImageSource,Mode=OneWay}" Height="32" Width="44" Stretch="UniformToFill"/>
                        </Border>
                        <Border Height="32" Width="44" Margin="6,0,0,0" CornerRadius="4" Background="{ThemeResource MATCHPLAYER_ITEM_BK}" ToolTipService.ToolTip="{x:Bind ViewModel.CurrentMatchPlayer.SpiritBear.sNameItem3,Mode=OneWay}">
                            <Image Source="{x:Bind ViewModel.CurrentMatchPlayer.SpiritBear.Item3ImageSource,Mode=OneWay}" Height="32" Width="44" Stretch="UniformToFill"/>
                        </Border>
                        <Border Height="32" Width="44" Margin="6,0,0,0" CornerRadius="4" Background="{ThemeResource MATCHPLAYER_ITEM_BK}" ToolTipService.ToolTip="{x:Bind ViewModel.CurrentMatchPlayer.SpiritBear.sNameItem4,Mode=OneWay}">
                            <Image Source="{x:Bind ViewModel.CurrentMatchPlayer.SpiritBear.Item4ImageSource,Mode=OneWay}" Height="32" Width="44" Stretch="UniformToFill"/>
                        </Border>
                        <Border Height="32" Width="44" Margin="6,0,0,0" CornerRadius="4" Background="{ThemeResource MATCHPLAYER_ITEM_BK}" ToolTipService.ToolTip="{x:Bind ViewModel.CurrentMatchPlayer.SpiritBear.sNameItem5,Mode=OneWay}">
                            <Image Source="{x:Bind ViewModel.CurrentMatchPlayer.SpiritBear.Item5ImageSource,Mode=OneWay}" Height="32" Width="44" Stretch="UniformToFill"/>
                        </Border>
                        <Border Height="26" Width="35" Margin="6,0,0,0" CornerRadius="4" Background="{ThemeResource MATCHPLAYER_ITEM_BK}" VerticalAlignment="Bottom" ToolTipService.ToolTip="{x:Bind ViewModel.CurrentMatchPlayer.SpiritBear.sNameItemB0,Mode=OneWay}">
                            <Image Source="{x:Bind ViewModel.CurrentMatchPlayer.SpiritBear.ItemB0ImageSource,Mode=OneWay}" Height="26" Width="35" Stretch="UniformToFill" Opacity="0.8"/>
                        </Border>
                        <Border Height="26" Width="35" Margin="6,0,0,0" CornerRadius="4" Background="{ThemeResource MATCHPLAYER_ITEM_BK}" VerticalAlignment="Bottom" ToolTipService.ToolTip="{x:Bind ViewModel.CurrentMatchPlayer.SpiritBear.sNameItemB1,Mode=OneWay}">
                            <Image Source="{x:Bind ViewModel.CurrentMatchPlayer.SpiritBear.ItemB1ImageSource,Mode=OneWay}" Height="26" Width="35" Stretch="UniformToFill" Opacity="0.8"/>
                        </Border>
                        <Border Height="26" Width="35" Margin="6,0,0,0" CornerRadius="4" Background="{ThemeResource MATCHPLAYER_ITEM_BK}" VerticalAlignment="Bottom" ToolTipService.ToolTip="{x:Bind ViewModel.CurrentMatchPlayer.SpiritBear.sNameItemB2,Mode=OneWay}">
                            <Image Source="{x:Bind ViewModel.CurrentMatchPlayer.SpiritBear.ItemB2ImageSource,Mode=OneWay}" Height="26" Width="35" Stretch="UniformToFill" Opacity="0.8"/>
                        </Border>
                        <Border Margin="6,0,4,0" Width="26" Height="26" CornerRadius="13" Background="{ThemeResource MATCHPLAYER_ITEM_BK}" VerticalAlignment="Bottom" ToolTipService.ToolTip="{x:Bind ViewModel.CurrentMatchPlayer.SpiritBear.sNameItemN,Mode=OneWay}">
                            <Image Width="35" Height="26" Source="{x:Bind ViewModel.CurrentMatchPlayer.SpiritBear.ItemNImageSource,Mode=OneWay}" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="UniformToFill"/>
                        </Border>
                    </controls:WrapPanel>
                </Grid>

                <!--技能加点-->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="16,16,0,12"
                            Visibility="{x:Bind ViewModel.CurrentMatchPlayer.vAbilitiesUpgrade.Count,Mode=OneWay,Converter={StaticResource Int2Vis}}">
                    <FontIcon Glyph="&#xE945;" Margin="0,0,8,0" FontSize="20"/>
                    <TextBlock Text="Abilities" FontWeight="Bold" Margin="0,6" FontSize="16" FontFamily="/Fonts/Reaver-Bold.ttf#Reaver" CharacterSpacing="20"/>
                </StackPanel>
                <GridView IsItemClickEnabled="False" SelectionMode="None" Padding="10,0"
                          ScrollViewer.HorizontalScrollBarVisibility="Hidden" ScrollViewer.HorizontalScrollMode="Enabled" 
                          ScrollViewer.VerticalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollMode="Disabled"
                          ItemsSource="{x:Bind ViewModel.CurrentMatchPlayer.vAbilitiesUpgrade,Mode=OneWay}"
                          Visibility="{x:Bind ViewModel.CurrentMatchPlayer.vAbilitiesUpgrade.Count,Mode=OneWay,Converter={StaticResource Int2Vis}}">
                    <GridView.ItemTemplate>
                        <DataTemplate x:DataType="mdl:AbilityUpgrade">
                            <Grid Height="48" Width="48" Margin="0,0,4,4" CornerRadius="6" Background="{ThemeResource MATCHPLAYER_ITEM_BK}" ToolTipService.ToolTip="{x:Bind sAbilityName}">
                                <Image Source="{x:Bind AbilityImageSource,Mode=OneWay}" Height="48" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>

                <!--物品购买记录-->
                <!--<StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="8,16,0,12">
                    <FontIcon Glyph="&#xE7BF;" Margin="0,0,8,0" FontSize="20"/>
                    <TextBlock Text="Purchase" FontWeight="Bold" Margin="0,6" FontSize="16" FontFamily="/Fonts/Reaver-Bold.ttf#Reaver" CharacterSpacing="20"/>
                </StackPanel>-->

                <!--神符激活记录-->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="16,16,0,12"
                            Visibility="{x:Bind ViewModel.CurrentMatchPlayer.runes_log.Count,Mode=OneWay,Converter={StaticResource Int2Vis}}">
                    <FontIcon Glyph="&#xF159;" Margin="0,0,8,0" FontSize="20"/>
                    <TextBlock Text="Runes" FontWeight="Bold" Margin="0,6" FontSize="16" FontFamily="/Fonts/Reaver-Bold.ttf#Reaver" CharacterSpacing="20"/>
                </StackPanel>
                <ListView IsItemClickEnabled="False" SelectionMode="None"
                          ScrollViewer.HorizontalScrollBarVisibility="Hidden" ScrollViewer.HorizontalScrollMode="Enabled" 
                          ScrollViewer.VerticalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollMode="Disabled"
                          Margin="6,0,0,0" Padding="8,0,8,0"
                          ItemsSource="{x:Bind ViewModel.CurrentMatchPlayer.runes_log,Mode=OneWay}"
                          Visibility="{x:Bind ViewModel.CurrentMatchPlayer.runes_log.Count,Mode=OneWay,Converter={StaticResource Int2Vis}}">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <controls:WrapPanel/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="mdl:Runes_Log">
                            <Border CornerRadius="6" Margin="-16,0,0,0" Padding="10,4,10,4" Background="{ThemeResource MATCHPLAYER_DATA_BK}"
                                    Visibility="{x:Bind key,Mode=OneWay,Converter={StaticResource Null2Vis}}">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <Image Height="32" Width="32" VerticalAlignment="Center" Source="{x:Bind key,Mode=OneWay,Converter={StaticResource Str2Rune}}"/>
                                    <TextBlock Text="{x:Bind time,Mode=OneWay,Converter={StaticResource Long2Min}}" FontSize="14" Margin="4,0,8,0" FontWeight="Medium" VerticalAlignment="Center" CharacterSpacing="40"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!--Benchmarks-->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="16,16,0,12"
                            Visibility="{x:Bind ViewModel.CurrentMatchPlayer.vBenchmarks.Count,Mode=OneWay,Converter={StaticResource Int2Vis}}">
                    <FontIcon Glyph="&#xED5E;" Margin="0,0,8,0" FontSize="20"/>
                    <TextBlock Text="Benchmarks" FontWeight="Bold" Margin="0,6" FontSize="16" FontFamily="/Fonts/Reaver-Bold.ttf#Reaver" CharacterSpacing="20"/>
                </StackPanel>
                <ListView HorizontalContentAlignment="Stretch"
                          SelectionMode="None" IsItemClickEnabled="False" Padding="24,0,24,0"
                          ItemsSource="{x:Bind ViewModel.CurrentMatchPlayer.vBenchmarks,Mode=OneWay}"
                          Visibility="{x:Bind ViewModel.CurrentMatchPlayer.vBenchmarks.Count,Mode=OneWay,Converter={StaticResource Int2Vis}}">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <controls:WrapPanel/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="mdl:Benchmark">
                            <Grid CornerRadius="6" Margin="-24,0,6,8" MinWidth="120" Padding="10,6,10,6" Background="{ThemeResource MATCHPLAYER_DATA_BK}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock FontSize="12" Opacity="0.7" Margin="4,0,4,0" FontWeight="Medium" HorizontalAlignment="Left" VerticalAlignment="Center">
                                    <Run Text="{x:Bind Name}"/>
                                    <Run Text=":"/>
                                    <Run Text="{x:Bind raw}" Foreground="{x:Bind pct,Converter={StaticResource Benchmark2Color}}"/>
                                </TextBlock>
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Margin="4,4,2,0" HorizontalAlignment="Left" VerticalAlignment="Center" Height="8" Width="120" CornerRadius="3" Background="{ThemeResource MATCHPLAYER_DATA_BK}">
                                        <Border HorizontalAlignment="Left" Height="8" Width="{x:Bind BarWidth}" CornerRadius="3" Background="{x:Bind pct,Converter={StaticResource Benchmark2Color}}"/>
                                    </Border>
                                    <TextBlock Grid.Column="1" FontSize="12" Opacity="0.5" Margin="4,0,2,-1" FontWeight="Medium" HorizontalAlignment="Left" VerticalAlignment="Center">
                                        <Run Text="{x:Bind pct}"/>
                                        <Run Text="%"/>
                                    </TextBlock>
                                </Grid>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </ScrollViewer>

        <!--标题栏-->
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Top" Padding="24,36,24,12">
            <Grid.Background>
                <AcrylicBrush AlwaysUseFallback="False" BackgroundSource="Backdrop" TintColor="{ThemeResource APPLICATION_BK}" 
                              FallbackColor="{ThemeResource APPLICATION_BK}" TintLuminosityOpacity="0.2" TintOpacity="0.1"/>
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Grid.Row="0" Margin="0,0,0,0" Width="38" Height="38" CornerRadius="6" HorizontalAlignment="Left" VerticalAlignment="Top"
                    Style="{StaticResource ButtonRevealStyle}" Click="Button_Click" ToolTipService.ToolTip="Go Back">
                <FontIcon Glyph="&#xE652;" FontSize="16"/>
            </Button>
            <Grid Grid.Column="0" Grid.Row="1" Width="96" Height="54" CornerRadius="6" Margin="0,12,8,0" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Image Width="96" Height="54" Source="{x:Bind ViewModel.CurrentMatchPlayer.ImageSource,Mode=OneWay}"/>
                <Grid Height="36" Width="36" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <Polygon Points="0,0,36,0,0,36">
                        <Polygon.Fill>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStopCollection>
                                    <GradientStop Offset="0" Color="#000000"/>
                                    <GradientStop Offset="0.4" Color="#80000000"/>
                                    <GradientStop Offset="0.5" Color="#00000000"/>
                                </GradientStopCollection>
                            </LinearGradientBrush>
                        </Polygon.Fill>
                    </Polygon>
