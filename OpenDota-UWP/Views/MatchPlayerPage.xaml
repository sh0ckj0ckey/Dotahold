                    <TextBlock Text="Purchase" FontWeight="Bold" Margin="0,6" FontSize="16" FontFamily="/Fonts/Reaver-Bold.ttf#Reaver" CharacterSpacing="20"/>
                </StackPanel>
                <!--神符激活记录-->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="8,16,0,12">
                    <FontIcon Glyph="&#xF159;" Margin="0,0,8,0" FontSize="20"/>
                    <TextBlock Text="Runes" FontWeight="Bold" Margin="0,6" FontSize="16" FontFamily="/Fonts/Reaver-Bold.ttf#Reaver" CharacterSpacing="20"/>
