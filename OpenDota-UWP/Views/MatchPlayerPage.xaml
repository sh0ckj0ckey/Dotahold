<Page
    x:Class="OpenDota_UWP.Views.MatchPlayerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OpenDota_UWP.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:cvt="using:OpenDota_UWP.Converters"
    xmlns:ui="using:OpenDota_UWP.UI" 
    xmlns:mdl="using:OpenDota_UWP.Models" xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    NavigationCacheMode="Required" Background="Transparent">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ThemeResource/ThemeDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <cvt:BoolToVisibilityConverter x:Key="Bool2Vis"/>
            <cvt:NullOrEmptyToVisibilityConverter x:Key="Null2Vis"/>
            <cvt:LongToTimeAgoConverter x:Key="Long2Time"/>
            <cvt:IntToVisibilityConverter x:Key="Int2Vis"/>
            <cvt:IntToGameModeConverter x:Key="Int2GameMode"/>
            <cvt:IntToLobbyTypeConverter x:Key="Int2LobbyType"/>
            <cvt:IntToSkillConverter x:Key="Int2Skill"/>
            <cvt:LongToMinutesConverter x:Key="Long2Min"/>
            <cvt:EqualToVisibilityConverter x:Key="Eql2Vis"/>
            <cvt:LongToTimeConverter x:Key="Long2Date"/>
            <cvt:PlayerSlotToForegroundConverter x:Key="Slot2Color"/>
            <cvt:NullToVisibilityConverter x:Key="IsNull2Vis"/>
            <cvt:RankTierToImageConverter x:Key="Rank2Image"/>
            <cvt:DoubleToPingColorConverter x:Key="Double2Color"/>
            <cvt:DoubleToPingIconConverter x:Key="Double2Icon"/>
            <cvt:StringToRuneConverter x:Key="Str2Rune"/>
            <cvt:DoubleToBenchmarkColorConverter x:Key="Benchmark2Color"/>

            <!--覆盖系统的笔刷，去掉GridView的Reveal边框效果-->
            <SolidColorBrush x:Key="SystemControlTransparentRevealBackgroundBrush" Color="Transparent" />
            <SolidColorBrush x:Key="SystemControlTransparentRevealBorderBrush" Color="Transparent" />
            <SolidColorBrush x:Key="GridViewItemRevealBorderBrush" Color="Transparent" />
            <Thickness x:Key="GridViewItemRevealBorderThemeThickness">0</Thickness>
            <SolidColorBrush x:Key="GridViewItemRevealBackground" Color="Transparent" />
            <SolidColorBrush x:Key="GridViewItemRevealBackgroundPointerOver" Color="Transparent" />
            <SolidColorBrush x:Key="GridViewItemRevealBackgroundPressed" Color="Transparent" />
            <SolidColorBrush x:Key="GridViewItemRevealBackgroundSelected" Color="Transparent" />
            <SolidColorBrush x:Key="GridViewItemRevealBackgroundSelectedPointerOver" Color="Transparent" />
            <SolidColorBrush x:Key="GridViewItemRevealBackgroundSelectedPressed" Color="Transparent" />
            <SolidColorBrush x:Key="GridViewItemRevealPlaceholderBackground" Color="Transparent" />
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <ScrollViewer x:Name="PlayerInfoScrollViewer" Padding="8,148,8,0">
            <StackPanel Margin="8,0,8,16">
                <!--数据统计-->
                <Grid HorizontalAlignment="Stretch" Margin="16,16,0,8">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <FontIcon Glyph="&#xEB3C;" Margin="0,0,8,0" FontSize="20"/>
                        <TextBlock Text="Overview" FontWeight="Bold" Margin="0,6" FontSize="16" FontFamily="/Fonts/Reaver-Bold.ttf#Reaver" CharacterSpacing="20"/>
                    </StackPanel>
                    <TextBlock FontWeight="Bold" Margin="2,0,20,0" FontFamily="/Fonts/Reaver-Bold.ttf#Reaver" TextTrimming="CharacterEllipsis" FontSize="16" HorizontalAlignment="Right" VerticalAlignment="Center" ToolTipService.ToolTip="K/D/A">
                        <Run Text="{x:Bind ViewModel.CurrentMatchPlayer.kills,Mode=OneWay}" Foreground="#63916c" CharacterSpacing="20"/>
                        <Run Text="/" FontWeight="Light"/>
                        <Run Text="{x:Bind ViewModel.CurrentMatchPlayer.deaths,Mode=OneWay}" Foreground="#c55357" CharacterSpacing="20"/>
                        <Run Text="/" FontWeight="Light"/>
                        <Run Text="{x:Bind ViewModel.CurrentMatchPlayer.assists,Mode=OneWay}" Foreground="#647e8e" CharacterSpacing="20"/>
                    </TextBlock>
                </Grid>
                <controls:WrapPanel Margin="8,0,0,0">
                    <Border CornerRadius="6" Margin="0,0,6,8" Padding="10,6,10,6" Background="{ThemeResource MATCHPLAYER_DATA_BK}" ToolTipService.ToolTip="Ping"
                            Visibility="{x:Bind ViewModel.CurrentMatchPlayer.pings,Mode=OneWay,Converter={StaticResource Null2Vis}}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <FontIcon Margin="4,0,2,0" VerticalAlignment="Center" Glyph="{x:Bind ViewModel.CurrentMatchPlayer.pings,Mode=OneWay,Converter={StaticResource Double2Icon}}" Foreground="{x:Bind ViewModel.CurrentMatchPlayer.pings,Mode=OneWay,Converter={StaticResource Double2Color}}"/>
                            <TextBlock FontSize="12" Margin="4,0,0,0" FontWeight="Medium" VerticalAlignment="Center" CharacterSpacing="40">
                                <Run Text="{x:Bind ViewModel.CurrentMatchPlayer.pings,Mode=OneWay}"/>
                                <Run Text="ms"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                    <Border CornerRadius="6" Margin="0,0,6,8" Padding="10,6,10,6" Background="{ThemeResource MATCHPLAYER_DATA_BK}" ToolTipService.ToolTip="Randomed"
                            Visibility="{x:Bind ViewModel.CurrentMatchPlayer.randomed,Mode=OneWay,Converter={StaticResource Bool2Vis}}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <FontIcon Glyph="&#xF133;" Margin="4,0,6,0" FontSize="16" Opacity="0.7" HorizontalAlignment="Left" Visibility="{x:Bind ViewModel.CurrentMatchPlayer.randomed,Mode=OneWay,Converter={StaticResource Bool2Vis}}" ToolTipService.ToolTip="Randomed"/>
                            <TextBlock Text="Randomed" FontSize="12" Opacity="0.7" FontWeight="Medium" VerticalAlignment="Center" CharacterSpacing="40"/>
                        </StackPanel>
                    </Border>
                    <Border CornerRadius="6" Margin="0,0,6,8" Padding="10,6,10,6" Background="{ThemeResource MATCHPLAYER_DATA_BK}" ToolTipService.ToolTip="KDA"
                            Visibility="{x:Bind ViewModel.CurrentMatchPlayer.sKDA,Mode=OneWay,Converter={StaticResource Null2Vis}}">
                        <TextBlock FontSize="12" Opacity="0.7" Margin="0" FontWeight="Medium" VerticalAlignment="Center" CharacterSpacing="40">
                            <Run Text="KDA " Foreground="ForestGreen"/>
                            <Run Text="{x:Bind ViewModel.CurrentMatchPlayer.sKDA,Mode=OneWay}"/>
                        </TextBlock>
                    </Border>
                    <Border CornerRadius="6" Margin="0,0,6,8" Padding="10,6,10,6" Background="{ThemeResource MATCHPLAYER_DATA_BK}" ToolTipService.ToolTip="Gold Per Min"
                            Visibility="{x:Bind ViewModel.CurrentMatchPlayer.gold_per_min,Mode=OneWay,Converter={StaticResource Null2Vis}}">
                        <TextBlock FontSize="12" Opacity="0.7" Margin="0" FontWeight="Medium" VerticalAlignment="Center" CharacterSpacing="40">
                            <Run Text="GPM " Foreground="{ThemeResource GOLDTEXT_FR}"/>
                            <Run Text="{x:Bind ViewModel.CurrentMatchPlayer.gold_per_min,Mode=OneWay}"/>
                        </TextBlock>
                    </Border>
                    <Border CornerRadius="6" Margin="0,0,6,8" Padding="10,6,10,6" Background="{ThemeResource MATCHPLAYER_DATA_BK}" ToolTipService.ToolTip="XP Per Min"
                            Visibility="{x:Bind ViewModel.CurrentMatchPlayer.xp_per_min,Mode=OneWay,Converter={StaticResource Null2Vis}}">
                        <TextBlock FontSize="12" Opacity="0.7" Margin="0" FontWeight="Medium" VerticalAlignment="Center" CharacterSpacing="40">
                            <Run Text="XPM " Foreground="MediumOrchid"/>
                            <Run Text="{x:Bind ViewModel.CurrentMatchPlayer.xp_per_min,Mode=OneWay}"/>
                        </TextBlock>
                    </Border>
                    <Border CornerRadius="6" Margin="0,0,6,8" Padding="10,6,10,6" Background="{ThemeResource MATCHPLAYER_DATA_BK}" ToolTipService.ToolTip="NET WORTH"
                            Visibility="{x:Bind ViewModel.CurrentMatchPlayer.net_worth,Mode=OneWay,Converter={StaticResource Null2Vis}}">
                        <TextBlock FontSize="12" Opacity="0.7" Margin="0" FontWeight="Medium" VerticalAlignment="Center" CharacterSpacing="40">
                            <Run Text="NET Worth " Foreground="{ThemeResource GOLDTEXT_FR}"/>
                            <Run Text="{x:Bind ViewModel.CurrentMatchPlayer.net_worth,Mode=OneWay}"/>
                        </TextBlock>
                    </Border>
                    <Border CornerRadius="6" Margin="0,0,6,8" Padding="10,6,10,6" Background="{ThemeResource MATCHPLAYER_DATA_BK}" ToolTipService.ToolTip="TOTAL GOLD"
                            Visibility="{x:Bind ViewModel.CurrentMatchPlayer.total_gold,Mode=OneWay,Converter={StaticResource Null2Vis}}">
                        <TextBlock FontSize="12" Opacity="0.7" Margin="0" FontWeight="Medium" VerticalAlignment="Center" CharacterSpacing="40">
                            <Run Text="Total Gold " Foreground="{ThemeResource GOLDTEXT_FR}"/>
                            <Run Text="{x:Bind ViewModel.CurrentMatchPlayer.total_gold,Mode=OneWay}"/>
                        </TextBlock>
                    </Border>
                    <Border CornerRadius="6" Margin="0,0,6,8" Padding="10,6,10,6" Background="{ThemeResource MATCHPLAYER_DATA_BK}" ToolTipService.ToolTip="TOTAL XP"
                            Visibility="{x:Bind ViewModel.CurrentMatchPlayer.total_gold,Mode=OneWay,Converter={StaticResource Null2Vis}}">
                        <TextBlock FontSize="12" Opacity="0.7" Margin="0" FontWeight="Medium" VerticalAlignment="Center" CharacterSpacing="40">
                            <Run Text="Total XP " Foreground="MediumOrchid"/>
                            <Run Text="{x:Bind ViewModel.CurrentMatchPlayer.total_xp,Mode=OneWay}"/>
                        </TextBlock>
                    </Border>
                    <Border CornerRadius="6" Margin="0,0,6,8" Padding="10,6,10,6" Background="{ThemeResource MATCHPLAYER_DATA_BK}" ToolTipService.ToolTip="LAST HITS"
                            Visibility="{x:Bind ViewModel.CurrentMatchPlayer.last_hits,Mode=OneWay,Converter={StaticResource Null2Vis}}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Image Height="14" Width="14" Stretch="Uniform" VerticalAlignment="Center" Margin="0,-6">
                                <Image.Source>
                                    <BitmapImage UriSource="/Assets/Icons/Data/icon_creep.png" DecodePixelHeight="14" DecodePixelType="Logical"/>
                                </Image.Source>
                            </Image>
                            <TextBlock Text="Last Hits" FontSize="12" Opacity="0.7" Margin="4,0,2,0" FontWeight="Medium" VerticalAlignment="Center" CharacterSpacing="40"/>
                            <TextBlock Text="{x:Bind ViewModel.CurrentMatchPlayer.last_hits,Mode=OneWay}" FontSize="12" Margin="4,0,0,0" FontWeight="Medium" VerticalAlignment="Center" CharacterSpacing="40"/>
                        </StackPanel>
                    </Border>
                    <Border CornerRadius="6" Margin="0,0,6,8" Padding="10,6,10,6" Background="{ThemeResource MATCHPLAYER_DATA_BK}" ToolTipService.ToolTip="DENIES"
                            Visibility="{x:Bind ViewModel.CurrentMatchPlayer.denies,Mode=OneWay,Converter={StaticResource Null2Vis}}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Image Height="16" Width="16" Stretch="Uniform" VerticalAlignment="Center" Margin="0,-6">
                                <Image.Source>
                                    <BitmapImage UriSource="/Assets/Icons/Data/icon_denied.png" DecodePixelHeight="16" DecodePixelType="Logical"/>
                                </Image.Source>
                            </Image>
                            <TextBlock Text="Denies" FontSize="12" Opacity="0.7" Margin="4,0,2,0" FontWeight="Medium" VerticalAlignment="Center" CharacterSpacing="40"/>
                            <TextBlock Text="{x:Bind ViewModel.CurrentMatchPlayer.denies,Mode=OneWay}" FontSize="12" Margin="4,0,0,0" FontWeight="Medium" VerticalAlignment="Center" CharacterSpacing="40"/>
                        </StackPanel>
                    </Border>
                    <Border CornerRadius="6" Margin="0,0,6,8" Padding="10,6,10,6" Background="{ThemeResource MATCHPLAYER_DATA_BK}" ToolTipService.ToolTip="HERO DAMAGE"
                            Visibility="{x:Bind ViewModel.CurrentMatchPlayer.hero_damage,Mode=OneWay,Converter={StaticResource Null2Vis}}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Image Height="16" Width="16" Stretch="Uniform" VerticalAlignment="Center" Margin="0,-6,0,-6">
                                <Image.Source>
                                    <BitmapImage UriSource="/Assets/Icons/Data/icon_attack.png" DecodePixelHeight="16" DecodePixelType="Logical"/>
                                </Image.Source>
                            </Image>
                            <TextBlock Text="Hero Damage" FontSize="12" Opacity="0.7" Margin="4,0,2,0" FontWeight="Medium" VerticalAlignment="Center" CharacterSpacing="40"/>
                            <TextBlock Text="{x:Bind ViewModel.CurrentMatchPlayer.hero_damage,Mode=OneWay}" FontSize="12" Margin="4,0,0,0" FontWeight="Medium" VerticalAlignment="Center" CharacterSpacing="40"/>
                        </StackPanel>
                    </Border>
                    <Border CornerRadius="6" Margin="0,0,6,8" Padding="10,6,10,6" Background="{ThemeResource MATCHPLAYER_DATA_BK}" ToolTipService.ToolTip="HERO HEALING"
                            Visibility="{x:Bind ViewModel.CurrentMatchPlayer.hero_healing,Mode=OneWay,Converter={StaticResource Null2Vis}}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Image Height="16" Width="16" Stretch="Uniform" VerticalAlignment="Center" Margin="0,-10,0,-6">
                                <Image.Source>
                                    <BitmapImage UriSource="/Assets/Icons/Data/icon_defend.png" DecodePixelHeight="16" DecodePixelType="Logical"/>
                                </Image.Source>
                            </Image>
                            <TextBlock Text="Hero Healing" FontSize="12" Opacity="0.7" Margin="4,0,2,0" FontWeight="Medium" VerticalAlignment="Center" CharacterSpacing="40"/>
                            <TextBlock Text="{x:Bind ViewModel.CurrentMatchPlayer.hero_healing,Mode=OneWay}" FontSize="12" Margin="4,0,0,0" FontWeight="Medium" VerticalAlignment="Center" CharacterSpacing="40"/>
                        </StackPanel>
                    </Border>
                    <Border CornerRadius="6" Margin="0,0,6,8" Padding="10,6,10,6" Background="{ThemeResource MATCHPLAYER_DATA_BK}" ToolTipService.ToolTip="TOWER DAMAGE"
                            Visibility="{x:Bind ViewModel.CurrentMatchPlayer.tower_damage,Mode=OneWay,Converter={StaticResource Null2Vis}}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Image Height="22" Width="22" Stretch="Uniform" VerticalAlignment="Center" Margin="0,-10,0,-6">
                                <Image.Source>
                                    <BitmapImage UriSource="/Assets/Icons/Data/icon_towerdamage.png" DecodePixelHeight="22" DecodePixelType="Logical"/>
                                </Image.Source>
                            </Image>
                            <TextBlock Text="Tower Damage" FontSize="12" Opacity="0.7" Margin="4,0,2,0" FontWeight="Medium" VerticalAlignment="Center" CharacterSpacing="40"/>
                            <TextBlock Text="{x:Bind ViewModel.CurrentMatchPlayer.tower_damage,Mode=OneWay}" FontSize="12" Margin="4,0,0,0" FontWeight="Medium" VerticalAlignment="Center" CharacterSpacing="40"/>
                        </StackPanel>
                    </Border>
                    <Border CornerRadius="6" Margin="0,0,6,8" Padding="10,6,10,6" Background="{ThemeResource MATCHPLAYER_DATA_BK}" ToolTipService.ToolTip="CAMPS STACKED"
                            Visibility="{x:Bind ViewModel.CurrentMatchPlayer.camps_stacked,Mode=OneWay,Converter={StaticResource Null2Vis}}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Image Height="16" Width="16" Stretch="Uniform" VerticalAlignment="Center" Margin="0,-6">
                                <Image.Source>
                                    <BitmapImage UriSource="/Assets/Icons/Data/icon_campstack.png" DecodePixelHeight="16" DecodePixelType="Logical"/>
                                </Image.Source>
                            </Image>
                            <TextBlock Text="Camps Stacked" FontSize="12" Opacity="0.7" Margin="4,0,2,0" FontWeight="Medium" VerticalAlignment="Center" CharacterSpacing="40"/>
                            <TextBlock Text="{x:Bind ViewModel.CurrentMatchPlayer.camps_stacked,Mode=OneWay}" FontSize="12" Margin="4,0,0,0" FontWeight="Medium" VerticalAlignment="Center" CharacterSpacing="40"/>
                        </StackPanel>
                    </Border>
                    <Border CornerRadius="6" Margin="0,0,6,8" Padding="10,6,10,6" Background="{ThemeResource MATCHPLAYER_DATA_BK}" ToolTipService.ToolTip="CREEPS STACKED"
                            Visibility="{x:Bind ViewModel.CurrentMatchPlayer.creeps_stacked,Mode=OneWay,Converter={StaticResource Null2Vis}}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Image Height="16" Width="16" Stretch="Uniform" VerticalAlignment="Center" Margin="0,-6">
                                <Image.Source>
                                    <BitmapImage UriSource="/Assets/Icons/Data/icon_creepcamp.png" DecodePixelHeight="16" DecodePixelType="Logical"/>
                                </Image.Source>
                            </Image>
                            <TextBlock Text="Creeps Stacked" FontSize="12" Opacity="0.7" Margin="4,0,2,0" FontWeight="Medium" VerticalAlignment="Center" CharacterSpacing="40"/>
                            <TextBlock Text="{x:Bind ViewModel.CurrentMatchPlayer.creeps_stacked,Mode=OneWay}" FontSize="12" Margin="4,0,0,0" FontWeight="Medium" VerticalAlignment="Center" CharacterSpacing="40"/>
                        </StackPanel>
                    </Border>
                    <Border CornerRadius="6" Margin="0,0,6,8" Padding="10,6,10,6" Background="{ThemeResource MATCHPLAYER_DATA_BK}" ToolTipService.ToolTip="NEUTRAL KILLS"
                            Visibility="{x:Bind ViewModel.CurrentMatchPlayer.neutral_kills,Mode=OneWay,Converter={StaticResource Null2Vis}}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Image Height="16" Width="16" Stretch="Uniform" VerticalAlignment="Center" Margin="0,-6">
                                <Image.Source>
                                    <BitmapImage UriSource="/Assets/Icons/Data/icon_ancientcamp.png" DecodePixelHeight="16" DecodePixelType="Logical"/>
                                </Image.Source>
                            </Image>
                            <TextBlock Text="Neutral Kills" FontSize="12" Opacity="0.7" Margin="4,0,2,0" FontWeight="Medium" VerticalAlignment="Center" CharacterSpacing="40"/>
                            <TextBlock Text="{x:Bind ViewModel.CurrentMatchPlayer.neutral_kills,Mode=OneWay}" FontSize="12" Margin="4,0,0,0" FontWeight="Medium" VerticalAlignment="Center" CharacterSpacing="40"/>
                        </StackPanel>
                    </Border>
                    <Border CornerRadius="6" Margin="0,0,6,8" Padding="10,6,10,6" Background="{ThemeResource MATCHPLAYER_DATA_BK}" ToolTipService.ToolTip="TOWER KILLS"
                            Visibility="{x:Bind ViewModel.CurrentMatchPlayer.tower_kills,Mode=OneWay,Converter={StaticResource Null2Vis}}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Image Height="16" Width="16" Stretch="Uniform" VerticalAlignment="Center" Margin="0,-6">
                                <Image.Source>
                                    <BitmapImage UriSource="/Assets/Icons/Data/icon_tower.png" DecodePixelHeight="16" DecodePixelType="Logical"/>
                                </Image.Source>
                            </Image>
                            <TextBlock Text="Tower Kills" FontSize="12" Opacity="0.7" Margin="4,0,2,0" FontWeight="Medium" VerticalAlignment="Center" CharacterSpacing="40"/>
                            <TextBlock Text="{x:Bind ViewModel.CurrentMatchPlayer.tower_kills,Mode=OneWay}" FontSize="12" Margin="4,0,0,0" FontWeight="Medium" VerticalAlignment="Center" CharacterSpacing="40"/>
                        </StackPanel>
                    </Border>
                    <Border CornerRadius="6" Margin="0,0,6,8" Padding="10,6,10,6" Background="{ThemeResource MATCHPLAYER_DATA_BK}" ToolTipService.ToolTip="COURIER KILLS"
                            Visibility="{x:Bind ViewModel.CurrentMatchPlayer.courier_kills,Mode=OneWay,Converter={StaticResource Null2Vis}}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Image Height="16" Width="16" Stretch="Uniform" VerticalAlignment="Center" Margin="0,-6">
                                <Image.Source>
                                    <BitmapImage UriSource="/Assets/Icons/Data/icon_courier.png" DecodePixelHeight="16" DecodePixelType="Logical"/>
                                </Image.Source>
                            </Image>
                            <TextBlock Text="Courier Kills" FontSize="12" Opacity="0.7" Margin="4,0,2,0" FontWeight="Medium" VerticalAlignment="Center" CharacterSpacing="40"/>
                            <TextBlock Text="{x:Bind ViewModel.CurrentMatchPlayer.courier_kills,Mode=OneWay}" FontSize="12" Margin="4,0,0,0" FontWeight="Medium" VerticalAlignment="Center" CharacterSpacing="40"/>
                        </StackPanel>
                    </Border>
                    <Border CornerRadius="6" Margin="0,0,6,8" Padding="10,6,10,6" Background="{ThemeResource MATCHPLAYER_DATA_BK}" ToolTipService.ToolTip="OBSERVER PLACES/KILLS">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Image Height="16" Width="16" Stretch="Uniform" VerticalAlignment="Center" Margin="0,-6">
                                <Image.Source>
                                    <BitmapImage UriSource="/Assets/Icons/Data/icon_observer_ward.png" DecodePixelHeight="16" DecodePixelType="Logical"/>
                                </Image.Source>
                            </Image>
                            <TextBlock FontSize="12" Margin="6,0,0,0" FontWeight="Medium" VerticalAlignment="Center" CharacterSpacing="40">
                                <Run Text="Observer Ward"/>
                                <Run Text="{x:Bind ViewModel.CurrentMatchPlayer.obs_placed,Mode=OneWay}" Foreground="ForestGreen" FontWeight="Bold"/>
                                <Run Text="/"/>
                                <Run Text="{x:Bind ViewModel.CurrentMatchPlayer.observer_kills,Mode=OneWay}" Foreground="Tomato"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                    <Border CornerRadius="6" Margin="0,0,6,8" Padding="10,6,10,6" Background="{ThemeResource MATCHPLAYER_DATA_BK}" ToolTipService.ToolTip="SENTRY PLACES/KILLS">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Image Height="16" Width="16" Stretch="Uniform" VerticalAlignment="Center" Margin="0,-6">
                                <Image.Source>
                                    <BitmapImage UriSource="/Assets/Icons/Data/icon_sentry_ward.png" DecodePixelHeight="16" DecodePixelType="Logical"/>
                                </Image.Source>
                            </Image>
                            <TextBlock FontSize="12" Margin="6,0,0,0" FontWeight="Medium" VerticalAlignment="Center" CharacterSpacing="40">
                                <Run Text="Sentry Ward"/>
                                <Run Text="{x:Bind ViewModel.CurrentMatchPlayer.sen_placed,Mode=OneWay}" Foreground="ForestGreen" FontWeight="Bold"/>
                                <Run Text="/"/>
                                <Run Text="{x:Bind ViewModel.CurrentMatchPlayer.sentry_kills,Mode=OneWay}" Foreground="Tomato"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                    <Border CornerRadius="6" Margin="0,0,6,8" Padding="10,6,10,6" Background="{ThemeResource MATCHPLAYER_DATA_BK}" ToolTipService.ToolTip="ROSHAN KILLS"
                            Visibility="{x:Bind ViewModel.CurrentMatchPlayer.roshan_kills,Mode=OneWay,Converter={StaticResource Null2Vis}}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Image Height="16" Width="16" Stretch="Uniform" VerticalAlignment="Center" Margin="0,-6">
                                <Image.Source>
                                    <BitmapImage UriSource="/Assets/Icons/Data/icon_roshan.png" DecodePixelHeight="16" DecodePixelType="Logical"/>
                                </Image.Source>
                            </Image>
                            <TextBlock Text="Roshan Kills" FontSize="12" Opacity="0.7" Margin="6,0,2,0" FontWeight="Medium" VerticalAlignment="Center" CharacterSpacing="40"/>
                            <TextBlock Text="{x:Bind ViewModel.CurrentMatchPlayer.roshan_kills,Mode=OneWay}" FontSize="12" Margin="4,0,0,0" FontWeight="Medium" VerticalAlignment="Center" CharacterSpacing="40"/>
                        </StackPanel>
                    </Border>
                    <Border CornerRadius="6" Margin="0,0,6,8" Padding="10,6,10,6" Background="{ThemeResource MATCHPLAYER_DATA_BK}" ToolTipService.ToolTip="BUYBACK COUNT"
                            Visibility="{x:Bind ViewModel.CurrentMatchPlayer.buyback_count,Mode=OneWay,Converter={StaticResource Null2Vis}}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Image Height="16" Width="16" Stretch="Uniform" VerticalAlignment="Center" Margin="0,-6">
                                <Image.Source>
                                    <BitmapImage UriSource="/Assets/Icons/Data/icon_buyback.png" DecodePixelHeight="16" DecodePixelType="Logical"/>
                                </Image.Source>
                            </Image>
                            <TextBlock Text="Buyback Count" FontSize="12" Opacity="0.7" Margin="6,0,2,0" FontWeight="Medium" VerticalAlignment="Center" CharacterSpacing="40"/>
                            <TextBlock Text="{x:Bind ViewModel.CurrentMatchPlayer.buyback_count,Mode=OneWay}" FontSize="12" Margin="4,0,0,0" FontWeight="Medium" VerticalAlignment="Center" CharacterSpacing="40"/>
                        </StackPanel>
                    </Border>
                    <Border CornerRadius="6" Margin="0,0,6,8" Padding="10,6,10,6" Background="{ThemeResource MATCHPLAYER_DATA_BK}" ToolTipService.ToolTip="PURCHASE TPSCROLL"
                            Visibility="{x:Bind ViewModel.CurrentMatchPlayer.purchase_tpscroll,Mode=OneWay,Converter={StaticResource Null2Vis}}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Image Height="16" Width="16" Stretch="Uniform" VerticalAlignment="Center" Margin="0,-6">
                                <Image.Source>
                                    <BitmapImage UriSource="/Assets/Icons/Data/icon_tp.png" DecodePixelHeight="16" DecodePixelType="Logical"/>
                                </Image.Source>
                            </Image>
                            <TextBlock Text="Purchase TP" FontSize="12" Opacity="0.7" Margin="4,0,2,0" FontWeight="Medium" VerticalAlignment="Center" CharacterSpacing="40"/>
                            <TextBlock Text="{x:Bind ViewModel.CurrentMatchPlayer.purchase_tpscroll,Mode=OneWay}" FontSize="12" Margin="4,0,0,0" FontWeight="Medium" VerticalAlignment="Center" CharacterSpacing="40"/>
                        </StackPanel>
                    </Border>
                </controls:WrapPanel>

                <!--永久BUFF-->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="16,16,0,0"
