                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE10B;" FontFamily="Segoe UI Symbol" VerticalAlignment="Center" FontSize="10" Margin="0,0,4,-2"/>
                                <TextBlock Text="Confirm" FontWeight="Medium" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    
                    <Button x:Name="BackAppBarButton"
                            Width="72" Height="38" CornerRadius="4"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Click="BackAppBarButton_Click"
                            Style="{StaticResource ButtonRevealStyle}"
                            Visibility="{x:Bind ViewModel.sSteamId,Mode=OneWay,Converter={StaticResource Str2Vis}}">
                        <Button.Content>
                            <TextBlock Text="Cancel" FontSize="16" VerticalAlignment="Center" />
                        </Button.Content>
                    </Button>

                </StackPanel>
            </Grid>
