                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center">
                                <TextBlock FontSize="18"
                                           FontWeight="Bold"
                                           Text="Total: "
                                           VerticalAlignment="Center"
                                           Opacity="0.7" />
                                <TextBlock x:Name="CountTextBlock"
                                           FontSize="21"
                                           FontWeight="Bold"
                                           Margin="4,0" />
                            </StackPanel>
                            <StackPanel Margin="0,12"
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Center">
                                <TextBlock FontSize="18"
                                           FontWeight="Bold"
                                           Text="Win rate: "
                                           VerticalAlignment="Center"
                                           Opacity="0.7" />
                                <TextBlock x:Name="RateTextBlock"
                                           FontSize="21"
                                           FontWeight="Bold"
                                           Margin="4,0" />
                                <TextBlock FontSize="18"
                                           FontWeight="Bold"
                                           Text="%"
                                           VerticalAlignment="Center"
                                           Opacity="0.7" />
                            </StackPanel>
                        </StackPanel>
                        <Grid Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="48" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontFamily="Segoe MDL2 Assets"
                                           Text="&#xEADF;"
                                           FontWeight="Bold"
                                           FontSize="16"
                                           VerticalAlignment="Center"
                                           Margin="16,-12,4,0" />
                                <TextBlock Text="Statistics"
                                           FontWeight="Medium"
                                           FontSize="18"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Margin="0,-12,0,0" />
                                <HyperlinkButton Click="HyperlinkButton_Click_1">
                                    <FlyoutBase.AttachedFlyout>
                                        <Flyout x:Name="NodataFlyout">
                                            <Grid MaxWidth="286">
                                                <TextBlock TextWrapping="WrapWholeWords"
                                                           Text="If you can't see the data，probably because of slow connection to Steam server, or because you have too few games."
                                                           FontSize="16"
                                                           Opacity="0.7" />
                                            </Grid>
                                        </Flyout>
                                    </FlyoutBase.AttachedFlyout>
                                    <TextBlock FontFamily="Segoe MDL2 Assets"
                                               Text="&#xE9CE;"
                                               Margin="6,-10,0,0" />
                                </HyperlinkButton>
                            </StackPanel>
                            <GridView Grid.Row="1"
                                      Margin="8"
                                      SelectionMode="None"
                                      IsItemClickEnabled="True">
                                <GridViewItem Height="auto"
                                              Width="128">
                                    <Grid>
                                        <Rectangle Fill="Gray"
                                                   Opacity="0.1" />
                                        <StackPanel Margin="8">
                                            <Image x:Name="MatchData_RankMedalImage"
                                                   Source="/Assets/RankMedal/SeasonalRank0-0.png"
                                                   Stretch="UniformToFill"
                                                   Margin="4,12,4,0" />
                                            <TextBlock x:Name="MatchData_LeaderboardTextBlock"
                                                       Text="—"
                                                       Opacity="0.8"
                                                       FontFamily="Arial"
                                                       FontSize="18"
                                                       HorizontalAlignment="Center"
                                                       Margin="0,0,0,4" />
                                        </StackPanel>
                                    </Grid>
                                </GridViewItem>
                            </GridView>
                            <GridView Grid.Row="1"
                                      Margin="180,8,0,0"
                                      SelectionMode="None"
                                      IsItemClickEnabled="True">
                                <GridViewItem Height="72"
                                              Width="128">
                                    <Grid Height="72"
                                          Width="128">
                                        <Rectangle Fill="Gray"
                                                   Opacity="0.1" />
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="Average Kills"
                                                       FontSize="14" FontWeight="Medium"
                                                       HorizontalAlignment="Center"
                                                       Margin="6" />
                                            <TextBlock x:Name="MatchData_KillTextBlock"
                                                       Opacity="0.8"
                                                       Text="—" FontWeight="Medium"
                                                       HorizontalAlignment="Center" />
                                        </StackPanel>
                                    </Grid>
                                </GridViewItem>
                                <GridViewItem Height="72"
                                              Width="128">
                                    <Grid Height="72"
                                          Width="128">
                                        <Rectangle Fill="Gray"
                                                   Opacity="0.1" />
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="Average Deaths"
                                                       FontSize="14" FontWeight="Medium"
                                                       HorizontalAlignment="Center"
                                                       Margin="6" />
                                            <TextBlock x:Name="MatchData_DeadTextBlock"
                                                       Opacity="0.8"
                                                       Text="—" FontWeight="Medium"
                                                       HorizontalAlignment="Center" />
                                        </StackPanel>
                                    </Grid>
                                </GridViewItem>
                                <GridViewItem Height="72"
                                              Width="128">
                                    <Grid Height="72"
                                          Width="128">
                                        <Rectangle Fill="Gray"
                                                   Opacity="0.1" />
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="Average Assists"
                                                       FontSize="14" FontWeight="Medium"
                                                       HorizontalAlignment="Center"
                                                       Margin="6" />
                                            <TextBlock x:Name="MatchData_AssistTextBlock"
                                                       Opacity="0.8"
                                                       Text="—" FontWeight="Medium"
                                                       HorizontalAlignment="Center" />
                                        </StackPanel>
                                    </Grid>
                                </GridViewItem>
                                <GridViewItem Height="72"
                                              Width="128">
                                    <Grid Height="72"
                                          Width="128">
                                        <Rectangle Fill="Gray"
                                                   Opacity="0.1" />
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="KDA"
                                                       FontSize="14" FontWeight="Medium"
                                                       HorizontalAlignment="Center"
                                                       Margin="6" />
                                            <TextBlock x:Name="MatchData_KDATextBlock"
                                                       Opacity="0.8"
                                                       Text="—" FontWeight="Medium"
                                                       HorizontalAlignment="Center" />
                                        </StackPanel>
                                    </Grid>
                                </GridViewItem>
                                <GridViewItem Height="72"
                                              Width="128">
                                    <Grid Height="72"
                                          Width="128">
                                        <Rectangle Fill="Gray"
                                                   Opacity="0.1" />
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="GPM"
                                                       FontSize="14" FontWeight="Medium"
                                                       HorizontalAlignment="Center"
                                                       Margin="6" />
                                            <TextBlock x:Name="MatchData_GPMTextBlock"
                                                       Opacity="0.8"
                                                       Text="—" FontWeight="Medium"
                                                       HorizontalAlignment="Center" />
                                        </StackPanel>
                                    </Grid>
                                </GridViewItem>
                                <GridViewItem Height="72"
                                              Width="128">
                                    <Grid Height="72"
                                          Width="128">
                                        <Rectangle Fill="Gray"
                                                   Opacity="0.1" />
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="XPM"
                                                       FontSize="14" FontWeight="Medium"
                                                       HorizontalAlignment="Center"
                                                       Margin="6" />
                                            <TextBlock x:Name="MatchData_XPMTextBlock"
                                                       Opacity="0.8"
                                                       Text="—" FontWeight="Medium"
                                                       HorizontalAlignment="Center" />
                                        </StackPanel>
                                    </Grid>
                                </GridViewItem>
                                <GridViewItem Height="72"
                                              Width="128">
                                    <Grid Height="72"
                                          Width="128">
                                        <Rectangle Fill="Gray"
                                                   Opacity="0.1" />
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="Last Hits"
                                                       FontSize="14" FontWeight="Medium"
                                                       HorizontalAlignment="Center"
                                                       Margin="6" />
                                            <TextBlock x:Name="MatchData_Last_hitTextBlock"
                                                       Opacity="0.8"
                                                       Text="—" FontWeight="Medium"
                                                       HorizontalAlignment="Center" />
                                        </StackPanel>
                                    </Grid>
                                </GridViewItem>
                                <GridViewItem Height="72"
                                              Width="128">
                                    <Grid Height="72"
                                          Width="128">
                                        <Rectangle Fill="Gray"
                                                   Opacity="0.1" />
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="Denies"
                                                       FontSize="14" FontWeight="Medium"
                                                       HorizontalAlignment="Center"
                                                       Margin="6" />
                                            <TextBlock x:Name="MatchData_DeniesTextBlock"
                                                       Opacity="0.8"
                                                       Text="—" FontWeight="Medium"
                                                       HorizontalAlignment="Center" />
                                        </StackPanel>
                                    </Grid>
                                </GridViewItem>
                                <GridViewItem Height="72"
                                              Width="128">
                                    <Grid Height="72"
                                          Width="128">
                                        <Rectangle Fill="Gray"
                                                   Opacity="0.1" />
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="Hero Damage"
                                                       FontSize="14" FontWeight="Medium"
                                                       HorizontalAlignment="Center"
                                                       Margin="6" />
                                            <TextBlock x:Name="MatchData_HeroDamageTextBlock"
                                                       Opacity="0.8"
                                                       Text="—" FontWeight="Medium"
                                                       HorizontalAlignment="Center" />
                                        </StackPanel>
                                    </Grid>
                                </GridViewItem>
                                <GridViewItem Height="72"
                                              Width="128">
                                    <Grid Height="72"
                                          Width="128">
                                        <Rectangle Fill="Gray"
                                                   Opacity="0.1" />
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="Hero Healing"
                                                       FontSize="14" FontWeight="Medium"
                                                       HorizontalAlignment="Center"
                                                       Margin="6" />
                                            <TextBlock x:Name="MatchData_HealingTextBlock"
                                                       Opacity="0.8"
                                                       Text="—" FontWeight="Medium"
                                                       HorizontalAlignment="Center" />
                                        </StackPanel>
                                    </Grid>
                                </GridViewItem>
                                <GridViewItem Height="72"
                                              Width="128">
                                    <Grid Height="72"
                                          Width="128">
                                        <Rectangle Fill="Gray"
                                                   Opacity="0.1" />
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="Tower Damage"
                                                       FontSize="14" FontWeight="Medium"
                                                       HorizontalAlignment="Center"
                                                       Margin="6" />
                                            <TextBlock x:Name="MatchData_TowerDamageTextBlock"
                                                       Opacity="0.8"
                                                       Text="—" FontWeight="Medium"
                                                       HorizontalAlignment="Center" />
                                        </StackPanel>
                                    </Grid>
                                </GridViewItem>
                                <GridViewItem Height="72"
                                              Width="128">
                                    <Grid Height="72"
                                          Width="128">
                                        <Rectangle Fill="Gray"
                                                   Opacity="0.1" />
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="Average Level"
                                                       FontSize="14" FontWeight="Medium"
                                                       HorizontalAlignment="Center"
                                                       Margin="6" />
                                            <TextBlock x:Name="MatchData_LevelTextBlock"
                                                       Opacity="0.8"
                                                       Text="—" FontWeight="Medium"
                                                       HorizontalAlignment="Center" />
                                        </StackPanel>
                                    </Grid>
                                </GridViewItem>
                                <GridViewItem Height="72"
                                              Width="128"
                                              PointerEntered="GridViewItem_PointerEntered"
                                              PointerExited="GridViewItem_PointerExited">
                                    <Grid Height="72"
                                          Width="128">
                                        <Rectangle Fill="Gray"
                                                   Opacity="0.1" />
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock x:Name="MMRTitleTextBlock"
                                                       Text="MMR"
                                                       FontSize="14" FontWeight="Medium"
                                                       HorizontalAlignment="Center"
                                                       Margin="6" />
                                            <TextBlock x:Name="MatchData_MMRTextBlock"
                                                       Opacity="0.8"
                                                       Text="—" FontWeight="Medium"
                                                       HorizontalAlignment="Center" />
                                        </StackPanel>
                                    </Grid>
                                </GridViewItem>
                                <GridViewItem Height="72"
                                              Width="128">
                                    <Grid Height="72"
                                          Width="128">
                                        <Rectangle Fill="Gray"
                                                   Opacity="0.1" />
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="APM"
                                                       FontSize="14" FontWeight="Medium"
                                                       HorizontalAlignment="Center"
                                                       Margin="6" />
                                            <TextBlock x:Name="MatchData_APMTextBlock"
                                                       Opacity="0.8"
                                                       Text="—" FontWeight="Medium"
                                                       HorizontalAlignment="Center" />
                                        </StackPanel>
                                    </Grid>
                                </GridViewItem>
                            </GridView>
                        </Grid>
                    </Grid>
                </ScrollViewer>
            </PivotItem>
            <PivotItem Header="RECENT MATCHES">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="360" />
                        <ColumnDefinition Width="0" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="2">
                        <Rectangle Fill="{ThemeResource APPLICATION_BK}"
                                   Width="8"
                                   HorizontalAlignment="Left" />
                    </Border>
                    <Rectangle Grid.Column="2"
                               Width="28"
                               Fill="{ThemeResource APPLICATION_BK}"
                               HorizontalAlignment="Left"
                               Margin="0,-12" />
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,2,0,0">
                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                       Text="&#xE9D9;"
                                       FontWeight="Bold"
                                       FontSize="16"
                                       VerticalAlignment="Center"
                                       Margin="16,2,4,0" />
                            <TextBlock Grid.Column="3"
                                       Grid.Row="0"
                                       Text="Last 20 matches"
                                       FontWeight="Medium"
                                       FontSize="18"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center" />
                        </StackPanel>
                        <ListView x:Name="RecentMatchListView"
                                  Grid.Row="2"
                                  Margin="4,12"
                                  Height="auto"
                                  ItemsSource="{x:Bind recentMatchesObservableCollection}"
                                  SelectionChanged="RecentMatchListView_SelectionChanged">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="helpers:RecentMatchViewModel">
                                    <Grid Height="72"
                                          Width="348"
                                          Margin="-10,0,-12,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="72" />
                                            <ColumnDefinition Width="auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="18" />
                                        </Grid.ColumnDefinitions>
                                        <Rectangle Grid.Column="0"
                                                   Grid.ColumnSpan="4"
                                                   Opacity="0.1"
                                                   Fill="Gray"
                                                   Margin="0,2,0,2" />
                                        <Border VerticalAlignment="Center"
                                                HorizontalAlignment="Center">
                                            <Grid>
                                                <Ellipse Grid.Column="0"
                                                     StrokeThickness="0"
                                                     Stroke="White"
                                                     Width="62"
                                                     Height="62">
                                                    <Ellipse.Fill>
                                                        <ImageBrush Stretch="UniformToFill">
                                                            <ImageBrush.ImageSource>
                                                                <BitmapImage UriSource="{x:Bind HeroPhoto}"
                                                                         DecodePixelWidth="62"
                                                                         DecodePixelType="Logical" />
                                                            </ImageBrush.ImageSource>
                                                        </ImageBrush>
                                                    </Ellipse.Fill>
                                                </Ellipse>
                                            </Grid>
                                        </Border>
                                        <Grid Grid.Column="1">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="1.6*" />
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>
                                            <TextBlock Grid.Row="0"
                                                       Text="{x:Bind SelectedHero}"
                                                       FontWeight="Bold"
                                                       FontSize="16"
                                                       VerticalAlignment="Center"
                                                       Margin="8,0,0,-4" />
                                            <StackPanel Grid.Row="1"
                                                        Orientation="Horizontal">
                                                <TextBlock Text="WIN"
                                                           FontSize="12"
                                                           Foreground="ForestGreen"
                                                           Margin="8,-1"
                                                           Visibility="{x:Bind PlayerWin}" />
                                                <TextBlock Text="LOSE"
                                                           FontSize="12"
                                                           Foreground="Firebrick"
                                                           Margin="8,-1"
                                                           Visibility="{x:Bind PlayerLose}" />
                                                <TextBlock Text="{x:Bind Skill}"
                                                           Foreground="{ThemeResource GrayText}"
                                                           FontSize="12"
                                                           Margin="0,-1" />
                                            </StackPanel>
                                            <TextBlock Grid.Row="2"
                                                       Text="{x:Bind Time}"
                                                       Foreground="Gray"
                                                       FontSize="12"
                                                       Margin="8,-6" />
                                        </Grid>
                                        <Grid Grid.Column="2"
                                              Margin="12,2"
                                              HorizontalAlignment="Right">
                                            <Grid.RowDefinitions>
