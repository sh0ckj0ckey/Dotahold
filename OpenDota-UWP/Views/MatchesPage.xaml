                                                   FontFamily="Consolas"
                                                   FontSize="18"
                                                   VerticalAlignment="Center" />
                                        <TextBlock Text="{x:Bind Against}"
                                                   Foreground="{ThemeResource GrayText}"
                                                   FontFamily="Consolas"
                                                   FontSize="18"
                                                   VerticalAlignment="Center" />
