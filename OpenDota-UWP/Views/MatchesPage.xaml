        <Grid x:Name="BindGrid" Visibility="Visible" Grid.ColumnSpan="2">
            <Grid.Background>
                <ImageBrush ImageSource="/Assets/Pictures/radiant_dire5.jpg"/>
            </Grid.Background>
            <Grid.Resources>
                <Storyboard x:Name="BindingGridPopIn">
                    <PopInThemeAnimation FromHorizontalOffset="0"
                                         FromVerticalOffset="320"
                                         Storyboard.TargetName="BindingPop"
                                         Duration="00:00:1" />
                </Storyboard>
                <Storyboard x:Name="BindingGridPopOut"
                            Completed="BindingGridPopOut_Completed">
                    <PopOutThemeAnimation Storyboard.TargetName="BindingPop"
                                          Duration="00:00:0.1" />
                </Storyboard>
            </Grid.Resources>
            <Grid x:Name="BindingPop" HorizontalAlignment="Center" VerticalAlignment="Center"
                  Height="256" Width="480" CornerRadius="6" Background="{ThemeResource APPLICATION_BK}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="64"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="1" Text="Enter your ID" FontSize="18" FontFamily="/Fonts/Reaver-Bold.ttf#Reaver"
                           CharacterSpacing="40" Opacity="0.8" HorizontalAlignment="Center" VerticalAlignment="Center" />

                <Button Grid.Row="1" Content="&#xE11B;" FontFamily="Segoe UI Symbol" HorizontalAlignment="Right" VerticalAlignment="Center"
                        Margin="4,0,16,0" Foreground="{ThemeResource SIMPLETEXT_FR}" Style="{StaticResource TextBlockButtonStyle}">
                    <Button.Flyout>
                        <Flyout x:Name="WhatIDFlyout" Placement="Bottom">
                            <Grid>
                                <StackPanel>
                                    <TextBlock Text="Both of the following IDs are available"
                                               FontSize="18" Opacity="0.7" />
                                    <TextBlock TextWrapping="WrapWholeWords"
                                               Text="The 64-bit ID can be viewed in the address bar after"
                                               Opacity="0.7" Margin="8,8,8,0" />
                                    <TextBlock TextWrapping="WrapWholeWords"
                                               Text="clicking personal information on the Steam client:"
                                               Opacity="0.7" Margin="8,4,8,8" />
                                    <Image Source="/Assets/Icons/tutorial1.png"
                                           HorizontalAlignment="Left"
                                           Width="256" Margin="12,0" />
                                    <TextBlock Text="OR" FontWeight="Black" FontSize="16" Opacity="0.7" Margin="128,12,0,12" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                    <TextBlock TextWrapping="WrapWholeWords"
                                               Text="The 32-bit ID can be viewed in the Dota2 client:"
                                               Opacity="0.7"
                                               Margin="8" />
                                    <Image Source="/Assets/Icons/tutorial2.png"
                                           HorizontalAlignment="Left"
                                           Height="96"
                                           Margin="12,0,12,24" />
                                </StackPanel>
                            </Grid>
                        </Flyout>
                    </Button.Flyout>
                </Button>

