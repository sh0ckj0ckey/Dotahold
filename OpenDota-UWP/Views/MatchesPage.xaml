<Page
    x:Class="OpenDota_UWP.Views.MatchesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OpenDota_UWP.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:lvc="using:LiveChartsCore"
    xmlns:helpers="using:OpenDota_UWP.Helpers" NavigationCacheMode="Required">

    <Page.Transitions>
        <TransitionCollection>
            <NavigationThemeTransition x:Name="navigationTransition">
                <EntranceNavigationTransitionInfo />
            </NavigationThemeTransition>
        </TransitionCollection>
    </Page.Transitions>
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ThemeResource/ThemeDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="{ThemeResource APPLICATION_BK}">
        <Grid.RowDefinitions>
            <RowDefinition Height="172" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Rectangle Opacity="0.5">
            <Rectangle.Fill>
                <ImageBrush x:Name="MatchBackgroundImageBrush"
                            ImageSource="/Assets/Pictures/background1.jpg"
                            Stretch="UniformToFill" />
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle>
            <Rectangle.Fill>
                <AcrylicBrush x:Name="MatchBackgroundAcrylicBrush"
                              TintColor="Transparent"
                              BackgroundSource="Backdrop" />
            </Rectangle.Fill>
        </Rectangle>
        <Button HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="16,36"
                ToolTipService.ToolTip="Menu"
                Style="{StaticResource TextBlockButtonStyle}"
                Foreground="{ThemeResource SIMPLETEXT_FR}">
            <Button.Content>
                <TextBlock FontFamily="Segoe UI Symbol"
                           Text="&#xE0C2;"
                           FontSize="16" />
            </Button.Content>
            <Button.Flyout>
                <MenuFlyout Placement="Bottom">
                    <MenuFlyoutItem x:Name="SteamCommunityLinkMenuFlyoutItem"
                                    Text="Steam Profile"
                                    Click="MenuFlyoutItem_Click">
                        <MenuFlyoutItem.Icon>
                            <SymbolIcon Symbol="ContactInfo"
                                        Margin="0,4,0,0" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>
                    <MenuFlyoutSeparator />
                    <MenuFlyoutItem Text="Update Data"
                                    Click="MenuFlyoutItem_Click_1">
                        <MenuFlyoutItem.Icon>
                            <SymbolIcon Symbol="Refresh"
                                        Margin="0,4,0,0" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>
                    <MenuFlyoutItem Text="Change Account"
                                    Click="MenuFlyoutItem_Click_2">
                        <MenuFlyoutItem.Icon>
                            <SymbolIcon Symbol="People"
                                        Margin="0,4,0,0" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>
                    <!--<MenuFlyoutSeparator />-->
                    <MenuFlyoutItem x:Name="GameIDTextBlock"
                                    Text="ID: Loading..." IsEnabled="False">
                        <MenuFlyoutItem.Icon>
                            <SymbolIcon Symbol="Placeholder"
                                        Margin="0,4,0,0" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>
                </MenuFlyout>
            </Button.Flyout>
        </Button>
        <StackPanel x:Name="PlayerProfileStackPanel"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <Grid Height="96"
                  Width="96">
                <TextBlock Text="?"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="42"
                           FontWeight="Bold" />
                <Ellipse x:Name="PlayerPhotoEllipse"
                         Height="86"
                         Width="86"
                         Stroke="White"
                         StrokeThickness="1.5">
                    <Ellipse.Fill>
                        <ImageBrush>
                            <ImageBrush.ImageSource>
                                <BitmapImage x:Name="PlayerPhotoBitmapImage"
                                             DecodePixelHeight="108"
                                             DecodePixelType="Logical" />
                            </ImageBrush.ImageSource>
                        </ImageBrush>
                    </Ellipse.Fill>
                </Ellipse>
            </Grid>
            <TextBlock x:Name="PersonNameTextBlock"
                       FontSize="18"
                       HorizontalAlignment="Center"
                       Text="Loading..."
                       CharacterSpacing="64"
                       FontWeight="Bold"
                       Margin="4"
                       Opacity="0.9" />
        </StackPanel>
        <Pivot x:Name="MatchesPivot"
               Grid.Row="1">
            <Pivot.HeaderTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" FontSize="20" FontWeight="Bold"/>
                </DataTemplate>
            </Pivot.HeaderTemplate>
            <PivotItem Header="OVERVIEW">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="360" />
                            <ColumnDefinition Width="0" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="2">
                            <Rectangle Fill="{ThemeResource APPLICATION_BK}"
                                       Width="8"
                                       HorizontalAlignment="Left" />
                        </Border>
                        <Rectangle Grid.Column="2"
                                   Width="28"
                                   Fill="{ThemeResource APPLICATION_BK}"
                                   HorizontalAlignment="Left"
                                   Margin="0,-12" />
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal"
                                        Margin="0,4,0,0">
                                <TextBlock FontFamily="Segoe MDL2 Assets"
                                           Text="&#xEB05;"
                                           FontWeight="Bold"
                                           FontSize="16"
                                           VerticalAlignment="Center"
                                           Margin="16,2,4,0" />
                                <TextBlock Grid.Column="3"
                                           Grid.Row="0"
                                           Text="Win Rate"
                                           FontWeight="Medium"
                                           FontSize="18"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center" />
                            </StackPanel>

