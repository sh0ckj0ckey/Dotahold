<Page
    x:Class="OpenDota_UWP.Views.ItemsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OpenDota_UWP.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:animations="using:Microsoft.Toolkit.Uwp.UI.Animations" 
    xmlns:models="using:OpenDota_UWP.Models">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ThemeResource/ThemeDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Page.Transitions>
        <TransitionCollection>
            <NavigationThemeTransition x:Name="navigationTransition">
                <EntranceNavigationTransitionInfo />
            </NavigationThemeTransition>
        </TransitionCollection>
    </Page.Transitions>
    <Grid Background="{ThemeResource RegionBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="480" />
            <ColumnDefinition Width="1.5*" />
        </Grid.ColumnDefinitions>
        <Rectangle Grid.ColumnSpan="2">
            <Rectangle.Fill>
                <AcrylicBrush TintColor="{ThemeResource RegionColor}"
                              TintOpacity="0.8"
                              BackgroundSource="HostBackdrop" />
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle Grid.Column="0"
                   Fill="{ThemeResource RegionBrush}"
                   Opacity="0.5" />
        <GridView x:Name="ItemsGridView"
                  ItemsSource="{x:Bind VM.vAllItems}">
            <GridView.ItemTemplate>
                <DataTemplate x:DataType="models:DotaItemModel">
                    <Grid>
                        <Image Source="{x:Bind img}" Height="36"/>
                    </Grid>
                </DataTemplate>
            </GridView.ItemTemplate>
            <!--<ListView.ItemTemplate>
                <DataTemplate x:DataType="models:DotaItems">
                    <Grid Height="64">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="64" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Rectangle Height="48">
                            <Rectangle.Fill>
                                <ImageBrush>
                                    <ImageBrush.ImageSource>
                                        <BitmapImage UriSource="{x:Bind Pic}"
                                                             DecodePixelHeight="48"
                                                             DecodePixelType="Logical" />
                                    </ImageBrush.ImageSource>
                                </ImageBrush>
                            </Rectangle.Fill>
                        </Rectangle>
                        <TextBlock Grid.Column="1"
                                           Text="{x:Bind Name}"
                                           VerticalAlignment="Center"
                                           FontFamily="STKaiti"
                                           FontSize="21"
                                           FontWeight="Light"
                                           Margin="12" />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>-->
        </GridView>
        <StackPanel x:Name="ProgressStackPanel"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <ProgressRing x:Name="ItemProgressRing"
                          Height="48"
                          Width="48"
                          IsActive="False"
                          Margin="0,16" />
            <TextBlock x:Name="NetworkSlowTextBlock"
                       Text="An error occurred while connecting to the server"
                       FontSize="12"
                       FontWeight="Light"
                       Opacity="0.7"
                       Visibility="Collapsed" />
        </StackPanel>
        <controls:DropShadowPanel Grid.Column="1"
                                  BlurRadius="10"
                                  Color="Black">
            <Rectangle Fill="{ThemeResource RegionBrush}"
                       Width="8"
                       HorizontalAlignment="Left" />
        </controls:DropShadowPanel>
        <Rectangle Grid.Column="1"
                   Fill="{ThemeResource RegionBrush}"
                   Stretch="UniformToFill" />
        <Image Grid.Column="1"
               x:Name="ItemPicture"
               Height="92"
               Opacity="0.6"
               Source="{ThemeResource LogoImage}" />
        <Frame Grid.Column="1"
               x:Name="ItemFrame" />
    </Grid>
</Page>
